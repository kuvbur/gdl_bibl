rn"ended":	if NSP>0 then tt = max(GET(NSP))	HOTSPOT2 pos_x1,r_arm, unID, ang_ended1, 6: unID=unID+1	HOTSPOT2 pos_x1+0.9*l_ended,0, unID, ang_ended1, 4: unID=unID+1	HOTSPOT2 pos_x1+0.9*l_ended*COS(ang_ended1), r_arm+0.9*l_ended*SIN(ang_ended1), unID,ang_ended1, 5: unID=unID+1	if show_arm = 1 then		put pos_x1,r_arm,600+sn	else		if ang_ended1<EPS then			put pos_x1,0,600+sn		else			put pos_x1,diam_arm,600+sn		endif	endif	put l_ended,ang_ended1,200+sn	frame_fill = 1+2	POLY2_ NSP/3, frame_fill,GET(NSP)	HOTSPOT2 r_arm,pos_y, unID, ang_ended2, 6: unID=unID+1	HOTSPOT2 r_arm+0.9*l_ended,0, unID, ang_ended2, 4: unID=unID+1	HOTSPOT2 r_arm+0.9*l_ended*COS(ang_ended2),pos_y+0.9*l_ended*SIN(ang_ended2), unID,ang_ended2, 5: unID=unID+1	if show_arm = 1 then		put r_arm,pos_y,600+sn	else		if ang_ended2-45>EPS then			put 0,pos_y,600+sn		else			put diam_arm,pos_y,600+sn		endif	endif	put l_ended,ang_ended2,200+sn	frame_fill = 1+2	POLY2_ NSP/3, frame_fill,GET(NSP)return