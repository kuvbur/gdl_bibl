model solidhotspot -size/2,-size/2,0hotspot size/2,-size/2,0hotspot size/2,size/2,0hotspot -size/2,size/2,0e = lengthlength = length - razbmaterial gs_ifc_matif seriaSV<>"Индивидуальная" then	if razb>EPS and show_razb then		pmat = 0		bSucceed = request{2} ("Building_Material_info", mat_razb, "gs_bmat_surface", pmat)		group "razb"			building_material mat_razb			SECT_ATTRS{2} 1, line_razb			MODEL SURFACE			addz razb			rotx 180			cprism_ mat,mat,mat,				5,razb,				-size/2,-size/2,15,				size/2,-size/2,15,				size/2,size/2,15,				-size/2,size/2,15,				-size/2,-size/2,-1		endgroup		placegroup "razb"	endif	pmat = 0	bSucceed = request{2} ("Building_Material_info", mat, "gs_bmat_surface", pmat)	group "A"	MODEL SOLID	building_material mat	SECT_ATTRS{2} gs_sec_pen, 1	addz -length	rotx 180	pyramid 4,h1,21,		-size/2,-size/2,0,		size/2,-size/2,0,		size/2,size/2,0,		-size/2,size/2,0	endgroup	group "B"	MODEL SOLID	addz -length	building_material mat	cprism_ pmat,pmat,pmat,		5,length,		-size/2,-size/2,15,		size/2,-size/2,15,		size/2,size/2,15,		-size/2,size/2,15,		-size/2,-size/2,-1	endgroup	placegroup addgroup ("A","B")else	MODEL SOLID	building_material mat	SECT_ATTRS{2} gs_sec_pen, 1	rotx 180		CYLIND length, size/2endiflength = e