!gosub "set_3d"show_3d_hotspot_t = 1if GLOB_PREVIEW_MODE<>0 or GLOB_FEEDBACK_MODE=1 then show_3d_hotspot_t = 0group "body"	gosub "set_form"	gosub "set_path"	mask = 1+2+32+16	addx -dh	hotspot 0,0,0, unID : unID = unID + 1	TUBE n_form, n_path, mask, USE(n_form*3+n_path*4)	del topendgrouphotspot 0,0,0, unID : unID = unID + 1addz sk_r_zhotspot 0,0,0, unID : unID = unID + 1if sk_r_c<EPS then 	for i=1 to sk_r_qty		add 0, db/2, h		hotspot 0,0,0		placegroup "body"		del 1		db = -db		h = h + shag_z	next iendifif sk_r_c>EPS then 	h = 0	rotz sk_add_angle	if sk_mirr then ang = -ang	for i=1 to sk_r_qty		add sk_r_c * cos(ang), sk_r_c * sin(ang), h		rotz ang		hotspot 0,0,0		placegroup "body"		del 2		ang = -ang		h = h + shag_z	next iendifif NSP>0 then tt = max(get(NSP))end"set_3d":	show_subpos=1 : show_marker=1	call "Показ_по_сборкам" PARAMETERS ALL subpos=subpos, pos=pos RETURNED_PARAMETERS show_subpos, show_marker	if not(show_subpos) then end	building_material sk_mat	pen gs_cont_pen	sect_attrs{2} gs_cont_penreturn"set_form":	arm_diam = 16/1000	n_form = 0	tstart = NSP	put 0,0,900+15	put arm_diam/2,360,4000+15	tend = NSP	n_form = (tend - tstart)/3return"set_path":	n_path = 0	tstart = NSP	put hh+1, bb/2, 0, 0	put hh, bb/2, 0, 0	put 0, bb/2, 0, 0	put 0, -bb/2, 0, 0	put hh, -bb/2, 0, 0	put hh+1, -bb/2, 0, 0	tend = NSP	n_path = (tend - tstart)/4return