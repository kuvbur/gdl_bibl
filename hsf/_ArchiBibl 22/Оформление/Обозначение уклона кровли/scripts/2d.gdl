TEXTBLOCK "uklon" 0, t_priv_1, angl, 1, 1, 1, ukl_txtpen gs_cont_penHOTSPOT2 0, 0, unID: unID=unID+1HOTSPOT2 0, pos_y, unID, pos_x, 1+128: unID=unID+1HOTSPOT2 -1, pos_y, unID, pos_x, 3: unID=unID+1HOTSPOT2 pos_x, pos_y, unID, pos_x, 2: unID=unID+1HOTSPOT2 pos_x, 0, unID, pos_y, 1+128: unID=unID+1HOTSPOT2 pos_x, -1, unID, pos_y, 3: unID=unID+1HOTSPOT2 pos_x, pos_y, unID, pos_y, 2: unID=unID+1if GLOB_ID = "-" then	RICHTEXT2 pos_x/2, pos_y/2, "uklon"	RICHTEXT2 pos_x/2, pos_y/2, "otm"	text2 0, 0, "абс.верх " + str("%.3", otm_verh)	text2 pos_x, pos_y, "абс.низ " + str("%.3", otm_niz)	text2 pos_x, pos_y-0.5, "перепад " + str("%.3", pos_z)	LINE2 0,0,pos_x,pos_y	HOTLINE2 0,0,pos_x,pos_y	rot2 angl	addx b*2	b = 0.7 : s1 = 0.6 : s2 = 0.1 : zn = SGN(pos_z)	line2 b * u * zn, 0, b * s1 * u * zn, b * s2	line2 b * u * zn, 0, b * s1 * u * zn, -b * s2	del 1else	if type_obozn = "Пола" then		add2 pos_x/2, pos_y/2		rot2 angl		SET STYLE "Пола"		HOTSPOT2 0, 0, unID: unID=unID+1		HOTSPOT2 pos_obozn_x, 0, unID, pos_obozn_y, 1+128: unID=unID+1		HOTSPOT2 pos_obozn_x, pos_obozn_y, unID, pos_obozn_y, 2: unID=unID+1		HOTSPOT2 0, pos_obozn_y, unID, pos_obozn_x, 1+128: unID=unID+1		HOTSPOT2 pos_obozn_x, pos_obozn_y, unID, pos_obozn_x, 2: unID=unID+1		add2 pos_obozn_x, pos_obozn_y		text2 0,0,ukl_txt		b = min(0.7,l_skat_2d*0.5)		line2 -b,0,b,0		s1 = 0.6: s2 = 0.1 : zn = -SGN(pos_z)		line2 -b * u * zn, 0, -b * s1 * u * zn, b * s2		line2 -b * u * zn, 0, -b * s1 * u * zn, -b * s2		del 3 : gosub "otm"	endif		if type_obozn = "Кровли" then		add2 pos_x/2, pos_y/2		rot2 angl		SET STYLE "Пола"		HOTSPOT2 0, 0, unID: unID=unID+1		HOTSPOT2 pos_obozn_x, 0, unID, pos_obozn_y, 1+128: unID=unID+1		HOTSPOT2 pos_obozn_x, pos_obozn_y, unID, pos_obozn_y, 2: unID=unID+1		HOTSPOT2 0, pos_obozn_y, unID, pos_obozn_x, 1+128: unID=unID+1		HOTSPOT2 pos_obozn_x, pos_obozn_y, unID, pos_obozn_x, 2: unID=unID+1		add2 pos_obozn_x, pos_obozn_y		text2 0,0,ukl_txt		b = min(0.7,l_skat_2d*0.5)		line2 -b,0,b,0		s1 = 0.6: s2 = 0.1 : zn = -SGN(pos_z)		line2 -b * u * zn, 0, -b * s1 * u * zn, b * s2		line2 -b * u * zn, 0, -b * s1 * u * zn, -b * s2		del 3 : gosub "otm"		if abs(pos_y)<EPS then			pen 41			line2 0,0,-l_skat_2d * u,pos_z			hotline2 0,0,-l_skat_2d * u,pos_z			pen 1			fill gs_fill_type			POLY2 4, 2+4, 0,0,						0,-b*0.3,						-l_skat_2d * u,pos_z-b*0.3,						-l_skat_2d * u,pos_z		endif		if abs(pos_x)<EPS then			pen 41			line2 0,0,-pos_z,-l_skat_2d * u			hotline2 0,0,-pos_z,-l_skat_2d * u			pen 1			fill gs_fill_type			POLY2 4, 2+4, 0,0,						b*0.3,0,						-pos_z+b*0.3,-l_skat_2d * u,						-pos_z,-l_skat_2d * u		endif	endif		if type_obozn = "Разреза" then!		line2 0,0,pos_x,pos_y		hotline2 0,0,pos_x,pos_y		add2 pos_x/2, pos_y/2		rot2 angl		SET STYLE "Разреза"		HOTSPOT2 0, 0, unID: unID=unID+1		HOTSPOT2 pos_obozn_x, 0, unID, pos_obozn_y, 1+128: unID=unID+1		HOTSPOT2 pos_obozn_x, pos_obozn_y, unID, pos_obozn_y, 2: unID=unID+1		HOTSPOT2 0, pos_obozn_y, unID, pos_obozn_x, 1+128: unID=unID+1		HOTSPOT2 pos_obozn_x, pos_obozn_y, unID, pos_obozn_x, 2: unID=unID+1		add2 pos_obozn_x, pos_obozn_y		text2 0.2,-0.1,ukl_txt		b = 0.2		s1 = 0.1: s2 = 0.1		add2 (-stw(ukl_txt) / 2000 * GLOB_SCALE) -  b * s1 * SGN(uk_deg), 0		line2 b * SGN(uk_deg) * u, 0, b * s1 * SGN(uk_deg) * u, b		line2 b * SGN(uk_deg) * u, 0, b * s1 * SGN(uk_deg) * u, 0	endifendifend"otm":	if dop_option = "Отметку низа" then		if tipe_r = 1 then otm = pos_y + SYMB_POS_Y		if tipe_r = 0 then otm = pos_z + SYMB_POS_Z		if abs(otm) < EPS then az = "0.000" else az = str("%.3", abs(otm))		if otm+EPS < EPS  then znak1 = "-"		if abs(otm) > EPS then znak1 = "+"		if abs(otm) < EPS then znak1 = ""		otm_txt = znak1 + az		text2 pos_x, pos_y, otm_txt	endif	if dop_option = "Отметку верха" then		if tipe_r = 1 then otm = SYMB_POS_Y		if tipe_r = 0 then otm = SYMB_POS_Z		if abs(otm) < EPS then az = "0.000" else az = str("%.3", abs(otm))		if otm+EPS < EPS  then znak1 = "-"		if abs(otm) > EPS then znak1 = "+"		if abs(otm) < EPS then znak1 = ""		otm_txt = znak1 + az		text2 0, 0, otm_txt	endif	if dop_option = "Отметку низа и верха" then		if tipe_r = 1 then otm = pos_y + SYMB_POS_Y		if tipe_r = 0 then otm = pos_z + SYMB_POS_Z		if abs(otm) < EPS then az = "0.000" else az = str("%.3", abs(otm))		if otm+EPS < EPS  then znak1 = "-"		if abs(otm) > EPS then znak1 = "+"		if abs(otm) < EPS then znak1 = ""		otm_txt = znak1 + az		text2 pos_x, pos_y, otm_txt		if tipe_r = 1 then otm = SYMB_POS_Y		if tipe_r = 0 then otm = SYMB_POS_Z		if abs(otm) < EPS then az = "0.000" else az = str("%.3", abs(otm))		if otm+EPS < EPS  then znak1 = "-"		if abs(otm) > EPS then znak1 = "+"		if abs(otm) < EPS then znak1 = ""		otm_txt = znak1 + az		text2 0, 0, otm_txt	endifreturn