! Hex Bolt MetricbCond = abs(yRot_r) < EPS if not(bCond) then endgosub 100    ! Hotspotsif show_type<>SHOW_3D then endIF W_axis THEN	!!! ДЕЛАМ ОСЬ+++	LINE_TYPE LT	PEN FP	IF W_axis THEN LINE2 -wid,0, lenB+wid,0ENDIFLINE_TYPE 1PEN gs_cont_pen!!! ДЕЛАМ БОЛТ - ПОКАЗ РЕЗЬБЫ+++!IF show_hole2D THEN!	Line2 LR3,-diaB/2+bolt_tpi, LR2,-diaB/2+bolt_tpi !	Line2 LR3, diaB/2-bolt_tpi, LR2, diaB/2-bolt_tpi!ENDIFif nPos<lenB - wash_thk_end - nut_thk_end then 	Line2 LR,-diaB/2+bolt_tpi, lenB+bolt_tpi,-diaB/2+bolt_tpi 	Line2 LR, diaB/2-bolt_tpi, lenB+bolt_tpi, diaB/2-bolt_tpi	Line2 lenB,-diaB/2, lenB+bolt_tpi,-diaB/2+bolt_tpi 	Line2 lenB, diaB/2, lenB+bolt_tpi, diaB/2-bolt_tpi	Line2 lenB+bolt_tpi, diaB/2-bolt_tpi, lenB+bolt_tpi, -diaB/2+bolt_tpiendif!!! ДЕЛАМ ШПИЛЬКУIF is_stud THEN	Line2 LR4,-diaB/2+bolt_tpi, -bolt_tpi,-diaB/2+bolt_tpi 	Line2 LR4, diaB/2-bolt_tpi, -bolt_tpi, diaB/2-bolt_tpi	Line2 0,-diaB/2, -bolt_tpi,-diaB/2+bolt_tpi 	Line2 0, diaB/2, -bolt_tpi, diaB/2-bolt_tpi	Line2 -bolt_tpi, diaB/2-bolt_tpi, -bolt_tpi, -diaB/2+bolt_tpiENDIFend ! -------------------------------------------100 : !!! ========== Hotspots ==========	!!! ----- Length -----	hotspot2  0  , 0, uid, lenB, 1+256 : uid = uid+1    ! base (anchor)	hotspot2 -1  , 0, uid, lenB, 3     : uid = uid+1    ! ref	hotspot2  lenB, 0, uid, lenB, 2     : uid = uid+1    ! moving	!!! ----- Nut Position -----	hotspot2  0   , 0, uid, nPos, 1 : uid = uid+1    ! base 	hotspot2 -1   , 0, uid, nPos, 3 : uid = uid+1    ! ref	hotspot2  nPos, 0, uid, nPos, 2 : uid = uid+1    ! moving	hotspot2  wash_thk_start,0	hotspot2  wash_thk_end+nPos,0	IF is_stud  THEN		!!! ШПИЛЬКА		ADD2 wash_thk_start,0			hotspot2  0   , 0, uid, POS_2, 1 : uid = uid+1    ! base 			hotspot2 -1   , 0, uid, POS_2, 3 : uid = uid+1    ! ref			hotspot2  POS_2, 0, uid, POS_2, 2 : uid = uid+1    ! moving		DEL 1				!!!+++++ ЗАЗОР М/У ГАЙКАМИ +++++		ADD2 wash_thk+POS_2,0		hotspot2  0, DIAB, uid, LZ, 1+128 