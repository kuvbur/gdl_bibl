st,dst,0,!					0,dst,0,!					0,0,0,!!					GET(nsp)!			ELSE!!				!!! Curved Resolution!				S=90/gs_resol!				FOR k=0 TO 90 STEP S!					PUT 0-wt-rr+rr*sin(k),dst-ft-rr+rr*cos(k),1!				NEXT k!				FOR k=90 TO 180 STEP S!					PUT 0-wt-rr+rr*sin(k),ft+rr+rr*cos(k),1!				NEXT k!!!				FOR i=-1 TO TempArcResol+1 STEP 1!					PUT ArcRadius*COS(ArcAngle*i/TempArcResol)!					PUT ArcRadius*SIN(ArcAngle*i/TempArcResol)!					PUT 0!					PUT 0!				NEXT i!!				!!! *** Flange Inside!				TUBE 6+(NSP-4*(TempArcResol+3))/3,TempArcResol+3,1+2+16+32,!					0,0,0,!					0,dst,0,!					-wst,dst,0,!					-wst,dst-ft,0,!					GET((NSP-4*(TempArcResol+3))/2),!					GET((NSP-4*(TempArcResol+3))),!					-wst,ft,0,!					-wst,0,0,!!					GET(nsp)!!		ENDIF!!!ENDIFunID=1!!! ARC ANGLEHOTSPOT 0,0,dst/2,unID,ArcAngle,6 : unID=unID+1HOTSPOT (ArcRadius),0,dst/2,unID,ArcAngle,4+256 : unID=unID+1HOTSPOT (ArcRadius)*cos(ArcAngle),(ArcRadius)*sin(ArcAngle),dst/2,unID,ArcAngle,5 : unID=unID+1!!! Htps at sectionFOR kk=1 to 2	ADDx tempArcRadius		HOTSPOT -wst/2,0,0,unID : unID=unID+1		HOTSPOT wst/2,0,0,unID : unID=unID+1!		HOTSPOT 0,0,ZZYZX,unID : unID=unID+1		HOTSPOT -wst/2,0,ZZYZX,unID : unID=unID+1		HOTSPOT wst/2,0,ZZYZX,unID : unID=unID+1	DEL 1	ROTz ArcAngleNEXT kkDEL 2!!!LENGHTHOTSPOT 0,0,0,unID,ArcRadius,1+256 : unID=unID+1HOTSPOT ArcRadius,0,0,unID,ArcRadius, 2 : unID=unID+1HOTSPOT -1,0,0,unID,ArcRadius,3 : unID=unID+1ROTz ArcAngle	HOTSPOT 0,0,0,unID,ArcRadius,1+256 : unID=unID+1	HOTSPOT ArcRadius,0,0,unID,ArcRadius, 2 : unID=unID+1	HOTSPOT -1,0,0,unID,ArcRadius,3 : unID=unID+1DEL 1IF gs_stationary = `По центру` THEN DEL 1IF gs_stationary = `Вверху` THEN DEL 1