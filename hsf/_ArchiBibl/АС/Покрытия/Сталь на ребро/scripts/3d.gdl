rotx xxSET MATERIAL gs_ifc_matSHADOW OFFMODEL SURFACEgosub "set_show_3d"if not(show) or det_lvl_3d=0 then endhotspot 0,0,0hotspot A,0,0hotspot A,B,0hotspot 0,B,0hotspot 0,0,-hhotspot A,0,-hhotspot A,B,-hhotspot 0,B,-hplane 4, 0,0,0, A,0,0, A,0,-h, 0,0,-hif det_lvl_3d=2 then	for i = t1 to B-0.01 step t1		plane 4, 0,i,0, A,i,0, A,i,-h, 0,i,-h	next ielse	plane 4, 0,0,0, A,0,0, A, B, 0, 0,B,0endifplane 4, 0,B,0, A,B,0, A,B,-h, 0,B,-hplane 4, 0,0,0, 0,B,0, 0,B,-h, 0,0,-hif det_lvl_3d=2 then	for i = q1 to A-0.01 step q1		plane 4, i,0,0, i,B,0, i,B,-h*0.5, i,0,-h*0.5	next iendifplane 4, A,0,0, A,B,0, A,B,-h, A,0,-hend"set_show_3d":	show = 1	call "Показ_по_сборкам" PARAMETERS ALL subpos=subpos, pos=GLOB_ID RETURNED_PARAMETERS show_subpos, show_marker	if show=1 then show = show_subposif type_pokr = "Пресснастил" then	if show then		success = LIBRARYGLOBAL ("Libraryflobals-km", "show_metall", show_metall)		if not(show_metall) then show = 0	endif	success = LIBRARYGLOBAL ("Libraryflobals-km", "ignore_id", ignore_id)	success = LIBRARYGLOBAL ("Libraryflobals-km", "show_ingore", show_ingore)	show_spec = 0 : IF STRSTR (GLOB_ID, ignore_id, 1) > 0 THEN show_spec = 1	if not(show_ingore) and show_spec then show = 0	success = LIBRARYGLOBAL ("Libraryflobals-km", "gs_detlevel_3D", gs_detlevel_3D)	IF gs_detlevel_3D=`Простой` then		det_lvl_2d = 1		det_lvl_3d = 1	endif	IF gs_detlevel_3D=`Детальный` THEN		det_lvl_2d = 2		det_lvl_3d = 2	endif	IF gs_detlevel_3D=`Откл` THEN		det_lvl_2d = 2		det_lvl_3d = 0	endifelse		det_lvl_2d = 2		det_lvl_3d = 2endifreturn