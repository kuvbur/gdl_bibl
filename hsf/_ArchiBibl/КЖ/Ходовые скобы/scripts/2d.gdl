PAPER_TO_MODEL = GLOB_SCALE / 1000if GLOB_PREVIEW_MODE<>0 or GLOB_FEEDBACK_MODE=1 then show_2d_hotspot = 0gosub "set_2d"hotspot2 0,0if sk_r_c>EPS then	rot2 sk_add_angle	if sk_mirr then ang = -ang	for i=1 to 2		add2 sk_r_c * cos(ang), sk_r_c * sin(ang)		rot2 ang		gosub "body_2d"		del 2		ang = -ang		h = h + shag_z	next iendifif sk_r_c<EPS then 	if sk_mirr then db = -db	for i=1 to 2		add2 0, db/2		hotspot2 0,0		gosub "body_2d"		del 1		db = -db	next iendifif NSP>0 then tt = max(get(NSP))end"set_2d":	show_subpos=1 : show_marker=1	call "Показ_по_сборкам" PARAMETERS ALL subpos=subpos, pos=pos RETURNED_PARAMETERS show_subpos, show_marker	if not(show_subpos) then end	building_material sk_mat	pen gs_cont_pen	sect_attrs{2} gs_cont_penreturn"body_2d":	hotspot2 0,0,unID : unID=unID+1	add2 -dh,0	hotspot2 0,0	put dh, bb/2	put 0, bb/2	put 0, -bb/2	put dh, -bb/2	POLY2 NSP/2, 1, get(NSP)	del 1return