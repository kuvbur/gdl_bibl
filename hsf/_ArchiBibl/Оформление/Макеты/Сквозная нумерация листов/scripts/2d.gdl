hen	!---------------------- Поиск изм. 0 ------------------------		zero_change_inx = 0 : flag = 0	for i = 1 to last_change_inx		if STRSTR(LayoutChangeHistory[i][ROW_PHASE_PART], "Изм 0") and flag=0 then			zero_change_inx = i			flag = 1		endif	next iendifif zero_change_inx then	phase_part = LayoutChangeHistory[zero_change_inx][ROW_PHASE_PART]	current_phase = "" : current_part = "" : current_type = "" : current_nizm = 0	n = SPLIT (phase_part, "%s %s %s %n", current_phase, current_part, current_type, current_nizm)	n = SPLIT (LayoutChangeHistory[zero_change_inx][ROW_FIRST_N_SHEET], "%n", first_N_sheet)endifn1= SPLIT (homeDBUserId, "%n", curren_ID)n_lch = first_N_sheet + curren_ID - 1if strstr(current_phase,"Р")=0 then 	text2 0, 0, n_lch	pen 1	if is_ram then RECT2 0.002,0.002, -0.01+0.002, -0.007+0.002endif