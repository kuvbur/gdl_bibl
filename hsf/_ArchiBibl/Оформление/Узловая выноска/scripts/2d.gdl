if not(otobr) then end! ==============================================================================! Oriented View! ==============================================================================_angleViewRot = 0rrr = REQUEST ("View_Rotangle", "", _angleViewRot)DEFINE STYLE{2} "stl" AC_TextFont_1, AC_TextSize_1, AC_TextStyle_1tblockname = ""name_style = "stl"width_factor = AC_TextCharWidthFactor_1charspace_factor = AC_TextCharSpaceFactor_1paper_scale = GLOB_SCALE/1000unID=0if name_type = "Исходный ID" then	draw_name = AC_MarkerText_1endifif name_type = "Ссылочный ID" then	draw_name = "<MARKERDRAWINGNUMBER_R>" + AC_DrawingGUIDendifdim type_drw[]	type_drw[1] = "АР"	type_drw[2] = "АС"	type_drw[3] = "КР"	type_drw[4] = "КЖ"	type_drw[5] = "КМ"	type_drw[6] = "ОВ"	type_drw[7] = "ТХ"	type_drw[8] = "ЭМ"	type_drw[9] = "ТС"	type_drw[10] = "АТХ"pos_dot = strstr(draw_name, ".")if pos_dot>0 then	for j=1 to vardim1(type_drw)		if strstr(draw_name, type_drw[j])>0 then			p1 = strsub(draw_name, pos_dot+1, strlen(draw_name))			if strstr(p1, type_drw[j])>0 then				draw_name = strsub(draw_name, 1, pos_dot-1)			else				draw_name = p1			endif			j = vardim1(type_drw)		endif	next jendifif strlen(draw_num)=0 and strlen("<MARKERSHEETNUMBER_R>" + AC_DrawingGUID) = 79 then	draw_num = "<MARKERSHEETNUMBER_R>" + AC_DrawingGUIDendifif strlen(draw_num)>0 then draw_num = " (" + draw_num + ")"if strlen(draw_adress)=0 then 	f_string = draw_name + draw_num 	s_string = ""else	f_string = draw_name	s_string =  draw_adress + draw_num endifanchor = 5txtv = f_string : tblockname = "f_string" : gosub "get_block"tbwidth_s = tbwidth : tbheight_s = tbheight : dx_s = dxtxtv = s_string  : tblockname = "s_string" : gosub "get_block"tbwidth_f = tbwidth : tbheight_f = tbheight : dx_f = dxif (STRSTR(f_string, "<")>0 and STRSTR(f_string, ">")>0) or (STRSTR(s_string, "<")>0 and STRSTR(s_string, ">")>0) then	if strlen(draw_adress)=0 then 		f_string_dummy = "00"		if strlen(draw_num)>0 then f_string_dummy = f_string_dummy + " (100)"		s_string_dummy = ""	else		f_string_dummy = "000"		s_string_dummy = draw_adress		if strlen(draw_num)>0 then s_string_dummy  = s_string_dummy + " (100)"	endif	txtv = f_string_dummy : tblockname = "f_string_dummy" : gosub "get_block"	tbwidth_s = tbwidth	txtv = s_string_dummy : tblockname = "s_string_dummy" : gosub "get_block"	tbwidth_f = tbwidthendifrot2 SYMB_ROTANGLE * (SYMB_MIRRORED - not(SYMB_MIRRORED))add2 RefCoord_X, RefCoord_Yrot2 -_angleViewRot mod 360ex = ex_mm*paper_scaleey = ey_mm*paper_scaleHOTSPOT2 0,ey, unID, ex, 1+128+1024,ex_mm: unID=unID+1HOTSPOT2 ex, ey, unID, ex, 2+1024,ex_mm: unID=unID+1HOTSPOT2 -1,ey, unID, ex, 3+1024,ex_mm: unID=unID+1HOTSPOT2 ex,0, unID, ey, 1+128+1024,ey_mm: unID=unID+1HOTSPOT2 ex, ey, unID, ey, 2+1024,ey_mm: unID=unID+1HOTSPOT2 ex,-1, unID, ey, 3+1024,ey_mm: unID=unID+1Xo = 0Yo = 0! Редактируемые узловые точки фигурыHOTSPOT2 Xo, Yo+Oval_Y, unID, Oval_X, 1+128 : unID=unID+1HOTSPOT2 Xo+Oval_X, Yo+Oval_Y, unID, Oval_X, 2 : unID=unID+1HOTSPOT2 Xo-0.1, Yo+Oval_Y, unID, Oval_X, 3 : unID=unID+1HOTSPOT2 Xo+Oval_X, Yo, unID, Oval_Y, 1+128 : unID=unID+1HOTSPOT2 Xo+Oval_X, Yo+Oval_Y, unID, Oval_Y, 2 : unID=unID+1HOTSPOT2 Xo+Oval_X, Yo-0.1, unID, Oval_Y, 3 : unID=unID+1!!<-Конец: Отрисовка фигуры->!<-Начало: Отрисовка фигуры->! ВычисленияR=min(abs(Oval_X), abs(Oval_Y))L=max(abs(Oval_X), abs(Oval_Y))-Rif L/(L+R)<0.3 then	R=R+L	L=0	Oval_X=R*abs(Oval_X)/Oval_X	Oval_Y=R*abs(Oval_Y)/Oval_Yendif! Отрисовкаif abs(Oval_X)>=abs(Oval_Y) then	! горизонтальная фигура	ARC2 Xo+L, Yo, R, -90, 90	LINE2 Xo+L, Yo-R, Xo-L, Yo-R	LINE2 Xo+L, Yo+R, Xo-L, Yo+R	ARC2 Xo-L, Yo, R, 90, -90else								! вертикальная фигура	ARC2 Xo, Yo+L, R, 0, 180	LINE2 Xo-R, Yo+L, Xo-R, Yo-L	LINE2 Xo+R, Yo+L, Xo+R, Yo-L	ARC2 Xo, Yo-L, R, 180, 0endif!!<-Начало: Отрисовка линии выноски->!! Вычисленияif abs(ex)>EPS then k=ey/ex else k=0c=ey*Xo-Yo*exif abs(Oval_X)>abs(Oval_Y) then	if ey>0 then Yp=R else Yp=-R	Xp=(Yp-c)/k	if Xp<L and Xp>-L then goto 10else	if ex>0 then Xp=R else Xp=-R	Yp=k*Xp+c	if Yp<L and Yp>-L then goto 10endifif ey>0 then Yarc=Yo+L	else Yarc=Yo-L		! ищем пересечение с правой либо с левой окружностьюif ex>0 then Xarc=Xo+L else Xarc=Xo-L			! ищем пересечение с верхней либо с нижней окружностьюif abs(Oval_X)>abs(Oval_Y) then Yarc=0 else Xarc=0	! горизонтальная либо вертикальная фигураa=k^2+1b=2*(k*c-k*Yarc-Xarc)e=Xarc^2+c^2-2*c*Yarc+Yarc^2-R^2D=(b^2-4*a*e)if D<=0 then	! нет пересечения	if abs(Oval_X)>abs(Oval_Y) then		if ey>0 then Yp=R else Yp=-R		Xp=(Yp-c)/k	else		if ex>0 then Xp=R else Xp=-R	endifelse	if ex>0 then Xp=(-b+sqr(D))/(2*a) else Xp=(-b-sqr(D))/(2*a)endifYp=k*Xp+c! Отрисовка10: LINE2 Xp, Yp, ex, ey!<-Конец: Отрисовка линии выноски->add2 ex, eykk = 1if ex<EPS then kk = -1mul2 kk,1line_s = max(tbwidth_s, tbwidth_f)line_s_dx = line_s_dx_mm*paper_scaleHOTSPOT2 line_s, 0, unID, line_s_dx, 1+128+1024,line_s_dx_mm: unID=unID+1HOTSPOT2 line_s+line_s_dx, 0, unID, line_s_dx, 2+1024,line_s_dx_mm: unID=unID+1HOTSPOT2 -1,0, unID, line_s_dx, 3+1024,line_s_dx_mm: unID=unID+1line2 0,0,line_s+line_s_dx,0RICHTEXT2 (line_s+line_s_dx)/2, 0.5*tbheight_f-dx, "f_string"RICHTEXT2 (line_s+line_s_dx)/2, -(0.5*tbheight_s-2*dx), "s_string"end"get_block":	paragraph tblockname+"p" 2,			0, 0, 0,			1			style name_style			txtv	endparagraph	TEXTBLOCK tblockname 0, anchor, 0, width_factor, charspace_factor, 1,tblockname+"p"	n = REQUEST("TEXTBLOCK_INFO", tblockname, width, height)	tbwidth = width * paper_scale	tbheight = height * paper_scale	sss=request("Height_of_style", name_style, height, descent, leading)	dx = (height/2-descent-leading-AC_TextSize_1/2)*paper_scale*0.5return