if GLOB_STRUCTURE_DISPLAY=0 then	skr1=""	skr2=""endifif GLOB_STRUCTURE_DISPLAY=1 then	skr1="Отделка"	skr2="Другая"endifif GLOB_STRUCTURE_DISPLAY=2 then	skr1="Отделка"	skr2=""endifdel topgroup "pol"	rotz -SYMB_ROTANGLE	for i=1 to k_otr_pl		put otr_pl[i][1],otr_pl[i][2]		hotspot otr_pl[i][1],otr_pl[i][2],0,i		hotspot otr_pl[i][1],otr_pl[i][2],h_pirog,unID:unID=unID+1		hotline otr_pl[i][1],otr_pl[i][2],0,otr_pl[i][3],otr_pl[i][4],0,unID:unID=unID+1		hotline otr_pl[i][1],otr_pl[i][2],h_pirog,otr_pl[i][3],otr_pl[i][4],h_pirog,unID:unID=unID+1	next i	for i=n_sloi to 1 step -1		if pokaz[i]<>skr1 and pokaz[i]<>skr2 then			LINE_PROPERTY 2			pen gs_cont_pen			SECT_ATTRS sloi_n[i][1],gs_back_pen,gs_fill_pen,p_razd			material mat[i]			if i>1 then PRISM NSP/2,sloi_n[i][2]/100,USE(NSP)			if i=1 then PRISM NSP/2,sloi_n[i][2]/100,GET(NSP)		endif			addz sloi_n[i][2]/100	next iendgroupdel topgroup "operator"	rotz -SYMB_ROTANGLE	if k_otv>=1 then		for i = 1 to k_otv			if i = 1 then n_perv = 1			if i > 1 then n_perv=k_otr_otv[k_otv-1]+1			for j=1 to k_otr_otv[i]-1				put otr_otv[n_perv+j][1],otr_otv[n_perv+j][2]				put otr_otv[n_perv+j][3],otr_otv[n_perv+j][4]				hotspot otr_otv[n_perv+j][1],otr_otv[n_perv+j][2],0,i				hotspot otr_otv[n_perv+j][1],otr_otv[n_perv+j][2],h_pirog,unID:unID=unID+1				hotline otr_otv[n_perv+j][1],otr_otv[n_perv+j][2],0,otr_otv[n_perv+j][3],otr_otv[n_perv+j][4],0,unID:unID=unID+1				hotline otr_otv[n_perv+j][1],otr_otv[n_perv+j][2],0,otr_otv[n_perv+j][3],otr_otv[n_perv+j][4],h_pirog,unID:unID=unID+1			next j			PRISM NSP/2,h_pirog,GET(NSP)		next i	endifendgroupresult_1=SUBGROUP("pol","operator")PLACEGROUP result_1KILLGROUP "pol"KILLGROUP "operator"KILLGROUP result_1