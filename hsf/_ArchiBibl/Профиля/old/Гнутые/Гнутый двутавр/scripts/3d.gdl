call "Шаблон профиля" parameters allIF gs_shadow=0 THEN	SHADOW OFFELSE	SHADOW ONENDIFIF gs_detlevel_3D=`Откл.` THEN ENDPEN gs_cont_penMATERIAL col_matIF gs_stationary = `По центру` THEN ADDz -ds/2IF gs_stationary = `Вверху` THEN ADDz -dsIF ArcResolType=`согл. к-ву сегментов` THEN		!! ARC RESOL CALCULATION	TempArcResol=SegNumELSE	TempArcResol = max(1, INT ((2*ArcRadius*PI/SegLength)*(ArcAngle/360)))ENDIFIF gs_rot_axis=rot_axis_mtr[2] THEN rotx -ang!IF gs_rot_axis=rot_axis_mtr[2] THEN!	!!!!!***************** rotation of axis!	ROTx temp_ang!		HOTSPOT (ArcRadius),0,0,unID,temp_ang,6,ang : unID=unID+1!		HOTSPOT (ArcRadius)*cos(ArcAngle),(ArcRadius)*sin(ArcAngle),0,unID,temp_ang,4+128,ang : unID=unID+1!		HOTSPOT (ArcRadius)*cos(ArcAngle/2),(ArcRadius)*sin(ArcAngle/2),0,unID,temp_ang,5,ang : unID=unID+1!	DEL 1!ENDIFIF gs_detlevel_3D=`Простой` OR GLOB_CONTEXT>20 and GLOB_CONTEXT<40 THEN!!3D FEEDBACK AT HOTSPOT EDITING = SIMPLE MODEL		FOR i=-1 TO TempArcResol+1 STEP 1			PUT ArcRadius*COS(ArcAngle*i/TempArcResol)			PUT ArcRadius*SIN(ArcAngle*i/TempArcResol)			PUT 0			PUT 0		NEXT i				TUBE 12,TempArcResol+3,1+2+16+32,			-ws/2,0,0,			ws/2,0,0,			ws/2,ft,0,			wt/2,ft,0,			wt/2,ds-ft,0,			ws/2,ds-ft,0,			ws/2,ds,0,			-ws/2,ds,0,			-ws/2,ds-ft,0,			-wt/2,ds-ft,0,			-wt/2,ft,0,			-ws/2,ft,0,			GET(nsp)	ELSE			!!! Curved Resolution			S=90/gs_resol			FOR k=0 TO 90 STEP S				PUT wt/2+rr-rr*sin(k),ft+rr-rr*cos(k),1			NEXT k			FOR k=90 TO 180 STEP S				PUT wt/2+rr-rr*sin(k),ds-ft-rr-rr*cos(k),1			NEXT k			FOR k=180 TO 90 STEP -S				PUT -wt/2-rr+(rr)*sin(k),ds-ft-rr-(rr)*cos(k),1			NEXT k			FOR k=90 TO 0 STEP -S				PUT -wt/2-rr+(rr)*sin(k),ft+rr-(rr)*cos(k),1			NEXT k		FOR i=-1 TO TempArcResol+1 STEP 1			PUT ArcRadius*COS(ArcAngle*i/TempArcResol)			PUT ArcRadius*SIN(ArcAngle*i/TempArcResol)			PUT 0			PUT 0		NEXT i		TUBE 8+(NSP-4*(TempArcResol+3))/3,TempArcResol+3,1+2+16+32,			-ws/2,0,0,			ws/2,0,0,			ws/2,ft,0,			GET((NSP-4*(TempArcResol+3))/4),			GET((NSP-4*(TempArcResol+3))/3),			ws/2,ds-ft,0,			ws/2,ds,0,			-ws/2,ds,0,			-ws/2,ds-ft,0,			GET((NSP-4*(TempArcResol+3))/2),			GET((NSP-4*(TempArcResol+3))),			-ws/2,ft,0,			GET(nsp)ENDIFunID=1!!! ARC ANGLEHOTSPOT 0,0,ds/2,unID,ArcAngle,6 : unID=unID+1HOTSPOT (ArcRadius),0,ds/2,unID,ArcAngle,4+256 : unID=unID+1HOTSPOT (ArcRadius)*cos(ArcAngle),(ArcRadius)*sin(ArcAngle),ds/2,unID,ArcAngle,5 : unID=unID+1!!! Htps at sectionFOR kk=1 to 2	ADDx ArcRadius		HOTSPOT -ws/2,0,0,unID : unID=unID+1		HOTSPOT ws/2,0,0,unID : unID=unID+1		HOTSPOT 0,0,ZZYZX,unID : unID=unID+1		HOTSPOT -ws/2,0,ZZYZX,unID : unID=unID+1		HOTSPOT ws/2,0,ZZYZX,unID : unID=unID+1	DEL 1	ROTz ArcAngleNEXT kkDEL 2!!!LENGHTHOTSPOT 0,0,0,unID,ArcRadius,1+256 : unID=unID+1HOTSPOT ArcRadius,0,0,unID,ArcRadius, 2 : unID=unID+1HOTSPOT -1,0,0,unID,ArcRadius,3 : unID=unID+1ROTz ArcAngle	HOTSPOT 0,0,0,unID,ArcRadius,1+256 : unID=unID+1	HOTSPOT ArcRadius,0,0,unID,ArcRadius, 2 : unID=unID+1	HOTSPOT -1,0,0,unID,ArcRadius,3 : unID=unID+1DEL 1IF gs_stationary = `По центру` THEN DEL 1IF gs_stationary = `Вверху` THEN DEL 1