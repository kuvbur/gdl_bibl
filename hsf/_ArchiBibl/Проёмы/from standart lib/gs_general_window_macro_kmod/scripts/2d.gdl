	show_perem_2d = 0 : success = LIBRARYGLOBAL ("Libraryflobals-perem", "show_perem_2d", show_perem_2d)
	if show_perem_2d>0 then end
	gosub "razm"
endif
! Contact person: <SzL, NJ>

