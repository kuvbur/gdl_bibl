tion[1][3]z2 = z1+MEP_Position[2][3]*MEP_StraightLengthIF z2 < z1 THEN	PARAMETERS ac_toplevel 		= z1	PARAMETERS ac_bottomlevel 	= z2ELSE	PARAMETERS ac_toplevel 		= z2	PARAMETERS ac_bottomlevel 	= z1ENDIF