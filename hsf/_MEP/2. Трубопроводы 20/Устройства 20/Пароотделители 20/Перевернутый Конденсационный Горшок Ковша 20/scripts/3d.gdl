!-----------3d---------------------if show_el < EPS then endIF gs_detlevel_3D_m < EPS THEN ENDCALL "MEP_m_RequestSystemGlobals" PARAMETERS ALL one_ConID=0 returned_parameters gs_cont_pen, sMat, gs_InsMat, MEP_cline_pen, show_el! Inverted Bucket SteamIF gs_detlevel_3D_m = -1 THEN	gs_detlevel_3D_m = 2	! Detailed	IF gs_detlevel_3D = `Откл.` THEN gs_detlevel_3D_m = 0	IF gs_detlevel_3D = `Простой` THEN gs_detlevel_3D_m = 1ENDIFIF gs_detlevel_3D_m = 0 THEN ENDres = 24	! DetailedIF gs_detlevel_3D_m = 1 THEN res = 8	! SimpleIF GLOB_CONTEXT = 2 THEN res = 24MainBoxMaterial = sMatMATERIAL MainBoxMaterialPEN gs_cont_penRESOL res				! --- TRANSFORMATION --- !XFORM   MEP_Position[2][1], MEP_Position[3][1], dZx, MEP_Position[1][1],		MEP_Position[2][2], MEP_Position[3][2], dZy, MEP_Position[1][2],		MEP_Position[2][3], MEP_Position[3][3], dZz, MEP_Position[1][3]				! --- HOTSPOT --- !unID = 1HOTSPOT 0, 0, 0, unID: unID=unID+1HOTSPOT -upperCylindDia/2, 0, 0.15*hh, unID: unID=unID+1HOTSPOT upperCylindDia/2, 0, 0.15*hh, unID: unID=unID+1HOTSPOT 0, -upperCylindDia/2, 0.15*hh, unID: unID=unID+1HOTSPOT 0, upperCylindDia/2, 0.15*hh, unID: unID=unID+1HOTSPOT 0, 0, -0.25*hh, unID: unID=unID+1				! --- MAIN BOX --- !DIM StraightPosition[][]StraightPosition[1][1] = -MEP_StraightLength/2StraightPosition[1][2] = 0StraightPosition[1][3] = 0StraightPosition[2][1] = 1StraightPosition[2][2] = 0StraightPosition[2][3] = 0StraightPosition[3][1] = 0StraightPosition[3][2] = 1StraightPosition[3][3] = 0CALL "MEP_m_Pipe_4" PARAMETERS 	MEP_Position = StraightPosition,								MEP_NumberConnections = MEP_NumberConnections,								MEP_NumConnectionData = MEP_NumConnectionData,								MEP_StrConnectionData = MEP_StrConnectionData,								MEP_StraightLength = A,								gs_AddConnections = gs_AddConnections,								pipe_show = 1,								gs_PipeMat = MainBoxMaterial,								MEP_InsShow = 0,								MEP_cline_show_3D = 0,								gs_detlevel_3D_m = gs_detlevel_3D_m,								gs_cont_pen = gs_cont_penROTz -90ROTx -90CUTPOLYA 2, 2, 0,	0, 0, 913,	ConWidth_1/2, 360, 4013DEL 1IF gs_detlevel_3D_m = 2 THEN	ADDz -0.25*hh	CYLIND 0.05*hh, rr-er	DEL 1	GROUP "body01"		ADDz -0.20*hh		ROTy -90		 num = 6: alpha_i = 90/num: alpha = 0		FOR i = 1 TO num+1			PUT er-er*COS(alpha), rr-er+er*SIN(alpha), 1			 alpha = alpha+alpha_i		NEXT i		PUT 0.3*hh, rr, 0		REVOLVE NSP/3, 360, 1+2+4+8+16+32,			GET (NSP)		DEL 2	ENDGROUP!!	CUTPOLYA 2, 2, 0,!!		0, 0, 913,!!		rr-er, 360, 4013	RESOL res/2	ADDz -0.20*hh	ROTy -90	ROTx 90	PUT 0, 0, -1, 0	PUT 0, 0, 0, 0	 alpha = 0	FOR i = 1 TO num+1		PUT er-er*COS(alpha), 0, rr-er+er*SIN(alpha), 0		 alpha = alpha+alpha_i	NEXT i	PUT 0.20*hh, 0, rr, 0	PUT 0.30*hh, 0, rr, 0	 tt = EPS	TUBE 4, NSP/4, 1+2+16+32,		rh, -tt, 1,		rh, 0, 1,		-rh, 0, 1001,		-rh, -tt, 1,		GET (NSP)	DEL 3!!	CUTEND	RESOL res	GROUP "body02"		CUTPOLYA 2, 2, 0,			0, 0, 913,			rr-er, 360, 4013		ADDz -0.20*hh		ROTz 180		ROTy -90		ADDz -rh		PUT tt, 0, 8		 alpha = 0		FOR i = 1 TO num+1			PUT er-(er-tt)*COS(alpha), rr-er+(er-tt)*SIN(alpha), 8			 alpha = alpha+alpha_i		NEXT i		PUT 0.20*hh, rr-tt, 8		PUT 0.20*hh, 0, 8		PRISM_ NSP/3, rh*2,			GET (NSP)		DEL 4		CUTEND	ENDGROUP	result_1=ADDGROUP("body01","body02")	PLACEGROUP result_1	KILLGROUP "body01"	KILLGROUP "body02"	CUTPOLYA 2, 2, 0,		0, 0, 913,		dTWidth/2, 360, 4013	RESOL res/2	ADDy dTWidth/2	PRISM_ 4, 0.10*hh,			rh, -dTWidth/2, 79,			rh, 0, 79,			-rh, 0, 1079,			-rh, -dTWidth/2, 79	DEL 1	RESOL res	CUTENDELSE	ADDz -0.25*hh	CYLIND 0.35*hh, rr	DEL 1ENDIFCUTENDADDz 0.10*hhCYLIND 0.05*hh, upperCylindDia/2DEL 3END