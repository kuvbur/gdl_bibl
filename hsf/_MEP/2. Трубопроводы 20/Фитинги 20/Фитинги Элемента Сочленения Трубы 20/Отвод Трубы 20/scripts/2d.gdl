!-----------2d---------------------if show_el < EPS then endIF gs_detlevel_2D_m < EPS THEN ENDCALL "MEP_m_RequestSystemGlobals" PARAMETERS ALL one_ConID=0 returned_parameters gs_cont_pen, gs_fill_type, gs_fill_pen, gs_back_pen, MEP_cline_type, MEP_cline_pen, show_elPEN gs_cont_penSET FILL gs_fill_typeHptsUnIDBeginForConnEnds = 30000hceID_1 = HptsUnIDBeginForConnEnds+100ADD2 MEP_Position[1][1], MEP_Position[1][2]unID = 1IF ABS(MEP_NumConnectionData[1][18]) < EPS AND ABS(MEP_NumConnectionData[2][18] - 1) < EPS THEN	IF ABS(ABS(MEP_Position[2][3]) - 1) < EPS THEN		dist_y = ConPosY_1+ConLength_1/2		HOTSPOT2 0, 0, unID, Rotation, 6: unID=unID+1		HOTSPOT2 dist_y, 0, unID, Rotation, 4+128: unID=unID+1		HOTSPOT2 dist_y*COS(Rotation), dist_y*SIN(Rotation), unID, Rotation, 5: unID=unID+1	ELSE		dist_y = ConPosY_1+ConLength_1/2		dx = defaultMatrix[1][1]		dy = defaultMatrix[1][2]		length = SQR(dx^2+dy^2)		IF ABS(length-1) > EPS THEN			dx = dx/length			dy = dy/length		ENDIF		 arCosVal = dx/1		IF ABS(arCosVal) > 1 AND SGN(arCosVal) = -1 THEN arCosVal = -1		IF ABS(arCosVal) > 1 AND SGN(arCosVal) = 1 THEN arCosVal = 1		dirAngOnXYPlane = ACS(arCosVal)		IF SGN(dy) = -1 THEN dirAngOnXYPlane = 360-dirAngOnXYPlane		ROT2 90+dirAngOnXYPlane		! Compatibility part in case of forward migration until the first parameter script running		IF (GLOB_MODPAR_NAME <> "LimitedRotation") & (ABS(Rotation - LimitedRotation) > EPS) THEN			LimitedRotation = Rotation		ENDIF		! End of compatibility part in case of forward migration until the first parameter script running		! LimitedRotation is used only in 2D and if the Pipe Straight is not parallel to the global z-axis		HOTSPOT2 0, 0, unID, LimitedRotation, 6: unID=unID+1		HOTSPOT2 dist_y, 0, unID, LimitedRotation, 4+128: unID=unID+1		HOTSPOT2 dist_y*COS(LimitedRotation), dist_y*SIN(LimitedRotation), unID, LimitedRotation, 5: unID=unID+1		DEL 1	ENDIFENDIFunID = 10HOTSPOT2 0, 0, unID: unID=unID+1HOTLINE2 0, 0, outCoords[1][1], outCoords[1][2]DEL 1IF gs_fill_pen THEN PEN gs_fill_penIF not(show_axis) THEN PROJECT2{3} 3, 270, 3+32, 4, gs_back_pen, 0, 0, 0, PARAMETERS pipe_show = 1, MEP_InsShow = 0, gs_detlevel_3D_m = 2, MEP_cline_show_3D = 0PEN gs_cont_penIF not(show_axis) THEN PROJECT2{3} 3, 270, 2+32, 2+8, 0, 0, 0, 0, PARAMETERS pipe_show = 1, MEP_InsShow = 0, gs_detlevel_3D_m = 2, MEP_cline_show_3D = 0IF MEP_InsShow and show_isol and not(show_axis) THEN PROJECT2{3} 3, 270, 2+32, 8, 0, 0, 0, 0, PARAMETERS pipe_show = 0, MEP_InsShow = 1, MEP_cline_show_3D = 0, gs_detlevel_3D_m = 2IF (MEP_cline_show and show_axis_and) or show_axis THEN		! -----> center line <----- !	PEN MEP_cline_pen	SET LINE_TYPE MEP_cline_type	PROJECT2{3} 3, 270, 3+32, 8, 0, 0, 0, 0, PARAMETERS pipe_show = 0, MEP_InsShow = 0, gs_detlevel_3D_m = 2	PEN gs_cont_pen	SET LINE_TYPE 1ENDIFDEL TOPIF ABS(ABS(dZz)-1) < EPS OR ABS(ABS(MEP_Position[2][3]) - 1) < EPS THEN						! --- dirAngOnXYPlane of the route  --- !	 arCosVal = MEP_Position[3][1]/1	IF ABS(arCosVal) > 1 AND SGN(arCosVal) = -1 THEN arCosVal = -1	IF ABS(arCosVal) > 1 AND SGN(arCosVal) = 1 THEN arCosVal = 1	dirAngOnXYPlane = ACS(arCosVal)-90	IF SGN(MEP_Position[3][2]) = -1 THEN dirAngOnXYPlane = 180-dirAngOnXYPlane	ADD2 MEP_Position[1][1], MEP_Position[1][2]	ROT2 dirAngOnXYPlane	IF dZz < -EPS THEN MUL2 -1, 1	CALL "MEP_m_ConnectionsMEP_4" PARAMETERS SetProgram = SetProgram,			MEP_NumberConnections = MEP_NumberConnections,			MEP_NumConnectionData = gs_Connections,			gs_AddConnections = gs_AddConnections,			DrawingNum = 1,			MEP_InsShow = 0,			MEP_cline_show = 0,			gs_cont_pen = gs_cont_pen,			gs_fill_type=gs_fill_type,			gs_fill_pen=gs_fill_pen,			gs_back_pen=gs_back_pen,			ConPosX_1=ConPosX_1, ConPosY_1=ConPosY_1, ConPosZ_1=ConPosZ_1, ConLength_1=ConLength_1, ConShow_1 = 0, ConEdit_1 = 1, MEP_StrConnectionData = MEP_StrConnectionData	DEL TOPELSE	ADD2 MEP_Position[1][1], MEP_Position[1][2]	HOTSPOT2 outCoords[1][1], outCoords[1][2], hceID_1	DEL 1ENDIF