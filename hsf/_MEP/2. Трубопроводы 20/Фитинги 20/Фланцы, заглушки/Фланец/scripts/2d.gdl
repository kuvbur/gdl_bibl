!-----------2d---------------------if show_el < EPS then endIF gs_detlevel_2D_m < EPS THEN ENDCALL "MEP_m_RequestSystemGlobals" PARAMETERS ALL one_ConID=0 returned_parameters gs_cont_pen, gs_fill_type, gs_fill_pen, gs_back_pen, MEP_cline_type, MEP_cline_pencall "error_sphere" parameters is_error = is_errorPEN gs_cont_penSET FILL gs_fill_typehotspot2 0,0PEN gs_cont_pen_pTM = GLOB_SCALE / 1000if show_conventions then	flange_d = 4 * _pTM	flange_t = 1 * _pTMendifIF SGN(dz) = 0 THEN		! -----> the pipe in the xy-plane <----- !	ADD2 rx1, ry1	ROT2 dirAngOnXYPlane	if flange_mir then rot2 180	hotspot2 0,-flange_d/2	hotspot2 0,flange_d/2	if flange_type = 1 then		put 0,-flange_d/2,1		put 0,flange_d/2,1		put flange_t,flange_d/2,1		put flange_t,-flange_d/2,1	endif	if flange_type = 11 then		put 0,-flange_d/2,1		put flange_t,-flange_d/2,1		put flange_t,-flange_db1/2,1		put flange_t+flange_t1,-flange_db2/2,1		put flange_t+flange_t1+flange_t2,-flange_db2/2,1		put flange_t+flange_t1+flange_t2,flange_db2/2,1		put flange_t+flange_t1,flange_db2/2,1		put flange_t,flange_db1/2,1		put flange_t,flange_d/2,1		put 0,flange_d/2,1		line2 flange_t,-flange_d/2, flange_t,flange_d/2		hotspot2 flange_full_t,-flange_db2/2		hotspot2 flange_full_t,flange_db2/2		hotspot2 flange_full_t,0	endif	if flange_type = 2 then		put 0,-flange_d/2,1		put 0,-flange_db1/2,1		put -flange_t1,-flange_db1/2,1		put -flange_t1,flange_db1/2,1		put 0,flange_db1/2,1		put 0,flange_d/2,1		put flange_t,flange_d/2,1		put flange_t,-flange_d/2,1		line2 0,-flange_db1/2, 0,flange_db1/2		hotspot2 -flange_t1,-flange_db1/2		hotspot2 -flange_t1,flange_db1/2		hotspot2 -flange_t1,0	endif	if show_axis then		gs_back_pen = 19		gs_fill_pen = 19	endif	POLY2_B NSP/3, 1*(show_axis=0)+2+4, gs_fill_pen, gs_back_pen, GET(NSP)	if show_axis then		line2 flange_t*0.9,-flange_d/2, flange_t*0.9,flange_d/2	endif	del 2	endendifIF SGN(dx) = 0 AND SGN(dy) = 0 and (show_axis=0) THEN		! -----> the pipe on the xy-plane <----- !	ADD2 rx1, ry1	ROT2 dirAngOnXYPlane	hotspot2 0,-flange_d/2	hotspot2 0,flange_d/2	PUT 0,0,900+1	PUT flange_d/2,360,4000+1	PUT flange_dnf/2,360,4000+1	POLY2_B NSP/3, 1*(show_axis=0)+2+4, gs_fill_pen, gs_back_pen, GET(NSP)	del 2	endendifIF gs_fill_pen THEN PEN gs_fill_penPROJECT2{3} 3, 270, 3+32, 4, gs_back_pen, 0, 0, 0PEN gs_cont_penPROJECT2{3} 3, 270, 2, 8, 0, 0, 0, 0