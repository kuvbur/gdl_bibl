PAPER_TO_MODEL = GLOB_SCALE / 1000	! Convert paper size to model sizeCALL "MEP_m_RequestSystemGlobals" PARAMETERS ALL one_ConID=0 returned_parameters gs_cont_pen, gs_fill_type, gs_fill_pen, gs_back_pen, MEP_cline_type, MEP_cline_pen, show_el_pTM = GLOB_SCALE / 1000PEN MEP_cline_penSET STYLE "текст1"l_razm = (stw(mep_razm)*PAPER_TO_MODEL)l_syst = (stw(syst_name)*PAPER_TO_MODEL)l_otm = (stw(otm_elem_txt)*PAPER_TO_MODEL)HOTLINE2 cutbackCLA, 0, MEP_StraightLength-cutbackCLB, offsetLINE2 cutbackCLA, 0, MEP_StraightLength-cutbackCLB, offsetpos_x1 = MEP_NumConnectionData[1][12]*0.5pos_x2 = -pos_x1r = request ("View_Rotangle", "", _angleViewRot)_totalRotate	= (SYMB_ROTANGLE + _angleViewRot+dirAngOnXYPlane) MOD 360if show_size then 	ADD2 MEP_StraightLength/2, 0	_nTrans = 0	if (_totalRotate> (90 + EPS) & _totalRotate < (270 + EPS)) then		rot2 180		_nTrans = _nTrans + 1	endif	SET STYLE "текст1"	if l_razm<=MEP_StraightLength then text2 0, pos_x1+0.1*PAPER_TO_MODEL, mep_razm	SET STYLE "текст2"	if l_syst<=MEP_StraightLength then text2 0, pos_x2-0.3*PAPER_TO_MODEL, syst_name	del 1+_nTransendifif show_otm then	ADD2 MEP_StraightLength/2, 0	_nTrans = 0	if (_totalRotate> (90 + EPS) & _totalRotate < (270 + EPS)) then		rot2 180		_nTrans = _nTrans + 1	endif	SET STYLE "текст4"	if l_otm<=MEP_StraightLength then text2 0, 0, otm_elem_txt	del 1+_nTransendifIF show_conventions and abs(is_perehod)>EPS THEN	if is_perehod>EPS then		a = 1*_pTM		b = 2*_pTM	else		a = 2*_pTM		b = 1*_pTM	endif	LINE2 0, b, 0, -b	LINE2 MEP_StraightLength, a, MEP_StraightLength, -a	LINE2 0, b, MEP_StraightLength, a	LINE2 0, -b, MEP_StraightLength, -a	show_axis =0	MEP_cline_show=0	show_axis_and=0ENDIFIF show_axis_and or show_axis THEN		! -----> center line <----- !	SET LINE_TYPE MEP_cline_type	SET STYLE "текст3"	l_syst = MEP_StraightLength*2	if l_syst*5<=MEP_StraightLength and show_axis then 		LINE2 cutbackCLA, 0, (MEP_StraightLength-cutbackCLB)/2-l_syst*0.5, offset		LINE2 (MEP_StraightLength-cutbackCLB)/2+l_syst*0.5, 0, (MEP_StraightLength-cutbackCLB), offset		ADD2 (MEP_StraightLength-cutbackCLB)/2, 0		_nTrans = 0		if (_totalRotate> (90 + EPS) & _totalRotate < (270 + EPS)) then			rot2 180			_nTrans = _nTrans + 1		endif		text2 0, 0, syst_name		del 1+_nTrans	else		LINE2 cutbackCLA, 0, MEP_StraightLength-cutbackCLB, offset	endif	SET LINE_TYPE 1	IF MEP_InsShow and show_conventions THEN		h = 1*_pTM		n = int((MEP_StraightLength-cutbackCLB+cutbackCLA)/(4*h))		if n>EPS then			shag = (MEP_StraightLength-cutbackCLB+cutbackCLA)/(4*n)			sx = cutbackCLA			for i = 1 to n				line2 sx, 0, sx+shag, h				line2 sx+shag, h, sx+3*shag, -h				line2 sx+3*shag, -h, sx+4*shag, 0				sx = sx+4*shag			next i		endif	endifENDIFPEN gs_cont_pen