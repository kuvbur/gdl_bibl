PAPER_TO_MODEL = GLOB_SCALE / 1000	! Convert paper size to model size_pTM = GLOB_SCALE / 1000CALL "MEP_m_RequestSystemGlobals" PARAMETERS ALL one_ConID=0 returned_parameters gs_cont_pen, sMat, gs_InsMat, MEP_cline_pen, show_elPEN MEP_cline_penHOTLINE 0, 0, 0, 0, 0, MEP_StraightLength, 0HOTspot 0, 0, 0HOTspot 0, 0, MEP_StraightLengthDEFINE STYLE "текст3d" "ISOCPEUR" , 100, 5,0SET STYLE "текст3d"summ_txt = ""if show_size then summ_txt = summ_txt + syst_nameif show_size and show_otm then summ_txt = summ_txt + "   "if show_otm then summ_txt = summ_txt + otm_elem_txtif summ_txt <> "" and GLOB_CONTEXT<>2 then	addz MEP_StraightLength/2	roty -90	t_priv = 5	l_otm = strlen(summ_txt)*0.05	if l_otm<=MEP_StraightLength then TEXT 0.003, 0, summ_txt	del 2endifIF show_axis_and or show_axis THEN	LIN_ 0, 0, 0, -MEP_offset_z, MEP_offset_y, MEP_StraightLength	IF MEP_InsShow and show_conventions THEN		l = MEP_StraightLength		h = 1*_pTM 		n = int(l/(4*h))		if n>EPS then			shag = l/(4*n)			sx = 0			for i = 1 to n				lin_ 0, 0,sx, 0, h,sx+shag				lin_ 0, h,sx+shag, 0, -h,sx+3*shag				lin_ 0, -h,sx+3*shag, 0, 0,sx+4*shag				sx = sx+4*shag			next i		endif	endifendifIF show_conventions and abs(is_perehod)>EPS THEN	if is_perehod>EPS then		a = 1*_pTM		b = 2*_pTM	else		a = 2*_pTM		b = 1*_pTM	endif	h = sqr((a*a) - (b*b)/4)	LIN_ 0, 0,0, 0, (b/2), 0	LIN_ 0, (b/2), 0, h,0, 0	LIN_ 0, 0, 0, 0, (-b/2), 0	LIN_ 0, (-b/2), 0, h,0, 0endif