unposID=1000_pTM = GLOB_SCALE / 1000if show_conventions=0 then goto "end_conventions_3d"if GLOB_SEO_TOOL_MODE or GLOB_PREVIEW_MODE or GLOB_VIEW_TYPE=9 then goto "end_conventions_3d" CALL "MEP_m_RequestSystemGlobals" PARAMETERS ALL one_ConID=0 returned_parameters gs_cont_pen, sMat, gs_InsMat, MEP_cline_pen, show_elpen MEP_cline_pen_nTrans = 0SET STYLE "текст3d"if GLOB_VIEW_TYPE=2 then 	if ABS(dZy)>EPS then 		rotx 90		_nTrans = _nTrans + 1	endif	if ABS(dZx)>EPS then 		roty 90		_nTrans = _nTrans + 1	endifendifXFORM   MEP_Position[2][1], MEP_Position[3][1], dZx, MEP_Position[1][1],		MEP_Position[2][2], MEP_Position[3][2], dZy, MEP_Position[1][2],		MEP_Position[2][3], MEP_Position[3][3], dZz, MEP_Position[1][3]if GLOB_VIEW_TYPE<>2 and editable_hotspot then 	hotspot  0, 0, dmacro_pos[10]*_pTM, unposID, dmacro_pos[7], 1+128+1024, dmacro_pos[9] : unposID = unposID + 1	hotspot  0, -1, dmacro_pos[10]*_pTM, unposID, dmacro_pos[7], 3 + 1024, dmacro_pos[9] : unposID = unposID + 1	hotspot  0, dmacro_pos[9]*_pTM,  dmacro_pos[10]*_pTM, unposID, dmacro_pos[7], 2 + 1024, dmacro_pos[9] : unposID = unposID + 1	hotspot 0, dmacro_pos[9]*_pTM, 0, unposID, dmacro_pos[8], 1+128+1024, dmacro_pos[10] : unposID = unposID + 1	hotspot 0, dmacro_pos[9]*_pTM, -1, unposID, dmacro_pos[8], 3 + 1024, dmacro_pos[10] : unposID = unposID + 1	hotspot 0, dmacro_pos[9]*_pTM,  dmacro_pos[10]*_pTM, unposID, dmacro_pos[8], 2 + 1024, dmacro_pos[10] : unposID = unposID + 1	addy dmacro_pos[9]*_pTM : _nTrans = _nTrans + 1	addz dmacro_pos[10]*_pTM : _nTrans = _nTrans + 1endifif not(macroCallin2D) and GLOB_VIEW_TYPE=2 then goto "end_conventions_3d" if type_symb = 0 then 	LIN_ A/2,0,0, -A/2,0,0endif!------------- Решётка ----------------if type_symb = 1 then	if strstr(name, "Потолочн")>0 then		ROTx 90		_nTrans = _nTrans + 1	endif	a_tr = 4*_pTM	h = sqr(a_tr*a_tr - a_tr*a_tr/4)	lin_ y_o-a_tr/2,x_o-h/10,0, y_o+a_tr/2,x_o-h/10,0	if editable_hotspot then		hotspot y_o-a_tr/2,x_o-h/10,0,	unposID : unposID = unposID + 1		hotspot y_o+a_tr/2,x_o-h/10,0,	unposID : unposID = unposID + 1	endif	if type_sys<0 then 		addy x_o-h/5 : _nTrans = _nTrans + 1	else		addy -h-h/5 : _nTrans = _nTrans + 1	endif	lin_ y_o-a_tr/2,x_o,0,y_o+a_tr/2,x_o,0	lin_ y_o-a_tr/2,x_o,0,y_o,x_o+h*sgn(type_sys),0	lin_ y_o+a_tr/2,x_o,0,y_o,x_o+h*sgn(type_sys),0	if editable_hotspot then		hotspot y_o-a_tr/2,x_o,0,	unposID : unposID = unposID + 1		hotspot y_o+a_tr/2,x_o,0,	unposID : unposID = unposID + 1		hotspot y_o,x_o+h*sgn(type_sys),0,	unposID : unposID = unposID + 1	endif	del 1endif!------------- Заглушка ----------------if type_symb = 2 then	a_tr = 3*_pTM	lin_ x_o-a_tr/2,y_o,0,x_o+a_tr/2,y_o,0endif!------------- Опора ----------------if type_symb = 61 or type_symb = 62 then	a_tr = 3*_pTM	lin_ -a_tr/2,-a_tr/2,0,a_tr/2,a_tr/2,0	lin_ -a_tr/2,a_tr/2,0,a_tr/2,-a_tr/2,0endif!------------- Вентиль ----------------if type_symb = 40 then	a_tr = 2*_pTM	h = sqr(a_tr*a_tr - a_tr*a_tr/4)	!! Доводим линию до условного обозначения	if (A/2-h)> EPS then		lin_ -h,0,0, -A/2,0,0		lin_ h,0,0, A/2,0,0	endif	put  -h,-a_tr/2,1	put -h,a_tr/2,1	put 0, 0,1	POLY_ NSP/3, GET(NSP)	put h,-a_tr/2, 1	put h,a_tr/2, 1	put 0, 0,1	POLY_ NSP/3, GET(NSP)endif!------------- Клапан ----------------if type_symb = 31 or type_symb = 32 or type_symb = 33 or type_symb = 34 then	a_pr = 1.2*_pTM	b_pr = 2.5*_pTM	rotx 90	roty 90	if show_size then TEXT 0.003, 0, firerest	del 2	!! Доводим линию до условного обозначения	if (A/2-a_pr)> EPS then		lin_ -a_pr,0,0, -A/2,0,0		lin_ a_pr,0,0, A/2,0,0	endif	if type_symb = 31 then ! "Балансировочный"		k = 0.6		model wire		lin_ -a_pr*k, -b_pr*k,0, a_pr*k, b_pr*k,0		r_okr = _pTM*0.15		CIRCLE r_okr	endif	if type_symb = 32 then !  "Пожарный"		model wire		r_okr = _pTM*0.23		a = atn(b_pr/a_pr)		dx = sin(a)*r_okr		dy = cos(a)*r_okr		x1 = -a_pr+dx : y1 = -b_pr-dy : x2 = a_pr+dx : y2 = b_pr-dy		x3 = a_pr : y3 = -b_pr : x4 = a_pr : y4 = b_pr		gosub "cross_line3"		xn = x : yn = y		x3 = a_pr : y3 = -b_pr : x4 = -a_pr : y4 = -b_pr		gosub "cross_line3"		xs = x : ys = y		lin_ xs, ys,0, xn, yn,0		x1 = -a_pr-dx : y1 = -b_pr+dy : x2 = a_pr-dx : y2 = b_pr+dy		x3 = -a_pr : y3 = -b_pr : x4 = -a_pr : y4 = b_pr		gosub "cross_line3"		xn = x : yn = y		x3 = a_pr : y3 = b_pr : x4 = -a_pr : y4 = b_pr		gosub "cross_line3"		xs = x : ys = y		lin_ xs, ys,0, xn, yn,0		model solid		CIRCLE r_okr	endif	if type_symb = 34 then !  "Дымовой"		model wire		r_okr = _pTM*0.15		lin_ -a_pr, -b_pr,0, a_pr, b_pr,0		model solid		CIRCLE r_okr	endif	!Контур	put -a_pr, -b_pr,1	put -a_pr, b_pr,1	put a_pr, b_pr,1	put a_pr, -b_pr,1	POLY_ NSP/3, GET(NSP)endifgoto "end_conventions_3d""cross_line3":	if abs((y4-y3)*(x2-x1)-(x4-x3)*(y2-y1))>EPS then		ua = ((x4-x3)*(y1-y3)-(y4-y3)*(x1-x3))/((y4-y3)*(x2-x1)-(x4-x3)*(y2-y1))		x = x1 + ua*(x2-x1)		y = y1 + ua*(y2-y1)	endifreturn"end_conventions_3d":