!-----------2d---------------------if (GLOB_STRUCTURE_DISPLAY <> upr_n) and (upr_n>-1) then endif show_el < EPS or show_sal<EPS then endCALL "MEP_m_RequestSystemGlobals" PARAMETERS ALL one_ConID=0 returned_parameters gs_cont_pen, gs_fill_type, gs_fill_pen, gs_back_pen, MEP_cline_type, MEP_cline_pen, show_elPEN gs_cont_penSET FILL gs_fill_typeif (GLOB_STRUCTURE_DISPLAY = upr_n_asotv) then	dim pen_nazn[9] : dim nazn_arr[9]	pen_eq = 1 : pen_all = 1 : i_pen = 1	success_1 = LIBRARYGLOBAL ("Libraryflobals-as", "nazn", nazn_arr)	success_1 = LIBRARYGLOBAL ("Libraryflobals-as", "pen_nazn", pen_nazn)	success_2 = LIBRARYGLOBAL ("Libraryflobals-as", "pen_eq", pen_eq)	success_3 = LIBRARYGLOBAL ("Libraryflobals-as", "pen_all", pen_all)	t_pen = 0	if pen_eq then		t_pen = pen_all	else		for i=1 to vardim1(pen_nazn)			if nazn = nazn_arr[i] then t_pen = pen_nazn[i]		next i		if t_pen=0 then t_pen = pen_all	endif	if t_pen<EPS or t_pen>255 then t_pen = 1	i_pen = t_pen	PEN i_penendifunID = 1rx = rx1+MEP_Position[2][1]*dlin_sal+MEP_Position[3][1]*MEP_offset_y+dZx*MEP_offset_zry = ry1+MEP_Position[3][2]*MEP_offset_y+MEP_Position[2][2]*dlin_sal+dZy*MEP_offset_zHOTSPOT2 rx1, ry1, hceID_1HOTSPOT2 rx, ry, hceID_2if SetProgram then	!!!================= Настройки видимости по диапазону ======================	!!!По умолчанию - вид не в сечении, элемент видим	is_sech = 0	is_show = 1	!!!Абсолютные значения границ видимости	flag = 0	SYMB_POS_Z_temp = SYMB_POS_Z	IF SGN(dz) = 0 then		_MEP_StraightLength = 0	endif	IF SGN(dx) = 0 AND SGN(dy) = 0 and flag = 0 THEN		_MEP_StraightLength = A		IF rz1 > rz2 THEN			SYMB_POS_Z_temp = SYMB_POS_Z			SYMB_POS_Z = SYMB_POS_Z-_MEP_StraightLength		ENDIF		flag = 1	endif	if flag = 0 then		_MEP_StraightLength = A		Length=SQR(dx^2+dy^2)		ar = ABS(dz)/_MEP_StraightLength		br = Length/_MEP_StraightLength		cr = ABS(dz)/Length		IF rz1 > rz2 THEN			SYMB_POS_Z_temp = SYMB_POS_Z			SYMB_POS_Z = SYMB_POS_Z-_MEP_StraightLength		ENDIF		dz_temp = ABS(dz)		dz = ABS(dz)-cutbackA*ar-cutbackB*ar		SYMB_POS_Z_temp = SYMB_POS_Z		SYMB_POS_Z = SYMB_POS_Z+cutbackA*ar		flag = 1	endif	down_level = GLOB_CSTORY_ELEV + GLOB_CUTPLANES_INFO[3]+SYMB_POS_Z	up_level = GLOB_CSTORY_ELEV + GLOB_CUTPLANES_INFO[2]+SYMB_POS_Z	!!Ниже границы видимости	IF down_level - SYMB_POS_Z > EPS then		if (down_level - (SYMB_POS_Z+_MEP_StraightLength)) > EPS THEN !!Закончился до границы			is_show = 0		else				is_sech = 1		endif	endif	!!Выше границы видимости	IF up_level - SYMB_POS_Z < EPS then		if up_level - (SYMB_POS_Z+_MEP_StraightLength) < EPS THEN !!Закончился до границы			is_show = 0		else			is_sech = 1		endif	endif	if is_sech then is_show = 1	SYMB_POS_Z = SYMB_POS_Z_temp	!!!================= Настройки видимости по диапазону ======================	if AC_AutoOnStoryVisibility and is_show=0 THEN endendifIF SGN(dz) = 0 THEN		! -----> the pipe in the xy-plane <----- !	ADD2 rx1, ry1	ROT2 dirAngOnXYPlaneif (GLOB_STRUCTURE_DISPLAY = upr_n_asotv) then	pen i_pen	put  0,  dns/2	put  0,  -dns/2	put  dlin_sal,  -dns/2	put  dlin_sal,  dns/2	poly2 NSP/2, 1+2+4, get(NSP)else	if show_axis and show_conventions then end	line2 0,  dys/2, dlin_sal, dys/2	line2 0,  -dys/2, dlin_sal, -dys/2	line2 0,  dns/2, dlin_sal, dns/2	line2 0,  -dns/2, dlin_sal, -dns/2	hotline2 0,  dns/2, dlin_sal, dns/2,2	hotline2 0,  -dns/2, dlin_sal, -dns/2,3		line2 dlin_sal,  dys/2, dlin_sal, dns/2+add_ub	line2 dlin_sal,  -dys/2, dlin_sal, -dns/2-add_ub	line2 0,  dys/2, 0, dns/2+add_ub	line2 0,  -dys/2, 0, -dns/2-add_ub	if type_sal<>"Нет" then		line2 dlin_sal/2,  dns/2, dlin_sal/2, dns/2+add_sal		line2 dlin_sal/2,  -dns/2, dlin_sal/2, -dns/2-add_sal	endifendif	hotspot2 0,0	hotspot2 dlin_sal,  dns/2	hotspot2 dlin_sal,  -dns/2	hotspot2 0,  dns/2	hotspot2 0,  -dns/2	hotspot2 dlin_sal,  dns/2+add_ub	hotspot2 dlin_sal,  -dns/2-add_ub	hotspot2 0,  dns/2+add_ub	hotspot2 0,  -dns/2-add_ub	del 2	endendifIF SGN(dx) = 0 AND SGN(dy) = 0 and (show_axis=0) THEN		! -----> the pipe on the xy-plane <----- !	ADD2 rx1, ry1	ROT2 dirAngOnXYPlane	hotspot2 0,0	hotspot2 0,  dns/2	hotspot2 0,  -dns/2	hotspot2 dns/2, 0	hotspot2 -dns/2, 0if (GLOB_STRUCTURE_DISPLAY = upr_n_asotv) then	pen i_pen	x = sin(32.75) * dns/2	y = cos(32.75) * dns/2	poly2_b{5} 7, 1+2, 0, 3, i_pen, i_pen, 	0, 0, 1, 0, 0, 1, 0, 	-x, -y, 1, 	dns  * 0.15, - dns * 0.15, 900, 	0, -155, 4001, 	y, x, 1, 	0, 0, 900, 	0, 205, 4001, 	-x, -y, 1	circle2 0,0,dns/2else	circle2 0,0,dns/2+add_ub	circle2 0,0,dns/2+add_sal	circle2 0,0,dns/2	circle2 0,0,dys/2endif	HOTARC2 0, 0, dns/2, 0, 360, 1	HOTARC2 0, 0, dns/2+add_ub, 0, 360, 1	del 2	endendifIF gs_fill_pen THEN PEN gs_fill_penIF not(show_axis) THEN PROJECT2{3} 3, 270, 3+32, 4, gs_back_pen, 0, 0, 0, PARAMETERS pipe_show = 1, MEP_InsShow = 0, gs_detlevel_3D_m = 2, MEP_cline_show_3D = 0PEN gs_cont_penIF not(show_axis) THEN PROJECT2{3} 3, 270, 2+32, 2+8, 0, 0, 0, 0, PARAMETERS pipe_show = 1, MEP_InsShow = 0, gs_detlevel_3D_m = 2, MEP_cline_show_3D = 0IF MEP_InsShow and show_isol and not(show_axis) THEN PROJECT2{3} 3, 270, 2+32, 8, 0, 0, 0, 0, PARAMETERS pipe_show = 0, MEP_InsShow = 1, MEP_cline_show_3D = 0, gs_detlevel_3D_m = 2IF (MEP_cline_show and show_axis_and) or show_axis THEN		! -----> center line <----- !	PEN MEP_cline_pen	SET LINE_TYPE MEP_cline_type	PROJECT2{3} 3, 270, 3+32, 8, 0, 0, 0, 0, PARAMETERS pipe_show = 0, MEP_InsShow = 0, gs_detlevel_3D_m = 2	PEN gs_cont_pen	SET LINE_TYPE 1ENDIFDEL TOP