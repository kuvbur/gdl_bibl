bWallContHiddenLineOut	= ( (bEnableSill & (bDrawSill & lod2D_SillBoard > 0) & ((iSillType <> SILL_DUTCH) | (iSillType = SILL_DUTCH & (gs_sill_width > (WIDO_FRAME_THICKNESS + WIDO_SILL))))) |\
							(bEnableCasing & (bDrawOutsideTrim & lod2D_Casing > 0)) )
