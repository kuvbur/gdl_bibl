		if iWallContourLine = WALL_CONTOUR_OFF		then iWallContourLine = WALL_CONTOUR_INSIDE
		if iWallContourLine = WALL_CONTOUR_OUTSIDE	then iWallContourLine = WALL_CONTOUR_BOTHSIDES
	endif
