
EPS = 0.00001

isValidSystem = 0
isavailable = 0
extendAttribute = 1
n = APPLICATION_QUERY ("MEPMODELER", "IsAvailable()", isavailable)
IF isavailable THEN
	FOR ConID = 1 TO MEP_NumberConnections
		IF MEP_StrConnectionData[ConID][2] <> "0" AND MEP_NumConnectionData[ConID][26] > EPS THEN
			ConSystemID = MEP_StrConnectionData[ConID][2]

			queryStr = "GetDomain (" + ConSystemID + ")"
			n = APPLICATION_QUERY ("MEPSYSTEM", queryStr, d)
			IF d THEN
				IF d = 1 THEN PUT 1
				IF d = 2 THEN PUT 2
				IF d = 3 THEN PUT 1, 2
				IF d = 4 THEN PUT 3
				IF d = 5 THEN PUT 1, 3
				IF d = 6 THEN PUT 2, 3
				IF d = 7 THEN PUT 1, 2, 3

				num = NSP
				FOR i = 1 TO num
					IF ABS(GET(1) - MEP_NumConnectionData[ConID][19]) < EPS THEN
						isValidSystem = 1
					ENDIF
				NEXT i
			ENDIF

			IF isValidSystem THEN
				queryStr = "GetContourPen (" + ConSystemID + ")"
				n = APPLICATION_QUERY ("MEPSystem", queryStr, gs_cont_pen)

				queryStr = "GetSystemMaterial (" + ConSystemID + ")"
				n = APPLICATION_QUERY ("MEPSystem", queryStr, sMat)

				extendAttribute = 0
				IF ABS(MEP_NumConnectionData[ConID][26] - 2) < EPS THEN
					extendAttribute = 1
					queryStr = "GetInsulationMaterial (" + ConSystemID + ")"
					n = APPLICATION_QUERY ("MEPSystem", queryStr, gs_InsMat)
				ENDIF
			ELSE
				gs_cont_pen = invalidsystem_cont_pen
				sMat = invalidsystem_sMat
				extendAttribute = 0
				IF ABS(MEP_NumConnectionData[ConID][26] - 2) < EPS THEN
					extendAttribute = 1
					gs_InsMat = invalidsystem_InsMat
				ENDIF
			ENDIF
			ConID = MEP_NumberConnections
		ENDIF
	NEXT ConID

	IF extendAttribute THEN
		END gs_cont_pen, sMat, gs_InsMat
	ELSE
		END gs_cont_pen, sMat
	ENDIF
ENDIF
