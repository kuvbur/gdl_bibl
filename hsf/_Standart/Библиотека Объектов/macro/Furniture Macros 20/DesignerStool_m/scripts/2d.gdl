
! ======================================================================
! SCALE
! ======================================================================
call "2dDetailLevel" parameters gs_detlevel_2D_m = gs_detlevel_2D_m,
				returned_parameters det2D

pen gs_cont_pen
fill gs_fill_type


if det2D < 4 then
	! --- Hotspots ---

	if calledAsMacro then
		unID = 100
	else
		unID = 1
	endif

	if calledAsMacro then
		hotspot2 0, 0, unID : unID = unID + 1
		hotspot2 a, 0, unID : unID = unID + 1
		hotspot2 a, b, unID : unID = unID + 1
		hotspot2 0, b, unID : unID = unID + 1
	else
		hotspot2 a/2,0, unID: unID=unID+1
		hotspot2 a/2,b/2, unID: unID=unID+1
		call "Resize_A_B_ZZYZX" parameters all
	endif


	! --- minimal space ---

	if not (calledAsMacro) then call "fa_minimalspace" parameters all MSType = 4, unID = 3000


	! --- 2D polygon ---

	poly2_b 5, 1+2+4+64, gs_fill_pen, gs_back_pen,
		0, 0, 1,
		a, 0, 1,
		a, b, 1,
		0, b, 1,
		0, 0, -1
else
	call "fa_ChairSymbol" parameters all gs_origoCentered = 0			!! Symbolic
endif

