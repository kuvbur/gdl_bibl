
pen gs_cont_pen

if iMonitorType = 1 then

	add2 0,b/2-.015
	rect2 0,0,a,.03
	line2 0,.03,.06,.06
	line2 a,.03,a-.06,.06
	line2 .06,.06,a-.06,.06
	del 1

	add2 a/4,0
	rect2 0,0,a/2,b/2-.015
	rect2 0,b/2+.045,a/2,b
	line2 a/6,b/2+.045,a/6,b
	line2 a*2/6,b/2+.045,a*2/6,b

	del 1
	fill gs_fill_type

		POLY2_b 15, 2+64,gs_fill_pen,gs_back_pen,
				0,b/2-.015,0,
				0,b/2+.015,0,
				.06,b/2+.045,0,
				a/4,b/2+.045,0,
				a/4,b,0,
				a*3/4,b,0,
				a*3/4,b/2+.045,0,
				a-.06,b/2+.045,0,
				a,b/2+.015,0,
				a,b/2-.015,0,
				a*3/4,b/2-.015,0,
				a*3/4,0,0,
				a/4,0,0,
				a/4,b/2-.015,0,
				0,b/2-.015,-1

	if not(bPartOfLayout) then
		unID = 1
		hotspot2 a/2,	b,		unID : unID = unID + 1
		hotspot2 a/2,	b/2,	unID : unID = unID + 1

		hotspot2 0,		0,		unID : unID = unID + 1
		hotspot2 a,		0,		unID : unID = unID + 1
		hotspot2 a,		b,		unID : unID = unID + 1
		hotspot2 0,		b,		unID : unID = unID + 1
	endif

endif

if iMonitorType = 2 then

	add2 a/2, b/2

	hotspot2 -a/2, -b/2
	hotspot2 a/2, -b/2
	hotspot2 -a/2, b/2
	hotspot2 a/2, b/2

	hotspot2 0, 0
	hotspot2 0, -b/2
	hotspot2 0, b/2

	add2 0, -displayThk-middlePanelThk-backPanelThk/2
		hotspot2 -a/2, 0
		hotspot2 a/2, 0
	del 1

	!!! *** Background Fill
	fill gs_fill_type

	mul2 1.5, 1
	POLY2_B       2, 1+2+4+64,      gs_fill_pen,     gs_back_pen,
		0, 0, 901,
		b/2, 360, 4001
	del 1

	add2 0, -displayThk-middlePanelThk-backPanelThk/2
	POLY2_B       6, 1+2+4+64,      gs_fill_pen,     gs_back_pen,
		-a/2, 0, 1,
		a/2, 0, 1,
		a/2, displayThk+middlePanelThk+backPanelThk-backArchCutHeight, 1,
		0, -backArchCutRad, 901,
		0, displayThk+middlePanelThk+backPanelThk, 3001,
		-a/2, displayThk+middlePanelThk+backPanelThk-backArchCutHeight, 3001
	del 1

	del 1

endif

