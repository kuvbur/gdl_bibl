	stCupboardDoors[1] = `Одиночный`
	stCupboardDoors[2] = `Две Створки`

! const values for parameter: gs_knob_type_m
KNOB_STYLE_1	= 1
KNOB_STYLE_2	= 2
KNOB_STYLE_3	= 3
KNOB_STYLE_4	= 4
KNOB_STYLE_5	= 5
KNOB_STYLE_6	= 6
KNOB_STYLE_7	= 7
KNOB_STYLE_8	= 8

DET3D_OFF				= 0
DET3D_SIMPLE			= 1
DET3D_DETAILED			= 2

KNOB_VERTICAL 			= 1
KNOB_HORIZONAL 			= 2

DRAWERS_CUPBOARD		= 1
DRAWERS_SHELVES			= 2
DRAWERS					= 3
CUPBOARD				= 4
SHELVES					= 5

CUPBOARDDOORS_SINGLE	= 1
CUPBOARDDOORS_DOUBLE	= 2

CABINET_KNOB_VER		= 0
CABINET_KNOB_HOR		= 1

frontThk		= 0.019
shelfThk		= 0.019
boardThk		= 0.019
drawerGap		= 0.005
baseHeight		= (cabinetBaseHeight * bCabinetBase)

enableDrawers	= (iCabinetScheme = DRAWERS_CUPBOARD or iCabinetScheme = DRAWERS_SHELVES or iCabinetScheme = DRAWERS)
enableCupboard	= (iCabinetScheme = DRAWERS_CUPBOARD or iCabinetScheme = CUPBOARD)
enableShelves	= (iCabinetScheme = DRAWERS_SHELVES or iCabinetScheme = SHELVES)

if iCabinetScheme = DRAWERS then
	drawerDist		= (zzyzx - baseHeight) / drawerNum
else
	drawerDist		= gs_drawerHeight
endif
if iCabinetScheme = SHELVES then
	shelfDist = (zzyzx - baseHeight - boardThk * 2 - shelfNum * shelfThk) / (shelfNum + 1) + shelfThk
else
	shelfDist = (zzyzx - baseHeight - gs_drawerHeight * drawerNum - boardThk - shelfNum * shelfThk - shelfThk / 2) / (shelfNum + 1) + shelfThk
endif
if iCabinetScheme = CUPBOARD then
	realUpperCabHeight = zzyzx - baseHeight
else
	realUpperCabHeight = gs_upperCabHeight
endif

shelfWidth		= a - boardThk * 2
drawerWidth		= a - drawerGap * 2
doorWidth		= (a - a / 2 * (iCupboardDoors = CUPBOARDDOORS_DOUBLE) - drawerGap * 2) * enableCupboard


minKnobSize = 0.045
if gs_knob_type_m_up = 1 then
	minKnobSize = 0.025
endif

bUpperKnobs = 1
if gs_knob_p_m = CABINET_KNOB_VER then
	if (realUpperCabHeight - 0.025) < minKnobSize then
		bUpperKnobs = 0
	endif
else
	if (doorWidth - 0.04) < minKnobSize then
		bUpperKnobs = 0
	endif
endif



