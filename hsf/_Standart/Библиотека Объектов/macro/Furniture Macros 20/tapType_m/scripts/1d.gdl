
EPS = 0.0001

TAPSYMBOL_OFF			= 0
TAPSYMBOL_SIMPLE		= 1
TAPSYMBOL_DETAILED		= 2
TAPSYMBOL_SYMBOLIC_1	= 3
TAPSYMBOL_SYMBOLIC_2	= 4

TAPGROUP_SINGLE 		= 1
TAPGROUP_TWOHANDLE 		= 2
TAPGROUP_TRADITIONAL 	= 3
TAPGROUP_SENSOR			= 4
TAPGROUP_WALLMOUNTED	= 5
TAPGROUP_NONE 			= 6
TAPGROUP_CUSTOMTAPS		= 7

bWallMountedTap 		= (gs_tap_type_m > 20 and gs_tap_type_m < 28) or (gs_tap_type_m = -1 and iTapGroup = TAPGROUP_WALLMOUNTED)

! ConPosX/ConPosY Range
if bWallmountedTap then
	if gs_tap_type_m = 21 then
		widthTap = 0.068
		posTap = 0.041
	else
		if gs_tap_type_m = -1 then
			widthTap = 0.05
			posTap = 0.036
		else
			widthTap = 0.05
			posTap = 0.0765
		endif
	endif
endif

if bWallMountedTap then
	roundOff1	= 0.002
	roundOff2	= 0.007
	xShowerPos	= 0.2
	zShowerPos	= 0.15
	yWallPos	= 0
	yTapPos		= 0
else
	xShowerPos	= 0
	zTapPos		= 0
endif

