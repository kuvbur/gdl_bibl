
pen gs_cont_pen

if combi_type=0 then
	for i=1 to lamp_combi_n-1
		add2 a/lamp_combi_n,0
		line2 0,0,0,b
	next i
	del top
endif

if combi_type=1 then
	line2 0,0,0,b
	line2 0,0,a,0
	line2 a,0,a,b
	line2 0,b,a,b

	for i=1 to lamp_combi_n-1
		add2 a/lamp_combi_n,0
		line2 0,0,0,b
	next i
	del top
endif

if combi_type=2 then
	line2 0,0,0,b
	line2 0,0,a,0
	line2 a,0,a,b
	line2 0,b,a,b


	for i=1 to lamp_combi_n-1
		add2 a/lamp_combi_n,0
		line2 0,0,0,b
	next i
	del lamp_combi_n-1

	for j=1 to lamp_combi_m
		add2 0,(b-0.002)/lamp_combi_m+0.0005
		line2 0,0,a,0
	next j
	del top
endif

if combi_type=3 then
	line2 0,0,0,b
	line2 0,0,a,0
	line2 a,0,a,b
	line2 0,b,a,b
endif
