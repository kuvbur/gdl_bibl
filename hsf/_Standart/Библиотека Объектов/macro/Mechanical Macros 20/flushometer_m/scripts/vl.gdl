
! ==============================================================================
! flushometer_m
! ==============================================================================


values "gs_detlevel_3D_m" 0, 1, 2, 3
values "strFlushometerType" st_flushometerTypes
values "iFlushometerType" 1, 2, 3

if GLOB_MODPAR_NAME = "strFlushometerType" then
	if strFlushometerType = st_flushometerTypes[1] then iFlushometerType = 3
	if strFlushometerType = st_flushometerTypes[2] then iFlushometerType = 1
	if strFlushometerType = st_flushometerTypes[3] then iFlushometerType = 2
	parameters iFlushometerType = iFlushometerType
else
	if iFlushometerType = 3 then strFlushometerType = st_flushometerTypes[1]
	if iFlushometerType = 1 then strFlushometerType = st_flushometerTypes[2]
	if iFlushometerType = 2 then strFlushometerType = st_flushometerTypes[3]
	parameters strFlushometerType = strFlushometerType
endif

if bHideFlushometerParams then
	lock "gs_pipe_mat", "strFlushometerType", "matFlushometer", "matSensor"
	hideparameter "gs_pipe_mat", "strFlushometerType", "matFlushometer", "matSensor"
endif

if not(bHideFlushometerParams) & iFlushometerType > 1 then
	lock "matSensor"
	hideparameter "matSensor"
endif

if iFlushometerType = 3 then
	xTapPos = 0
else
	xTapPos = 4 3/4"
endif

! =============================================================================
end xTapPos
! =============================================================================
