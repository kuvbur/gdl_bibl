
pen gs_cont_pen
fill gs_fill_type

gosub "min_max"
mul2 a/abs(xMax-xMin), b/yMax

if bFill then
	_frameFill = 7
else
	_frameFill = 1
endif

if iView_type = TYPE_TOP then
	if GLOB_CONTEXT <> 4 then
		gosub "hotspot_symbol"
		gosub "symbol_floor_plan"
	endif

	if GLOB_CONTEXT = 4 then
		gosub "hotspot_front"
		gosub "detailed_front"
	endif
endif

if iView_type = TYPE_FRONT or iView_type = TYPE_SIDE or iView_type = TYPE_GENERAL then
	gosub "hotspot_front"
	gosub "detailed_front"
endif

! ==============================================================================
end ! end ! end ! end ! end ! end ! end ! end ! end ! end ! end ! end ! end ! en
! ==============================================================================

! ------------------------------------------------------------------------------
"symbol_floor_plan":
! ------------------------------------------------------------------------------
	poly2_b 5, _frameFill, gs_fill_pen, gs_back_pen,
		xMin, 0.005, 1,
		xMin, -0.005, 1,
		xMax, -0.005, 1,
		xMax, 0.005, 1,
		xMin, 0.005, -1
return

! ------------------------------------------------------------------------------
"detailed_front":
! ------------------------------------------------------------------------------

	if iSymbol_type = SYMBOL_MAN_DOG or \
		iSymbol_type = SYMBOL_GROUP_1 or \
		iSymbol_type = SYMBOL_GROUP_3 or \
		iSymbol_type = SYMBOL_WOMAN_BALL then
			if iSymbol_type = SYMBOL_MAN_DOG then
				poly2_b     123,     _frameFill, gs_fill_pen, gs_back_pen,
				   get(123*3)
				poly2_b     181,     _frameFill, gs_fill_pen, gs_back_pen,
				   get(181*3)
			endif
			if iSymbol_type = SYMBOL_GROUP_1 then
				poly2_b     62,     _frameFill, gs_fill_pen, gs_back_pen,
				   get(62*3)
				poly2_b     169,     _frameFill, gs_fill_pen, gs_back_pen,
				   get(169*3)
			endif
			if iSymbol_type = SYMBOL_GROUP_3 then
				poly2_b     64,     _frameFill, gs_fill_pen, gs_back_pen,
				   get(64*3)
				poly2_b     100,     _frameFill, gs_fill_pen, gs_back_pen,
				   get(100*3)
			endif
			if iSymbol_type = SYMBOL_WOMAN_BALL then
				poly2_b     10,     _frameFill, gs_fill_pen, gs_back_pen,
				   get(10*3)
				poly2_b     163,     _frameFill, gs_fill_pen, gs_back_pen,
				   get(163*3)
			endif
	else
		poly2_b     NSP/3,     _frameFill, gs_fill_pen, gs_back_pen,
		   get(NSP)
	endif

	gosub "line_contour"
	for i = 1 to NSP/4
		line2	get(4)
	next i
return


