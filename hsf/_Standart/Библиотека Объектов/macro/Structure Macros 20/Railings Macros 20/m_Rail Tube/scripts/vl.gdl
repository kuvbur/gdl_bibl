
! ======================================================================
! SUPPORTS
! ======================================================================

values{2} "iSupportType" 	SUPPORT_POST, `Стойки`,
							SUPPORT_WALLBRACKET, `Настенные Кронштейны`

if not(bSupport) then
	lock			"iSupportType"
	lock			"np"
	lock			"wabh"	
endif

if iSupportType <> SUPPORT_WALLBRACKET then
	lock			"wabh"	
endif

! ======================================================================
! PARAMETER RANGE DEFINITION
! ======================================================================


values "hrd" range(0,)
values "hro" range[hrd / 2,)

values "np" range[2,)
values "sbh" range[2 * hrd, 2 * hro)

if sb then
	values "hr" range(sbh,)
else
	values "hr" range(hrd,)
endif

values "wabh" range(0,)

! ======================================================================
! PARAMETER INPUT CALCULATION
! ======================================================================


if sb = 0 then
	lock			"sbh"
	hideparameter	"sbh"
endif


! ======================================================================
! A, B, ZZYZX DEFINITION
! ======================================================================

values "a" lra
lock "a"
values "b" hrd
lock "b"
values "zzyzx" hr
lock "zzyzx"

values "res" range[3,)
values "rescs" range[3,)

if gs_cont_pen=0 then parameters gs_cont_pen=2
if gs_fill_pen=0 then parameters gs_fill_pen=91

