
if ac_pitch<eps then
	!! Reference Basis Point
	unID=1
	hotspot2 0,ref_direction[1][2],unID,ref_direction[1][1],1+128 : unID=unID+1
	hotspot2 -1,ref_direction[1][2],unID,ref_direction[1][1],3 : unID=unID+1
	hotspot2 ref_direction[1][1],ref_direction[1][2],unID,ref_direction[1][1],2 : unID=unID+1

	hotspot2 ref_direction[1][1],0,unID,ref_direction[1][2],1+128 : unID=unID+1
	hotspot2 ref_direction[1][1],-1,unID,ref_direction[1][2],3 : unID=unID+1
	hotspot2 ref_direction[1][1],ref_direction[1][2],unID,ref_direction[1][2],2 : unID=unID+1

	!! Reference Vector
	hotspot2 ref_direction[1][1],ref_direction[1][2]+ref_direction[1][4],unID,ref_direction[1][3],1+128 : unID=unID+1
	hotspot2 ref_direction[1][1]-1,ref_direction[1][2]+ref_direction[1][4],unID,ref_direction[1][3],3 : unID=unID+1
	hotspot2 ref_direction[1][1]+ref_direction[1][3],ref_direction[1][2]+ref_direction[1][4],unID,ref_direction[1][3],2 : unID=unID+1

	hotspot2 ref_direction[1][1]+ref_direction[1][3],ref_direction[1][2],unID,ref_direction[1][4],1+128 : unID=unID+1
	hotspot2 ref_direction[1][1]+ref_direction[1][3],ref_direction[1][1]-1,unID,ref_direction[1][4],3 : unID=unID+1
	hotspot2 ref_direction[1][1]+ref_direction[1][3],ref_direction[1][1]+ref_direction[1][4],unID,ref_direction[1][4],2 : unID=unID+1

	line2 ref_direction[1][1],ref_direction[1][2],ref_direction[1][1]+ref_direction[1][3],ref_direction[1][2]+ref_direction[1][4]
endif

! -------------
! Making the 2D
! -------------

rot2 delta
for i=1 to vardim1(loc_coords)
	hotspot2 loc_coords[i][2],loc_coords[i][3]
next i

for i=1 to vardim1(loc_coords)
	if loc_coords[i][1]<1 1/2" then
		mask=1
	else
		mask=-1
	endif

	put loc_coords[i][2], loc_coords[i][3], mask
next i

pen gs_cont_pen
fill gs_fill_type
poly2_b{2} vardim1(loc_coords), 1+2+4+8+64, gs_fill_pen, gs_back_pen, 0, 0, beta,
	   get(nsp)
del 1

end

