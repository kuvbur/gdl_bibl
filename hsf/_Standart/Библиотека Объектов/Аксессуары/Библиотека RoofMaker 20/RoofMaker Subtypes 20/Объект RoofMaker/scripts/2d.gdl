
PEN gs_cont_pen
SET FILL gs_fill_type

HOTSPOT2 -a/2, -b/2, 1
HOTSPOT2 -a/2,  b/2, 2
HOTSPOT2  a/2,  b/2, 3
HOTSPOT2  a/2, -b/2, 4
HOTSPOT2    0,    0, 5

POLY2_B	5, 1+2+64, gs_fill_pen, gs_back_pen,
	   -a/2, -b/2, 15,
	   -a/2,  b/2, 15,
		a/2,  b/2, 15,
		a/2, -b/2, 15,
	   -a/2, -b/2, -1

DIM treeway[]
n=REQUEST("ANCESTRY_INFO", 1, name, guid, treeway)

IF n>2 THEN
	PEN 10
	DEFINE STYLE "missing" fontType, 2, 8, 1
	SET STYLE "missing"
	TEXT2 0, 0, `отсутствует:`

	DEFINE STYLE "element" fontType, 2, 2, 2
	SET STYLE "element"
	TEXT2 0, 0, name
ENDIF

