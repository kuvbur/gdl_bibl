
! =============================================================================
! Localization
! =============================================================================
dim stGeometry[7]
	stGeometry[1]	= `Угол Ската`
	stGeometry[2]	= `Высота Оси`
	stGeometry[3]	= `Длина Элемента`
	stGeometry[4]	= `Ширина Профиля`
	stGeometry[5]	= `Высота Профиля`
	stGeometry[6]	= `Низ Подрезан под Крышу`
	stGeometry[7]	= `Подрезка Верха`


! =============================================================================
! Tabpages
! =============================================================================

TABID_ROOT					= -1
TABID_GEOMETRY				= 1

call "RoofMaker_macro"	parameters all	iObjectType				= 7,
										bEnableRafter			= bEnableRafter,
										bEnableSymbol			= bEnableSymbol,
										bEnableResolution		= bEnableResolution,
										gs_iDisplayStandards	= gs_iDisplayStandards

ui_page TABID_GEOMETRY, TABID_ROOT, `Геометрия`, "uiTab_Dimension_flat(1)"
if gs_ui_current_page = TABID_GEOMETRY then
	gosub "geometryPage"
endif

! ======================================================================
end
! ======================================================================

"geometryPage":
! =============================================================================
! Geometry
! =============================================================================

	pageStartY		= 5
	picX			= 190
	picY			= pageStartY + 6
	xInfieldSmall	= 70
	xInfieldBig		= 90
	yInfield		= 19

	ui_pict 1,	picX, picY, 55,  194, 1												!post_pict1.png

	ui_infield "rm_PitchAngle", picX-93, picY+123, xInfieldBig, yInfield			ui_tooltip stGeometry[1]
	ui_infield "rm_Height", picX-93, picY+69, xInfieldBig, yInfield					ui_tooltip stGeometry[2]
	ui_infield "rm_StructuralLength", picX+60, picY+69, xInfieldBig, yInfield		ui_tooltip stGeometry[3]
	ui_infield "rm_ProfileWidth", picX, picY+199, xInfieldBig, yInfield				ui_tooltip stGeometry[4]
	ui_infield "rm_ProfileHeight", picX+60, picY+156, xInfieldBig, yInfield			ui_tooltip stGeometry[5]

	ui_infield{3} "rm_bIsBottomCut", picX+60, picY+110, 180, yInfield * 1.5,
		7, "", 0, 0,
		0,0,0,0,
		0, stGeometry[6],	0,
		0, stGeometry[6],	1	ui_tooltip stGeometry[6]

	ui_infield{3} "rm_bIsTopCut", picX+60, picY-10, 180, yInfield * 1.5,
		7, "", 0, 0,
		0,0,0,0,
		0, stGeometry[7],	0,
		0, stGeometry[7],	1	ui_tooltip stGeometry[7]
return
