
!! Chandelier
unID=1
mul2 A/0.58, B/0.58
call "GetPlanViewGlobals" parameters all returned_parameters gs_symbtype_2D_m

if GLOB_PREVIEW_MODE = 3 then				! in case of 2D-3D Favorite Preview
	gs_symbtype_2D_m = 1
endif

pen gs_cont_pen
fill gs_fill_type

If gs_symbtype_2D_m = 1 Then		! Realistic Symbol
	hotspot2 0,0,unID : unID=unID+1

	rot2 45
	add2 -0.036,-0.036

	rect2 0,0,0.072,0.072
	hotspot2 0,0
	hotspot2 0,0.072
	hotspot2 0.072,0.072
	hotspot2 0.072,0

	del 2

	for i=1 to 5
		add2 0,-0.251
		rot2 45
		add2 -0.029,-0.029
		rect2 0,0,0.058,0.058
		hotspot2 0.029,0.029
		del 3

		rot2 36
		rect2 -0.002,0,0.002,0.251
		del 1

		rot2 72
	next i
	del 5

	rot2 45
	add2 -0.036,-0.036
	poly2_b 5, 2+64,gs_fill_pen,gs_back_pen,
			0,0,1,
			0.072,0,1,
			0.072,0.072,1,
			0,0.072,1,
			0,0,-1
	del 2

	for i=1 to 5
		add2 0,-0.251
		rot2 45
		add2 -0.029,-0.029
		poly2_b 5, 2+64,gs_fill_pen,gs_back_pen,
				0,0,1,
				0.058,0,1,
				0.058,0.058,1,
				0,0.058,1,
				0,0,-1
		del 3

		poly2_b 5, 2+64,gs_fill_pen,gs_back_pen,
			   -0.002,0,1,
				0.002,0,1,
				0.002,-0.251,1,
			   -0.002,-0.251,1,
			   -0.002,0,-1

		rot2 72
	next i
	del 5

ENDIF

if gs_symbtype_2D_m = 2 OR gs_symbtype_2D_m = 3 then		! Electrical Symbol or RCP Symbol
	call "Lamp_symbol" parameters all \
									bWallLamp = 0,
									bDirect = 0,
									Symbol_unID = unID,
									specSymbolRotation=180
endif
