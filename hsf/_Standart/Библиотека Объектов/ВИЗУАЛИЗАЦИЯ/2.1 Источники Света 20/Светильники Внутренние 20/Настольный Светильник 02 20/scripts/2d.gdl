
pen gs_cont_pen
fill gs_fill_type

unID=1

hotspot2 0,0,unID,A,1+256 : unID=unID+1
hotspot2 -1,0,unID,A,3 : unID=unID+1
hotspot2 A,0,unID,A,2 : unID=unID+1

dx=cos(alf+bet)*armLength

hotspot2 0,0.08,unID : unID=unID+1
hotspot2 0,-0.08,unID : unID=unID+1
hotspot2 dx,0,unID : unID=unID+1


fill gs_fill_type
poly2_b 5, 2+64,gs_fill_pen,gs_back_pen,     ! FILL
		dx,-r1,1,
		dx,r1,1,
		a,r1,0,
		a,-r1,1,
		dx,-r1,-1
if dx>0 then
	poly2_b 5, 2+64,gs_fill_pen,gs_back_pen,
			dx,-r1,1,
			dx,r1,1,
			0,r1,0,
			0,-r1,1,
			dx,-r1,-1
endif

poly2_a 5, 1,gs_fill_pen,     ! CONTOUR
		dx,-r1,1,
		dx,r1,1,
		a,r1,0,
		a,-r1,1,
		dx,-r1,-1

if dx>0 then
	poly2_a 5, 1,gs_fill_pen,
			dx,-r1,1,
			dx,r1,1,
			0,r1,0,
			0,-r1,1,
			dx,-r1,-1
endif

! --- bottom

fill gs_fill_type
if dx > -0.08 then
	d0=sqr((0.08^2)-(r1^2))
	poly2_b 5, 2+64,gs_fill_pen,gs_back_pen,
			d0,r1,601,
			0,0,901,
			-0.08,0,3001,
			d0,-r1,3000,
			d0,r1,-1
else
	d0=sqr((0.08^2)-(r1^2))
	poly2_b 4, 2+64,gs_fill_pen,gs_back_pen,
			d0,r1,601,
			0,0,901,
			-d0,r1,3000,
			d0,r1,-1
	poly2_b 4, 2+64,gs_fill_pen,gs_back_pen,
			d0,-r1,601,
			0,0,901,
			-d0,-r1,3000,
			d0,-r1,-1
endif

if dx > -0.08 then          ! CONTOUR
	d0=sqr((0.08^2)-(r1^2))
	poly2_a 4, 1,gs_fill_pen,
			d0,r1,601,
			0,0,901,
			-0.08,0,3001,
			d0,-r1,3000
else
	d0=sqr((0.08^2)-(r1^2))
	poly2_a 3, 1,gs_fill_pen,
			d0,r1,601,
			0,0,901,
			-d0,r1,3000
	poly2_a 3, 1+2+8+64,gs_fill_pen,
			d0,-r1,601,
			0,0,901,
			-d0,-r1,3000
endif
