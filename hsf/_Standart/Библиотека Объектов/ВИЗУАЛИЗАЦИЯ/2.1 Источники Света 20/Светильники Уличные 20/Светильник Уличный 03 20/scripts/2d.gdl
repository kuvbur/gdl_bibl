
pen gs_cont_pen
fill gs_fill_type

eps=0.0001
unID=1

poly2_b	2, 1+2+64, gs_fill_pen, gs_back_pen,
		0, 0, 901,
		pw, 360, 4001

for i=1 to iLampType
	poly2_b	6, 1+2+64, gs_fill_pen, gs_back_pen,
			pw/2*cos(30), pw/4, 0,
			0, 0, 900,
			pw/2*cos(30), -pw/4, 3001,
			arm_len, -pw/4, 1,
			arm_len, pw/4, 1,
			pw/2*cos(30), pw/4, -1

	poly2_b	2, 1+2+64, gs_fill_pen, gs_back_pen,
			arm_len, 0, 901,
			gsd2, 360, 4001
	rot2 360/iLampType
next i

poly2_b	2, 1+2+64, gs_fill_pen, gs_back_pen,
		0, 0, 901,
		pw/2, 360, 4001

del iLampType

! --- Hotspot Editing ---

hotspot2 0,0,unID : unID=unID+1

for k=1 to iLampType

	hotspot2 0,			0, unID, arm_len, 1+128 : unID=unID+1
	hotspot2 -1,		0, unID, arm_len, 3     : unID=unID+1
	hotspot2 arm_len,	0, unID, arm_len, 2     : unID=unID+1

	add2 arm_len, 0
	for i=1 to 4
		! --- Light Cone Radius ---
		hotspot2 0,		0,		unID,	gsd2,	1+128, gsd 	: unID=unID+1
		hotspot2 -1,	0,		unID,	gsd2,	3+128, gsd 	: unID=unID+1
		hotspot2 gsd2,	0,		unID,	gsd2,	2,	   gsd 	: unID=unID+1
		rot2 90
	Next i
	del 4
	del 1
	rot2 360/iLampType
next k
del iLampType

! --- Hotspot Editing ---

END
