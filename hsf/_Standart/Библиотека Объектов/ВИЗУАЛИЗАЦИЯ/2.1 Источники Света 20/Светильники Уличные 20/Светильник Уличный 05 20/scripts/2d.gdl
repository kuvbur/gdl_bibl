
! Street Lamp 05

pen gs_cont_pen

unID=1

fill gs_fill_type
poly2_b 2, 1+2+64,gs_fill_pen,gs_back_pen,
		0,0,901,
		A2,360,4001

circle2 0,0,pw/2+0.07
line2 -sqr(2)/2*(pw/2+0.07),-sqr(2)/2*(pw/2+0.07),sqr(2)/2*(pw/2+0.07),sqr(2)/2*(pw/2+0.07)
line2 -sqr(2)/2*(pw/2+0.07),sqr(2)/2*(pw/2+0.07),sqr(2)/2*(pw/2+0.07),-sqr(2)/2*(pw/2+0.07)

!!---- Hotspot Editing
hotspot2 0,0,unID : unID=unID+1

for i=1 to 4
	!!---- Light Cone Radius
	hotspot2 0,0,unID,A2,1+128,A : unID=unID+1
	hotspot2 -1,0,unID,A2,3,A : unID=unID+1
	hotspot2 A2,0,unID,A2,2,A : unID=unID+1
	rot2 90
next i
del 4

del top
