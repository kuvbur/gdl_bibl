"makeCustomPicture2D":
	if bCustomPic2D then
		if   gs_picture_name_2D <> "" then
			picture2{2}  gs_picture_name_2D, a, b, 1
		else
			picture2{2}  1,a,b,1			!deciduous trees maple top
		endif
	endif
return


