
pen gs_cont_pen

if iHedgeType = HEDGE_LINEAR then
	fill gs_fill_type
	poly2_b       4, 1+2+4+64,     gs_fill_pen,     gs_back_pen,
				0,	b,	1,
				a,	b,	0,
				a,	0,	1,
				0,	0,	0
else
	if iHedgeType = HEDGE_BENDED then
		if breit<0 then breit=0
		if rad<=0 then rad=1
		
		if wink<=0 then
			wink=-wink
			mul2 1,-1
		endif
		
		arc2 0,0,rad,0,wink
		arc2 0,0,rad+breit,0,wink

		hotspot2 0,0
		hotspot2 rad,0
		hotspot2 rad+breit,0
		
		rot2 wink
		
		hotspot2 rad,0
		hotspot2 rad+breit,0
		
		
		fill gs_fill_type
		
		if wink >=360 then wink=359.988
		del 1
		poly2_b 6, 2+64,gs_fill_pen,gs_back_pen,
				rad,0,1,
				0,0,901,
				rad,wink,4001,
				(rad+breit)*cos(wink),(rad+breit)*sin(wink),1,
				rad,-wink,4001,
				rad, 0,-1

	else
		line2 0,0,0,b
		line2 0,b/2,-b/5,b/2

		hotspot2 0,0
		hotspot2 0,b
		hotspot2 -b/5,b/2
		hotspot2 0,b/2

	endif
endif

