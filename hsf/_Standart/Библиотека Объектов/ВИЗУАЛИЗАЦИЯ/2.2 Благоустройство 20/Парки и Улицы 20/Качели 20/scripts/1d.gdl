
dim aDefaultLength[4]
	aDefaultLength[1] = 2.23
	aDefaultLength[2] = 3.33
	aDefaultLength[3] = 5.19
	aDefaultLength[4] = 6.34

legLength	= sqr((B / 2)^2 + ZZYZX^2)
legAngle	= atn(B / 2 / ZZYZX)
legTilt		= 10
legOffset 	= ZZYZX * tan(legTilt)

beamThk		= 0.1
beamLength	= legLength * 0.95

spikeLength	= legLength * 0.2
spikeThk	= beamThk * 0.9
spikeGroove	= spikeThk / 4

plateThk	= 0.01
plateHeight	= 0.25
plateTrim	= 0.02

crossBeamRad	= 0.05
crossBeamOffset	= 0.15

seatWidth		= 0.6
seatDepth		= 0.2
seatThk			= 0.02
seatRad			= seatDepth / 2
seatBend		= 1
seatHeight		= 0.5
seatOffset		= 0.7

babySeatWidth	= 0.30
babySeatDepth	= 0.25
babySeatHeight	= babySeatDepth
babySeatRad		= 0.08
babySeatThk		= 0.002

connectionWidth	= seatWidth * 1.2
ropeRad			= 0.006

if nSeats < 3 then
	nLegs = 2
else
	nLegs = 3
endif

dim aCrossBeamSegments[2]
if nLegs = 2 then
	aCrossBeamSegments[1] = A - legOffset * 2 - beamThk
	aCrossBeamSegments[2] = 0
else
	if nSeats = 3 then
		aCrossBeamSegments[1] = (A - legOffset * 2 - beamThk * 2) / 3
		aCrossBeamSegments[2] = aCrossBeamSegments[1] * 2
	else
		aCrossBeamSegments[1] = (A - legOffset * 2 - beamThk * 2) / 2
		aCrossBeamSegments[2] = aCrossBeamSegments[1]
	endif
endif

dim aSeatPositions[4]
	aSeatPositions[1] = 0
	aSeatPositions[2] = 0
	aSeatPositions[3] = 0
	aSeatPositions[4] = 0

if nSeats = 1 then
	aSeatPositions[1] = A / 2
endif

if nSeats = 2 then
	aSeatPositions[1] = legOffset + seatOffset
	aSeatPositions[2] = A - legOffset - seatOffset
endif

if nSeats = 3 then
	aSeatPositions[1] = legOffset + aCrossBeamSegments[1] / 2
	aSeatPositions[2] = legOffset + aCrossBeamSegments[1] + seatOffset + beamThk
	aSeatPositions[3] = A - seatOffset - legOffset 
endif

if nSeats = 4 then
	aSeatPositions[1] = legOffset + seatOffset
	aSeatPositions[2] = A / 2 - seatOffset - beamThk
	aSeatPositions[3] = A / 2 + seatOffset + beamThk
	aSeatPositions[4] = A - legOffset - seatOffset
endif

dim bBabySeats[4]
	bBabySeats[1] = 0
	bBabySeats[2] = 0
	bBabySeats[3] = 0
	bBabySeats[4] = 0

if bBabySeat then
	if nSeats < 4 then
		bBabySeats[1] = 1
	else
		bBabySeats[1] = 1
		bBabySeats[2] = 1
	endif
endif

