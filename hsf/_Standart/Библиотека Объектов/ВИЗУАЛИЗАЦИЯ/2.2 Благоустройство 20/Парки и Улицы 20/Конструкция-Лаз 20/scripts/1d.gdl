

CLIMBTYPE_SIMPLE	= 1
CLIMBTYPE_WOODEN	= 2

dim stClimbType[2]
	stClimbType[1] = `Простой Лаз`
	stClimbType[2] = `Лаз с Рукоходом`

dim aDefaultDimensions[2][3]		! Width, Depth, Height
	aDefaultDimensions[1][1] = 2
	aDefaultDimensions[1][2] = 1
	aDefaultDimensions[1][3] = 1
	aDefaultDimensions[2][1] = 2.13
	aDefaultDimensions[2][2] = 2.13
	aDefaultDimensions[2][3] = 2.13

if iClimbType = CLIMBTYPE_SIMPLE then

	dist	= 0.25
	r1		= 0.03
	wdt		= 0.12
	stk		= 0.05

	alf1	= atn(ZZYZX / (A / 2))

	h_wdt	= wdt / sin(alf1)
	v_wdt	= wdt / cos(alf1)

	lng		= sqr(A / 2 ^ 2 + ZZYZX ^ 2)
	num		= int((lng - 2 * r1) / dist)
	dist1	= (lng - num * dist) / 2

endif

if iClimbType = CLIMBTYPE_WOODEN then

	defaultWidth	= 2.13
	defaultDepth	= 2.13
	defaultHeight	= 2.13

	beamThk			= 0.1

	ropeRad			= 0.01
	netDistance		= 0.3
	nRopesX			= int(A / netDistance) - 1
	nRopesY			= int(B / netDistance) - 1
	netOffsetX		= (A - (netDistance * (nRopesX - 1))) / 2
	netOffsetY		= (B - (netDistance * (nRopesY - 1))) / 2
	knotRad			= ropeRad * 2
	knotHeight		= ropeRad * 2.5

	barRad			= 0.025
	barDistance		= 0.3
	nBars			= int((ZZYZX - beamThk) / barDistance) - 1
	barOffset		= (ZZYZX - (barDistance * (nBars - 1))) / 2 - beamThk
	shortBarLength	= (B - beamThk * 5) / 3
	longBarLength	= shortBarLength * 2

	verticalBarDistance	= (B - beamThk * 4) / 3

	ladderDistance	= 0.3
	stepDistance	= 0.35
	stepWidth		= 0.45
	stepRad			= 0.015
	nSteps			= int((ZZYZX - beamThk * 2) / stepDistance)
	stepOffset		= (ZZYZX - beamThk * 2 - (stepDistance * (nSteps - 1))) / 2

endif

