
!!Tree Protection Vert.gsm




PEN gs_cont_pen

!!! ********************** Hotspots
	unID=1

	HOTSPOT2 0,0,unID :	unID=unID+1

	FOR NN=1 TO 4
		HOTSPOT2 0, 0, unID, temp_RR, 1+128, A:	unID=unID+1
		HOTSPOT2 -1, 0, unID, temp_RR, 3+128, A: unID=unID+1
		HOTSPOT2 temp_RR, 0, unID, temp_RR, 2, A: unID=unID+1

		HOTSPOT2 0, 0, unID, radin, 1+128:	unID=unID+1
		HOTSPOT2 -1, 0, unID, radin, 3+128: unID=unID+1
		HOTSPOT2 radin, 0, unID, radin, 2: unID=unID+1

	ROT2 90
	NEXT NN
	DEL 4


!!! ************************* Feedback of 2D Hotspot Editing

IF GLOB_CONTEXT>20 and GLOB_CONTEXT<40 THEN

	CIRCLE2 0,0,temp_RR
	CIRCLE2 0,0,radin
ELSE
!!! ************************* 2D Symbol

	fill gs_fill_type
	rad_2=a/2-0.02
	for i=1 to 2
		poly2_b 4, 1+2+4+64, gs_fill_pen, gs_back_pen,
				0,			0,		900,
				rad_2,		360,	4001,
				0,			0,		901,
				rad_2-0.02,	360,	4001

		rad_2=radin+0.02
	next i

	rot2 -90
	for i=1 to 2*nBars
		poly2_b 5, 1+2+4+64, gs_fill_pen, gs_back_pen,
			   -0.01,     a/2,    1,
				0.01,     a/2,    1,
				0.01,     radin+0.02,    1,
			   -0.01,     radin+0.02,    1,
			   -0.01,     a/2,   -1
		line2 -0.01, radin+0.04, 0.01, radin+0.04
	!!	hotspot2 0,radin+0.02
	!!	hotspot2 0,a/2
		rot2 360/(2*nBars)
	next i
	del 2*nBars
ENDIF
