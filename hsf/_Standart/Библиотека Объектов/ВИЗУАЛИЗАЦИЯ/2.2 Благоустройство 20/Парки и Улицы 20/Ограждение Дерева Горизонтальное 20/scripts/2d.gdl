
!!Tree Protection Horiz.gsm


PEN gs_cont_pen

!!! ********************** Hotspots

	unID=1

	HOTSPOT2 0,0,unID :	unID=unID+1

	FOR NN=1 TO 4
		HOTSPOT2 0, 0, unID, temp_RR, 1+128, A:	unID=unID+1
		HOTSPOT2 -1, 0, unID, temp_RR, 3+128, A: unID=unID+1
		HOTSPOT2 temp_RR, 0, unID, temp_RR, 2, A: unID=unID+1

		HOTSPOT2 0, 0, unID, temp_radin, 1+128, radin:	unID=unID+1
		HOTSPOT2 -1, 0, unID, temp_radin, 3+128, radin: unID=unID+1
		HOTSPOT2 temp_radin, 0, unID, temp_radin, 2, radin: unID=unID+1

	ROT2 90
	NEXT NN
	DEL 4

!!! ************************* Feedback of 2D Hotspot Editing

IF GLOB_CONTEXT>20 and GLOB_CONTEXT<40 THEN

	CIRCLE2 0,0,temp_RR
	CIRCLE2 0,0,temp_radin
ELSE
!!! ************************* 2D Symbol
	fill gs_fill_type

	b=a
	rad_1=a/2


	rad_2=rad_1
	for i=1 to nRings
		poly2_b 4, 1+2+4+64, gs_fill_pen, gs_back_pen,
				0,			0,		900,
				rad_2,		360,	4001,
				0,			0,		900,
				rad_2-0.02,	360,	4001

		rad_2=rad_2-(rad_1-radin/2-0.02)/(nRings-1)
	next i

	for i=1 to 4
		poly2_b 5, 1+2+4+64, gs_fill_pen, gs_back_pen,
				0.01,  rad_1, 1,
			   -0.01,  rad_1, 1,
			   -0.01,  radin/2, 1,
				0.01,  radin/2, 1,
				0.01,  rad_1, -1

		rot2 90
	next i
	del 4
ENDIF
