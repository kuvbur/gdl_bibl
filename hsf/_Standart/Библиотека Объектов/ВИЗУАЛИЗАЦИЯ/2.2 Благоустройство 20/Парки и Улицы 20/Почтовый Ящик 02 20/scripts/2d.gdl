
pen gs_cont_pen
set fill gs_fill_type

poly2_b   5, 1+2+64,  gs_fill_pen, gs_back_pen,
		-a/2, -b/2,      1,
		-a/2, b/2,      1,
		a/2, b/2,      1,
		a/2, -b/2,      1,
	   -a/2, -b/2,     -1


hotspot2	-a/2, -b/2
hotspot2	-a/2, b/2
hotspot2	a/2, b/2
hotspot2	a/2, -b/2


add2 -a/2, 0

for nx=1 to num_x-1

	line2 aa, b/2, aa, -b/2
	hotspot2 aa, b/2
	add2 aa, 0

next nx

del num_x-1
