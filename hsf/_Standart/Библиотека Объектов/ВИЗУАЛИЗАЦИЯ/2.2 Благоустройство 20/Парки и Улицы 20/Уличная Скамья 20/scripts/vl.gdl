

!Hide all parameters from UI
hideparameter all  "A", "B", "ZZYZX"

call "FM_types" parameters all


values{2} "gs_detlevel_3D_m" 	DLEV3D_DETAILED, `Детальный`,
								DLEV3D_OFF, `Откл.`

if gs_cont_pen<=0 or gs_cont_pen>=255 then parameters gs_cont_pen=4
if gs_fill_pen<=0 or gs_fill_pen>=255 then parameters gs_fill_pen=91

values "iBenchStyle" 1, 2, 3, 4

if GLOB_MODPAR_NAME = "iBenchStyle" then
	if iBenchStyle = 4 then
		ZZYZX = seatHeight
		lock "gs_frame_mat"
	else
		ZZYZX = seatHeight + backrestHeight
		if iBenchStyle = 1 then
			lock "gs_frame_mat"
		else
			lock "gs_stand_mat"
		endif
	endif
	parameters	ZZYZX			= ZZYZX
endif

values "ZZYZX" range [0.15,)

if iBenchStyle = 4 then
	lock "seatHeight"
	if GLOB_MODPAR_NAME = "ZZYZX" then
		seatHeight = ZZYZX
		parameters	seatHeight = seatHeight
	endif
else
	if iBenchStyle = 1 or iBenchStyle = 2 then
		values "seatHeight" range [0.1, ZZYZX - 0.05]
	endif

	if iBenchStyle = 3 then
		values "seatHeight" range [ZZYZX * 0.20497 + 0.01, ZZYZX - 0.05]
	endif

	backrestHeight = ZZYZX - seatHeight
	parameters	backrestHeight = backrestHeight
endif


