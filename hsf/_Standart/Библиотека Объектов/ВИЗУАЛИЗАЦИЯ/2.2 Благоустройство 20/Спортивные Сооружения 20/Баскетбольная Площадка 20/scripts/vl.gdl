
call "FM_types" parameters all

values "type" stCourtType
values "iType" COURT_TYPE_NBA_STANDARD, COURT_TYPE_FIBA_STANDARD, COURT_TYPE_HIGH_SCHOOL

if GLOB_MODPAR_NAME = "type" then
	iType = COURT_TYPE_NBA_STANDARD
	if type = stCourtType[2]	then iType = COURT_TYPE_FIBA_STANDARD
	if type = stCourtType[3] 	then iType = COURT_TYPE_HIGH_SCHOOL
	parameters iType = iType
else
	type = stCourtType[1]
	if iType = COURT_TYPE_FIBA_STANDARD then type = stCourtType[2]
	if iType = COURT_TYPE_HIGH_SCHOOL	then type = stCourtType[3]
	parameters type = type
endif

if bCustomSize then
	values "A" range [42', )
	values "B" range [74', )
	values "half_a" range [42'/2, )
	values "half_b" range [74'/2, )
else
	lock "A"
	lock "B"

	if iType = COURT_TYPE_NBA_STANDARD then
		parameters a=50', b=94'
	endif

	if iType = COURT_TYPE_FIBA_STANDARD then
		parameters a=15, b=28
	endif

	if iType = COURT_TYPE_HIGH_SCHOOL then
		parameters a=50', b=84'
	endif
endif

if GLOB_MODPAR_NAME = "half_a" or GLOB_MODPAR_NAME = "half_b" then
	a = 2 * half_a
	parameters a = a
	b = 2 * half_b
	parameters b = b
else
	half_a = a/2
	parameters half_a = half_a
	half_b = b/2
	parameters half_b = half_b
endif

values{2} "iDet2D" 	DETLEVEL_2D_DETAILED, `Детальный`,
					DETLEVEL_2D_SIMPLE, `Простой`
values{2} "gs_detlevel_3D_m" 	DLEV3D_DETAILED, `Детальный`,
								DLEV3D_SIMPLE, `Простой`,
								DLEV3D_OFF, `Откл.`
values "gs_resol" range [3, )
values "rout_area_x" range [0, )
values "rout_area_y" range [0, )

if gs_cont_pen<=0 then parameters gs_cont_pen=4
if line_cont_pen<=0 then parameters line_cont_pen=4
if gs_fill_pen<=0 then parameters gs_fill_pen=91
if runout_fill_pen<=0 then parameters runout_fill_pen=91
if line_fill_pen<=0 then parameters line_fill_pen=91


if gs_detlevel_3D_m = DLEV3D_SIMPLE then lock "gs_resol"
