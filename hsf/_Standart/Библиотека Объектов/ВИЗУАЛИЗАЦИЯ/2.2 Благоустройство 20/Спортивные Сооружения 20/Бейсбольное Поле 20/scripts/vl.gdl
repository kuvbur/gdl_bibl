
call "FM_types" parameters all


values{2} "gs_detlevel_3D_m" 	DLEV3D_DETAILED, `Детальный`,
								DLEV3D_SIMPLE, `Простой`,
								DLEV3D_OFF, `Откл.`
values{2} "iFieldType" 	FIELDTYPE_MAJOR, `Главная Лига`,
							FIELDTYPE_LITTLE, `Детская Лига`

values{2} "iDet2D" 	DETLEVEL_2D_DETAILED, `Детальный`,
					DETLEVEL_2D_SIMPLE, `Простой`

values{2} "iFieldSurface" 	FIELDSURFACE_DIRT, `Грунт`,
							FIELDSURFACE_GRASS, `Трава`

if iFieldSurface = FIELDSURFACE_DIRT then court_mat = 30

if otffen=0 then hideparameter "otf"
if outfield=0 then hideparameter "otffen"
if bac=0 then hideparameter "h"
if gs_cont_pen=0 then parameters gs_cont_pen=4
if gs_fill_pen=0 then parameters gs_cont_pen=91
if turf_fill_pen=0 then parameters turf_fill_pen=91
if line_fill_pen=0 then parameters line_fill_pen=91

if gs_resol<3 then parameters gs_resol=3
If gs_detlevel_3D_m = DLEV3D_SIMPLE then lock "gs_resol"

if iFieldType = FIELDTYPE_MAJOR then
	parameters a=90'
	parameters b=90'
	lock "a"
	lock "b"
endif

if iFieldType = FIELDTYPE_LITTLE then
	parameters a=60'
	parameters b=60'
	lock "a"
	lock "b"
endif
