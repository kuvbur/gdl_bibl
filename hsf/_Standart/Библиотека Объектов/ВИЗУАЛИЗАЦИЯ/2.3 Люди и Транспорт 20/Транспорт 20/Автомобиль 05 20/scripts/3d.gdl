
IF gs_detlevel_3D_m = DLEV3D_OFF THEN END

IF gs_shadow=0 THEN SHADOW OFF

pen gs_cont_pen

roty -gs_rot_ver
rotx gs_rot_hor
addx 1.6755

!!---------!!
!! Chassis !!
!!---------!!
call "TC_Chassis" parameters gs_chassis_mat=gs_carbody_mat

!!--------!!
!! Wheels !!
!!--------!!

dist_x=0.9354+1.6755
dist_y=0.688*2

addx -1.6755
for j=1 to 2
	addy dist_y/2
	for i=1 to 2
		call "TC_Wheel" parameters  a=0.615,b=0.192,zzyzx=0.615,angle=0,gs_wheel_mat=gs_wheel_mat
		muly -1
		addy dist_y
	next i
	del 5
	addx dist_x
next j
del 3

!!-------!!
!! Doors !!
!!-------!!
for i=1 to 2
	call "TC_FrontDoor" parameters gs_frame_mat=gs_frame_mat,gs_carbody_mat=gs_carbody_mat,gs_mirror_mat=gs_mirror_mat,gs_glass_mat=gs_glass_mat
	call "TC_BackDoor" parameters gs_frame_mat=gs_frame_mat,gs_carbody_mat=gs_carbody_mat,gs_glass_mat=gs_glass_mat
	muly -1
next i
del 2

!!---------!!
!! Bumpers !!
!!---------!!
call "TC_FrontBumper" parameters gs_bumper_mat=gs_carbody_mat,gs_numplate_mat=gs_access_mat,gs_airgrill_mat=gs_access_mat
call "TC_RearBumper" parameters gs_bumper_mat=gs_carbody_mat,gs_access_mat=gs_access_mat

!!---------!!
!! CarSide !!
!!---------!!
for i=1 to 2
	call "TC_CarSide" parameters gs_carbody_mat=gs_carbody_mat,gs_access_mat=gs_access_mat
	muly -1
next i
del 2

!!--------!!
!! CarTop !!
!!--------!!
call "TC_CarTop" parameters gs_carbody_mat=gs_carbody_mat,gs_access_mat=gs_access_mat,gs_frame_mat=gs_frame_mat,gs_glass_mat=gs_glass_mat

!!----------------!!
!! Bonnet & Trunk !!
!!----------------!!
call "TC_Bonnet" parameters gs_carbody_mat=gs_carbody_mat,gs_access_mat=gs_access_mat,gs_grill_mat=gs_carbody_mat,gs_mark_mat=gs_mark_mat
call "TC_Trunk" parameters gs_carbody_mat=gs_carbody_mat,gs_mark_mat=gs_mark_mat

!!-------!!
!! Lamps !!
!!-------!!
for i=1 to 2
	call "TC_FrontLamp" parameters gs_lamp_mat=gs_lamp_mat,gs_lampin_mat=gs_lampin_mat
	call "TC_RearLamp" parameters gs_blamp_mat=gs_blamp_mat
	muly -1
next i
del 2

!!----------!!
!! Interior !!
!!----------!!
If interior Then
	for i=1 to 2
		call "TC_Interior" parameters gs_int_mat1=gs_int_mat1,gs_int_mat2=gs_int_mat2
		muly -1
	next i
	del 2
	If wheel Then muly -1
	call "TC_Dashboard" parameters gs_dashb_mat=gs_int_mat1
	If wheel Then del 1
EndIf

del 1

