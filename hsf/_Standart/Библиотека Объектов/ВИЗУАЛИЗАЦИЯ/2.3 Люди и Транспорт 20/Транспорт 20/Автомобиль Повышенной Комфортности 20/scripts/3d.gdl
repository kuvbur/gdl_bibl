	IF wheel<0.5 THEN MUL -1,1,1
	ADD 0,-0.18985,0.00475
	MATERIAL gs_int_mat1
	call "cp_car05_carpet_01" parameters
	DEL 1
	ADD -0.006805,-0.1141,0.00475
	MATERIAL gs_int_mat1
