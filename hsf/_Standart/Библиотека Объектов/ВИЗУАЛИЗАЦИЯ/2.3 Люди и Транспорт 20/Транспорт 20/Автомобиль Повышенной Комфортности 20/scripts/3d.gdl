	ADD -0.000185,-0.071595,0.00475
	MATERIAL gs_mirror_mat
	call "cp_car05_intMirror" parameters
	DEL 1
	ADD 0.00003,-0.134,0.0073
	MATERIAL gs_int_mat1
	call "cp_car05_intMirror_back" parameters
	DEL 1
	IF wheel<0.5 THEN DEL 1

	ADD -0.00006,-0.22604,0.00475
	MATERIAL gs_int_mat2
	call "cp_car05_seats" parameters
	DEL 1
ENDIF

DEL 3

wheelmul=0.72/0.64
add 0,-0.85,0
rotz -90
MUL wheelmul,wheelmul,wheelmul
gosub 30
del 3

add 0,0.85,0
rotz 90
MUL wheelmul,wheelmul,wheelmul
gosub 30
