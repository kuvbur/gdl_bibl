
! ==============================================================================
! Woman Sitting
! ==============================================================================


call "FM_types" parameters all

values{2} "gs_detlevel_3D_m" 	DLEV3D_DETAILED, `Детальный`,
								DLEV3D_OFF, `Откл.`,
								DLEV3D_SIMPLE, `Простой`

values{2} "iClothesType" CLOTHTYPE_BUSINESS, `Деловая`,
						CLOTHTYPE_CASUAL, `Повседневная`

if gs_cont_pen=0 then parameters gs_cont_pen=4
if gs_fill_pen=0 then parameters gs_fill_pen=91

if iClothesType = CLOTHTYPE_BUSINESS then
	parameters a = 0.501045 * ZZYZX / 1.35
	parameters b = 0.745199 * ZZYZX / 1.35
	hideparameter "matPants"
	lock "matPants"
else
	parameters a = 0.497739 * ZZYZX / 1.35
	parameters b = 0.729199 * ZZYZX / 1.35
	hideparameter "matSkirt", "matBlazer", "matStockings"
	lock "matSkirt", "matBlazer", "matStockings"
endif
lock "a","b"

