! =============================================================================

A		 = max(0.01, A)
openingArchHeight = min(openingArchHeight, A/2)
openingArchHeight = max(openingArchHeight, 0.01)

H	= B - openingArchHeight
R2	= ((A/2)^2 + openingArchHeight^2) / (2 * openingArchHeight)


! =============================================================================
! GS Door Opening Functions
! =============================================================================

call "GS Door Opening Functions",
	parameters all	iWindowShape			= iWindowShape,
					bParalellInCurvedWalls	= bParalellInCurvedWalls


! =============================================================================

if not(gs_center_hpts_compatibility) then
	unID = 1
	hotspot2 0,0, unID
	unID = unID + 1
endif


! =============================================================================
! Arc in 2D - Straight Wall
! =============================================================================

if gs_arc_2D then
	line_type gs_brickw_lt
	toler 0.001

	R = (A^2/4 + openingArchHeight^2) / openingArchHeight / 2

	if WIDO_REVEAL_SIDE then
		mul2 1, -1
	endif
	add2 0, WIDO_SILL

	mul2 1, -1
	poly2_ 3,1,
		A/2, 0,					1,
		0,	-openingArchHeight + R,		900,
		0,	-2 * asn(A / 2 / R),4001
	del 1

	del 1 + WIDO_REVEAL_SIDE
endif

