
! Contact person: <SzL, NJ>

! =============================================================================
! GS Door Opening Functions
! =============================================================================

call "GS Door Opening Functions",
	parameters all	iWindowShape			= iWindowShape,
					bParalellInCurvedWalls	= bParalellInCurvedWalls


! =============================================================================

if not(gs_center_hpts_compatibility) then
	unID = 1
	hotspot2 0,0, unID
	unID = unID + 1
endif


! =============================================================================
! Arc in 2D - Straight Wall
! =============================================================================

if gs_arc_2D then
	line_type gs_brickw_lt
	toler 0.001

	if WIDO_REVEAL_SIDE then
		mul2 1, -1
	endif
	add2 0, WIDO_SILL

	mul2 1, -1
	add2 0, -B + openingArchHeight
	poly2_ 5,1,
		A/2,	 B - openingArchHeight,		1,
		A/2 - R, B - openingArchHeight,		900,
		0,		-asn(openingArchHeight/R),	4001,
		R - A/2, B - openingArchHeight,		900,
		0,		-asn(openingArchHeight/R),	4001
	del 2

	del 1 + WIDO_REVEAL_SIDE
endif

