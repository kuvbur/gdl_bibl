
! =============================================================================
! IFC Parameters
! =============================================================================

ifc_optype = 0	! WIN_OP_NOT_DEFINED
parameters ifc_optype = ifc_optype
call "IFC_optype_window" parameters ifc_optype = ifc_optype

lock "ifc_optypestr"


values "dep" RANGE (0, WALL_THICKNESS]

values{2} "gs_detlevel_3D_m" 	DLEV3D_DETAILED, `Детальный`,
								DLEV3D_OFF, `Откл.`

dim stTextOrientation[]
	stTextOrientation[1] = `Выровнять по Символу`
	stTextOrientation[2] = `Читаемый`
values "typeTextRotation" stTextOrientation

if GLOB_MODPAR_NAME = "typeTextRotation" then
	for i = 1 to 2
		if typeTextRotation = stTextOrientation[i] then typeTextRotation_m = i
	next i
	parameters typeTextRotation_m = typeTextRotation_m
else
	typeTextRotation = stTextOrientation[typeTextRotation_m]
	parameters typeTextRotation = typeTextRotation
endif

if not(bShowAutoText) then lock "autoTextNotation"
if not(bShowBottomHeight) then lock "bottomHeightNotation"
if not(bShowTopHeight) then lock "topHeightNotation"

if not(bHasTextIn2D) then
	hideparameter	"textPen",
					"fontType",
					"textHeight",
					"typeTextRotation",
					"textOffsetX",
					"textOffsetY"
endif

if not(bSymbol2D) then
	lock 	"gs_fill_niche", "gs_fill_pen_2", "gs_back_pen",\
			"bSymbolFill", "typeFillSymbol", "penFillSymbol", "backPenFillSymbol",
			"bShowAutoText", "autoTextNotation",
			"bShowBottomHeight", "bottomHeightNotation",
			"bShowTopHeight", "topHeightNotation"
endif
if not(bSymbolFill) then lock "typeFillSymbol", "penFillSymbol", "backPenFillSymbol"

for i = 1 to 255
	put i
next i
values "gs_fill_pen_2" get(nsp)

