
pen gs_cont_pen

add2 a/2, b

rect2 -a/2, 0, a/2, -b
rect2 -a/2*0.9, 0, a/2*0.9, -b*0.9
if show_op_symb then
	line2 0, -b/2, 0, -b*0.95
	hotspot2 0, -b/2, 2
endif

if abs(flueHeight) > EPS then
	rect2 -a*0.3, 0, a*0.3, -b*0.7
	rect2 -a*0.3+flueHeight/2, 0, a*0.3-flueHeight/2, -b*0.2
	line2 -a*0.3, -b*0.7, -a*0.3+flueHeight/2, -b*0.2
	line2 a*0.3, -b*0.7, a*0.3-flueHeight/2, -b*0.2
endif

hotspot2 0, 0, 1
hotspot2 -a/2*0.9, -b*0.9, 3
hotspot2 a/2*0.9, -b*0.9, 4
hotspot2 -a/2*0.9, 0, 5
hotspot2 a/2*0.9, 0, 6


! --- background fill ---
fill gs_fill_type
poly2_b 5, 2+64, gs_fill_pen, gs_back_pen,
	-a/2, 0, 1,
	a/2, 0, 1,
	a/2, -b, 1,
	-a/2, -b, 1,
	-a/2, 0, -1

del 1

call "Resize_A_B_ZZYZX" Parameters ALL

end

