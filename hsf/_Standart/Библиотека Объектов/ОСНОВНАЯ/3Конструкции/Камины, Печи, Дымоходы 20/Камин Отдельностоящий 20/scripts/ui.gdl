
TABID_ROOT				= -1
TABID_TYPES				= 1
TABID_REP_SURFACE		= 2


dim stFireplaceSettingsUI[24]
	stFireplaceSettingsUI[1] = `Параметры Камина`
	stFireplaceSettingsUI[2] = `Стиль`
	stFireplaceSettingsUI[3] = `Тип`
	stFireplaceSettingsUI[4] = `Дымоход`
	stFireplaceSettingsUI[5] = `Высота`
	stFireplaceSettingsUI[6] = `Диаметр`
	stFireplaceSettingsUI[7] = `Параметры`
	stFireplaceSettingsUI[8] = `Отсек для Выпечки`
	stFireplaceSettingsUI[9] = `Открытый Дровник`
	stFireplaceSettingsUI[10] = `2D-отображение`
	stFireplaceSettingsUI[11] = `Перо Контура`
	stFireplaceSettingsUI[12] = `Тип Штриховки`
	stFireplaceSettingsUI[13] = `Перо Штриховки`
	stFireplaceSettingsUI[14] = `Перо Фона Штриховки`
	stFireplaceSettingsUI[15] = `3D-отображение`
	stFireplaceSettingsUI[16] = `3D-детализация`
	stFireplaceSettingsUI[17] = `Разрешение`
	stFireplaceSettingsUI[18] = `Отбрасывание Теней`
	stFireplaceSettingsUI[19] = `Плита`
	stFireplaceSettingsUI[20] = `Дымоход`
