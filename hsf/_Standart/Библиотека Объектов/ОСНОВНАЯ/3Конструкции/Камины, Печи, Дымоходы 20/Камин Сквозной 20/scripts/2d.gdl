
pen gs_cont_pen
ADD2 a/2,b/2

c=zzyzx
if a-4"-g<0 or b-4"<0 or c-d-f-8"<0 then 2

hotspot2 -a/2,b/2,1

hotspot2 0,0,5

hotspot2 -a/2,b/2+e,6
hotspot2 a/2,b/2+e,7
hotspot2 -a/2,-b/2-e,8
hotspot2 a/2,-b/2-e,9

rect2 -a/2,b/2,a/2,b/2+e
rect2 -a/2,-b/2,a/2,-b/2-e

fill gs_fill_type
poly2_b 5, 2+64,gs_fill_pen,gs_back_pen,
	-a/2,-b/2-e,1,
	a/2,-b/2-e,1,
	a/2,b/2+e,1,
	-a/2,b/2+e,1,
	-a/2,-b/2-e,-1

!!! *** Refractory Brick
PEN brick_cont_pen
FILL brick_fill_type
LINE_PROPERTY 2
poly2 9,1,
-a/2,b/2,
-g/2,b/2,
-g/2,b/2-1",
-a/2+1",b/2-1",
-a/2+1",-b/2+1",
-g/2,-b/2+1",
-g/2,-b/2,
-a/2,-b/2,
-a/2,b/2

poly2_ 8,1,
-a/2+1",b/2-1",0+32,
-g/2-1",b/2-1",1+32,
-g/2-1",b/2-1"-j,1+32,
-a/2+1"+j,b/2-1"-j,1+32,
-a/2+1"+j,-b/2+1"+j,1+32,
-g/2-1",-b/2+1"+j,1+32,
-g/2-1",-b/2+1",0+32,
-a/2+1",-b/2+1",0

IF brick_fill_pen<>0 THEN
	poly2_B 9, 2+32,brick_fill_pen,brick_back_pen,
	-a/2+1",b/2-1",1+32,
	-g/2-1",b/2-1",1+32,
	-g/2-1",b/2-1"-j,1+32,
	-a/2+1"+j,b/2-1"-j,1+32,
	-a/2+1"+j,-b/2+1"+j,1+32,
	-g/2-1",-b/2+1"+j,1+32,
	-g/2-1",-b/2+1",1+32,
	-a/2+1",-b/2+1",1+32,
	-a/2+1",b/2-1",1
ENDIF

mul2 -1,1
!!! *** Left Side
IF brick_fill_pen<>0 THEN
	poly2_B 9, 2+32,brick_fill_pen,brick_back_pen,
	-a/2+1",b/2-1",1+32,
	-g/2-1",b/2-1",1+32,
	-g/2-1",b/2-1"-j,1+32,
	-a/2+1"+j,b/2-1"-j,1+32,
	-a/2+1"+j,-b/2+1"+j,1+32,
	-g/2-1",-b/2+1"+j,1+32,
	-g/2-1",-b/2+1",1+32,
	-a/2+1",-b/2+1",1+32,
	-a/2+1",b/2-1",1
ENDIF


poly2_ 8,1,
-a/2+1",b/2-1",0+32,
-g/2-1",b/2-1",1+32,
-g/2-1",b/2-1"-j,1+32,
-a/2+1"+j,b/2-1"-j,1+32,
-a/2+1"+j,-b/2+1"+j,1+32,
-g/2-1",-b/2+1"+j,1+32,
-g/2-1",-b/2+1",0+32,
-a/2+1",-b/2+1",0

poly2 9,1,
-a/2,b/2,
-g/2,b/2,
-g/2,b/2-1",
-a/2+1",b/2-1",
-a/2+1",-b/2+1",
-g/2,-b/2+1",
-g/2,-b/2,
-a/2,-b/2,
-a/2,b/2

LINE_PROPERTY 0

!!! *** Chimney
if l<=0 or m<=0 or bShowFlue2D=0 then 3
circle2 0,0,m/2
fill fillTypeFlue
rot2 -90
poly2_b 4, 1+2+64,gs_cont_pen,gs_back_pen,
	-cos(45)*m/2,-sin(45)*m/2,1,
	0,0,900,
	0,-180,4001,
	-cos(45)*m/2,-sin(45)*m/2,-1

poly2_b 4, 1+2+64,gs_back_pen,gs_back_pen,
	-cos(45)*m/2,-sin(45)*m/2,1,
	0,0,900,
	0,180,4001,
	-cos(45)*m/2,-sin(45)*m/2,-1
del 1
goto 3

2:
DEFINE STYLE "Invalid" fontType, gs_FontSize/(10*GLOB_SCALE)*1000,5,0
STYLE "Invalid"
TEXT2 A/2,B/2,`Неправильные параметры!`

end
3:
del top
CALL "Resize_A_B_ZZYZX" Parameters ALL
end
