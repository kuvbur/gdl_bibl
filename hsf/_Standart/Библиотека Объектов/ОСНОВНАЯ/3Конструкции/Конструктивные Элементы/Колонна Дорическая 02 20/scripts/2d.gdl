
!!Column Doric 02.gsm

!!---- Hotspot Editing
unID=1
hLineID = 1000

hotspot2 0,0,unID : unID=unID+1

for i=1 to 4
	hotspot2 0,B2,unID,A2,1+128,A : unID=unID+1
	hotspot2 -1,B2,unID,A2,3,A : unID=unID+1
	hotspot2 A2,B2,unID,A2,2,A : unID=unID+1

	hotspot2 A2,0,unID,B2,1+128,B : unID=unID+1
	hotspot2 A2,-1,unID,B2,3,B : unID=unID+1
	hotspot2 A2,B2,unID,B2,2,B : unID=unID+1

	hotspot2 0,0,unID,A2,1+128,A : unID=unID+1
	hotspot2 -1,0,unID,A2,3,A : unID=unID+1
	hotspot2 A2,0,unID,A2,2,A : unID=unID+1
	rot2 90
next i
del 4

!!! *** Column
PEN gs_cont_pen
LINE_TYPE gs_line_type

mul2 a/0.85,a/0.85

line_property 2
circle2 0,0,0.35
hotarc2 0,0,0.35,0,180, hLineID : hLineID = hLineID + 1
hotarc2 0,0,0.35,180,0, hLineID : hLineID = hLineID + 1

!!! *** Column Fill
fill gs_fill_type
poly2_b 2, 2+32,gs_fill_pen,gs_back_pen,
		0,0,901+32,
		0.35,360,4001+32

!!! *** Capital
line_property 0
PEN capital_cont_pen
LINE_TYPE capital_line_type

rect2 -0.425,-0.425,0.425,0.425
hotline2 -0.425,-0.425,0.425,-0.425, hLineID : hLineID = hLineID + 1
hotline2  0.425,-0.425,0.425,0.425, hLineID : hLineID = hLineID + 1
hotline2  0.425, 0.425,-0.425,0.425, hLineID : hLineID = hLineID + 1
hotline2 -0.425, 0.425,-0.425,-0.425, hLineID : hLineID = hLineID + 1

!!! *** Capital Fill
IF capital_fill_pen<>0 then
	fill capital_fill_type
	poly2_b 7, 2+64,capital_fill_pen,capital_back_pen,
			-0.425,-0.425,1,
			0.425,-0.425,1,
			0.425,0.425,1,
			-0.425,0.425,1,
			-0.425,-0.425,-1,
			0,0,901,
			0.35,360,4001
ENDIF
