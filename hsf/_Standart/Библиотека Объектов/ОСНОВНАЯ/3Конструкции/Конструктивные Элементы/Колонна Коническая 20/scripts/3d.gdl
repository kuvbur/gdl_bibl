
!!Column Conic.gsm


IF gs_detlevel_3D_m = DLEV3D_OFF then end
IF gs_detlevel_3D_m = DLEV3D_SIMPLE then gs_resol = 12

IF gs_shadow=0 THEN SHADOW OFF
IF gs_shadow=1 THEN SHADOW ON

pen gs_cont_pen

c=zzyzx


material gs_column_mat
w=c-tl
RESOL gs_resol
cylind w, a/2
addz w
material mat2

cone tl, a/2, td/2, 90,90

del 1


!!---- Hotspot Editing
unID=1
hotspot 0,0,0,unID,zzyzx,1+256 : unID=unID+1
hotspot 0,0,-1,unID,zzyzx,3 : unID=unID+1
hotspot 0,0,zzyzx,unID,zzyzx,2 : unID=unID+1

for i=1 to 4
	hotspot 0,0,0,unID,A2,1+128,A : unID=unID+1
	hotspot -1,0,0,unID,A2,3,A : unID=unID+1
	hotspot A2,0,0,unID,A2,2,A : unID=unID+1

	hotspot 0,0,zzyzx,unID,td2,1+128,td : unID=unID+1
	hotspot -1,0,zzyzx,unID,td2,3,td : unID=unID+1
	hotspot td2,0,zzyzx,unID,td2,2,td : unID=unID+1

	hotspot A2,0,zzyzx,unID,tl,1+128 : unID=unID+1
	hotspot A2,0,zzyzx+1,unID,tl,3 : unID=unID+1
	hotspot A2,0,zzyzx-tl,unID,tl,2 : unID=unID+1
	rotz 90
next i
del 4

end

