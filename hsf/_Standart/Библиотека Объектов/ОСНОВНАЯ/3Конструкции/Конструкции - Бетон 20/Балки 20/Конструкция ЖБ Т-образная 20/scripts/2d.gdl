
PEN gs_cont_pen
FILL gs_fill_type


Unid=1

! --- Length

HOTSPOT2 0, 0, unID, A, 1+256 : unID=unID+1
HOTSPOT2 -1, 0, unID, A, 3 : unID=unID+1
HOTSPOT2 A, 0, unID, A, 2 : unID=unID+1

HOTSPOT2 0, B, unID, A, 1+256 : unID=unID+1
HOTSPOT2 -1, B, unID, A, 3 : unID=unID+1
HOTSPOT2 A, B, unID, A, 2 : unID=unID+1

! --- Width

HOTSPOT2 A, 0, unID, B, 1+256 : unID=unID+1
HOTSPOT2 A, -1, unID, B, 3 : unID=unID+1
HOTSPOT2 A, B, unID, B, 2 : unID=unID+1

HOTSPOT2 0, 0, unID, B, 1+256 : unID=unID+1
HOTSPOT2 0, -1, unID, B, 3 : unID=unID+1
HOTSPOT2 0, B, unID, B, 2 : unID=unID+1

! --- Length/Axis

HOTSPOT2 0, B/2, unID, A, 1+256 : unID=unID+1
HOTSPOT2 -1, B/2, unID, A, 3 : unID=unID+1
HOTSPOT2 A, B/2, unID, A, 2 : unID=unID+1

! --- Center

HOTSPOT2 A/2, B/2, unID : unID=unID+1

Unid=100

if only_axis=0 then
	! --- Web Thickness
	if iDet2D = DETLEVEL_2D_DETAILED then
		ADD2 0,B/2
		HOTSPOT2 A,0,unID,stee_th2,1+128, stee_th : unID=unID+1
		HOTSPOT2 A,-stee_th2,unID,stee_th2,2, stee_th : unID=unID+1
		HOTSPOT2 A,1,unID,stee_th2,3, stee_th : unID=unID+1

		HOTSPOT2 A,0,unID,stee_th2,1+128, stee_th : unID=unID+1
		HOTSPOT2 A,stee_th2,unID,stee_th2,2, stee_th : unID=unID+1
		HOTSPOT2 A,-1,unID,stee_th2,3, stee_th : unID=unID+1

		HOTSPOT2 0,0,unID,stee_th2,1+128, stee_th : unID=unID+1
		HOTSPOT2 0,-stee_th2,unID,stee_th2,2, stee_th : unID=unID+1
		HOTSPOT2 0,1,unID,stee_th2,3, stee_th : unID=unID+1

		HOTSPOT2 0,0,unID,stee_th2,1+128, stee_th : unID=unID+1
		HOTSPOT2 0,stee_th2,unID,stee_th2,2, stee_th : unID=unID+1
		HOTSPOT2 0,-1,unID,stee_th2,3, stee_th : unID=unID+1
		DEL 1
	endif
endif



ADD2 0,B/2


if only_axis=0 then

	POLY2_B 5, 1+2+4+64, gs_fill_pen, gs_back_pen,
		0, -b/2, 1,
		0, b/2, 1,
		a, b/2, 1,
		a, -b/2, 1,
		0, -b/2, -1

	if iDet2D = DETLEVEL_2D_DETAILED then
		LINE_TYPE DetailLineType

		LINE2 0,  th/2, a,  th/2
		LINE2 0, -th/2, a, -th/2
	endif

endif

Unid=200
if showsect AND only_axis=0 then
	LINE_TYPE 1
	HOTSPOT2 0, 0, unID, pos_2Dx, 1+128 : unID=unID+1
	HOTSPOT2 0, -1', unID, pos_2Dx, 3 : unID=unID+1
	HOTSPOT2 pos_2Dx, 0, unID, pos_2Dx, 2 : unID=unID+1
	ADD2 pos_2Dx, 0
	ROT2 90
	FILL cross_fill
	POLY2_ NSP/3, 7,
		GET (NSP)
	DEL 2
endif

if axis then
	PEN axis_pen
	LINE_TYPE axis_line_type

	LINE2 0, 0, a, 0
endif

END
