
! =============================================================================
! Localization
! =============================================================================
uiTopping		= `Покрытие`
uiToppingThk	= `Толщина Покрытия`

! =============================================================================
! Tabpage Structure Definition
! =============================================================================

TABID_ROOT 			= -1
_idxTab 			= 1
TABID_GEOMETRY 		= _idxTab : _idxTab = _idxTab + 1
TABID_REPRES        = _idxTab : _idxTab = _idxTab + 1
TABID_DESCRIPTIONS 	= _idxTab : _idxTab = _idxTab + 1

! =============================================================================
! Display actual tabpages
! =============================================================================

ui_dialog `Параметры Плиты Перекрытия`
ui_current_page gs_ui_current_page

ui_page TABID_GEOMETRY, TABID_ROOT , `Стиль и Размеры`, "uiTab_Dimension_flat(1)"
gosub "geometryPage"

ui_page TABID_REPRES, TABID_ROOT, `Отображение и Покрытия`, "uiTab_2DRepr_flat(1)"
gosub "AppearancePage"

ui_page TABID_DESCRIPTIONS, TABID_ROOT, `Свойства и Описания`, "uiTab_Descriptions_flat(1)"
gosub "descriptionPage"

! =============================================================================
end
! =============================================================================

! --------------------------------------------------------------------------------
! Subroutines
! --------------------------------------------------------------------------------

 "geometryPage":

	x1 = 0
	x4 = 232
	x5 = 352
	xEnd = 444
	
	outfieldHeight		= 15
	infieldHeight 		= 19
	
	dy 					= 24
	yEnd 				= 266
	pageStartY			= 0
	yCurrent 			= pageStartY + 1
	
	ui_style 0, 0
	
	ui_infield{3} "bTopLayer", 	 x1,   yCurrent, 	x4-x1-1, infieldHeight,
			7, "",
			0, 0,
			0, 0, 0, 0,
			"", uiTopping, 0,
			"", uiTopping, 1


	ui_outfield	uiToppingThk ,x4,    yCurrent+3, 	x5-x4,	outfieldHeight, 4*not(bTopLayer)
	ui_infield "slab_top_th", 	 x5,   yCurrent, 	xEnd-x5, infieldHeight

	yCurrent = yCurrent + dy

	ui_infield{3} "iSlabType", 	 x1,   yCurrent-1, 	xEnd - x1, yEnd-yCurrent,
				1, 1, !"PreSlab"
				8, 2,
				105, 115, 90, 90,
				1, stSlabType[7], 7,
				2, stSlabType[1], 1,
				3, stSlabType[2], 2,
				4, stSlabType[3], 3,
				5, stSlabType[4], 4,
				6, stSlabType[5], 5,
				7, stSlabType[6], 6


return

! ------------------------------------------------------------------------------
"AppearancePage":
! ------------------------------------------------------------------------------

	dim st2DParamNames[7][2]
		st2DParamNames[1][1] = "gs_cont_pen" 	: st2DParamNames[1][2] = "ui_list_contourPen_flat(1)"
		st2DParamNames[2][1] = "gs_fill_type" 	: st2DParamNames[2][2] = "ui_list_fillType_flat(1)"
		st2DParamNames[3][1] = "gs_fill_pen" 	: st2DParamNames[3][2] = "ui_list_fillPen_flat(1)"
		st2DParamNames[4][1] = "gs_back_pen" 	: st2DParamNames[4][2] = "ui_list_fillBgPen_flat(1)"
		st2DParamNames[5][1] = "showsect" 		: st2DParamNames[5][2] = ""
		st2DParamNames[6][1] = "ShowHoles2D" 	: st2DParamNames[6][2] = ""
		st2DParamNames[7][1] = "cross_fill" 	: st2DParamNames[7][2] = "ui_list_fillType_flat(1)"

	dim st3DParamNames[3][2]
		st3DParamNames[1][1] = "gs_detlevel_3D_m"	: st3DParamNames[1][2] = "ui_list_detailLevel3D_flat(1)"
		st3DParamNames[2][1] = "gs_resol"			: st3DParamNames[2][2] = "ui_list_resol_flat(1)"
		st3DParamNames[3][1] = "gs_shadow"			: st3DParamNames[3][2] = "ui_list_shadow_flat(1)"

	dim stSurfaceParamNames[1][2]
		stSurfaceParamNames[1][1] = "gs_slab_mat"	: stSurfaceParamNames[1][2] = "ui_list_surface_flat(1)"	


	call "ui_structure_Representation" parameters all bDraw2DGroupList = 1,
										listfieldID = TABID_REPRES,
										listFieldPosY = 0,
										listFieldHeight = 265,
										stDescHeader = "",
										stValueHeader = "",
										st2DParamNames = st2DParamNames,
										st3DParamNames = st3DParamNames,
										stSurfaceParamNames = stSurfaceParamNames

	! --------------------------------------------------------------------------------
	! image list for archive
	! --------------------------------------------------------------------------------
	file_dependence "ui_list_contourPen_flat(1)"
	file_dependence "ui_list_fillType_flat(1)"
	file_dependence "ui_list_fillPen_flat(1)"
	file_dependence "ui_list_fillBgPen_flat(1)"
	file_dependence "ui_list_detailLevel3D_flat(1)"
	file_dependence "ui_list_resol_flat(1)"
	file_dependence "ui_list_shadow_flat(1)"
	file_dependence "ui_list_surface_flat(1)"

return

