	dim st2DParamNames[7][2]
		st2DParamNames[1][1] = "gs_detlevel_2D" : st2DParamNames[1][2] = "ui_list_detailLevel2D_flat(1)"
		st2DParamNames[2][1] = "ehp" 			: st2DParamNames[2][2] = "ui_list_extraHS_flat(1)"
		st2DParamNames[3][1] = "gs_line_type" 	: st2DParamNames[3][2] = "ui_list_contLineType_flat(1)"
		st2DParamNames[4][1] = "gs_cont_pen" 	: st2DParamNames[4][2] = "ui_list_contourPen_flat(1)"
		st2DParamNames[5][1] = "gs_fill_type" 	: st2DParamNames[5][2] = "ui_list_fillType_flat(1)"
