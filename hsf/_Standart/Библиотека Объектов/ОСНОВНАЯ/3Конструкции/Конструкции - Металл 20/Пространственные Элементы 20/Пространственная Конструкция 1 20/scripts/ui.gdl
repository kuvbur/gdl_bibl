
n = REQUEST ("Working_length_unit", "", workingLengthUnit)

! =============================================================================
! Tabpage Structure Definition
! =============================================================================

TABID_ROOT 			= -1
_idxTab 			= 1
TABID_DIMENSION 	= _idxTab : _idxTab = _idxTab + 1
TABID_REPRES 		= _idxTab : _idxTab = _idxTab + 1
TABID_DESCRIPTIONS 	= _idxTab : _idxTab = _idxTab + 1

! =============================================================================
! Display actual tabpages
! =============================================================================

ui_dialog `Параметры Пространственной Конструкции`
ui_current_page gs_ui_current_page

ui_page TABID_DIMENSION, TABID_ROOT , `Размеры`, "uiTab_Dimension_flat(1)"
gosub "dimensionPage"

ui_page TABID_REPRES, TABID_ROOT, `Отображение и Покрытия`, "uiTab_2DRepr_flat(1)"
gosub "AppearancePage"

ui_page TABID_DESCRIPTIONS, TABID_ROOT, `Описание`, "uiTab_Descriptions_flat(1)"
gosub "descriptionPage"

! =============================================================================
end
! =============================================================================

! --------------------------------------------------------------------------------
! Subroutines
! --------------------------------------------------------------------------------

! --------------------------------------------------------------------------------
"dimensionPage":
! --------------------------------------------------------------------------------
	x1 = 0
	x2 = 170
	x3 = 230
	x4 = x2 + 70
	x5 = x2 + 200	!200 (Style Guide => fillTypeInfLenght)
	x6 = 400
	x7 = 408
	xEnd = 444
	
	outfieldHeight		= 15
	infieldHeight 		= 19
	
	dy 					= 24
	yEnd 				= 266
	pageStartY			= 0
	yCurrent 			= pageStartY + 1
	
	ui_style 0, 0
	
	ui_outfield	`Количество Ячеек (X)` ,x1,    yCurrent+4, 	x2 - 2,	outfieldHeight	
	ui_infield "ncx", 	 x2,   yCurrent, 	x3 - x2, infieldHeight

	ui_infield{3} "sph", 	 x4,   yCurrent, 	xEnd-x4, infieldHeight,
			7, "",
			0, 0,
			0, 0, 0, 0,
			"", `Шарниры`, 0,
			"", `Шарниры`, 1

	yCurrent = yCurrent + dy


	ui_outfield	`Количество Ячеек (Y)` ,x1,    yCurrent+4, 	x2 - 2,	outfieldHeight	
	ui_infield "ncy", 	 x2,   yCurrent, 	x3 - x2, infieldHeight


	yCurrent = yCurrent + dy

	ui_separator 0, yCurrent, xEnd, yCurrent

	uiPictX = 90
	uiPictY = 52
	uiPictWdt = 203
	uiPictHgt = 190
	uiPictMargin = 5
	uiPictInfWdt = 90
	infieldHeight 		= 19

	uiPicLeftStart = uiPictX - uiPictInfWdt - uiPictMargin
	uiPicLeftEND = uiPicLeftStart - uiPictMargin

	uiPicTop = uiPictY - uiPictMargin - infieldHeight + 3

	uiPicBelow = uiPictY + uiPictHgt + uiPictMargin

	uiPicRightStart = uiPictX + uiPictWdt  + uiPictMargin

	if sph then
		UI_PICT 2, uiPictX, uiPictY, uiPictWdt , uiPictHgt, 1 !"PreCol"
		ui_infield "rs", uiPicRightStart, uiPictY, uiPictInfWdt, infieldHeight UI_TOOLTIP `Радиус Шарниров`
	else
		UI_PICT 1, uiPictX, uiPictY, uiPictWdt , uiPictHgt, 1 !"PreCol"
	endif
	ui_infield "brad", uiPicRightStart, uiPictY+24, uiPictInfWdt, infieldHeight UI_TOOLTIP `Радиус Стержней`

	ui_outfield STR(workingLengthUnit, B/ncy ), uiPicRightStart, uiPictY+140, uiPictInfWdt, infieldHeight UI_TOOLTIP `Расстояние`
	
	ui_outfield STR(workingLengthUnit, A/ncx), uiPictX-48, uiPicBelow, uiPictInfWdt, infieldHeight, 1 UI_TOOLTIP `Расстояние`
return

