

PEN gs_cont_pen
FILL gs_fill_type


Unid=1
hLineID = 1000

!!! *** Length

HOTSPOT2 0, 0, unID, A, 1+256 : unID=unID+1
HOTSPOT2 -1, 0, unID, A, 3 : unID=unID+1
HOTSPOT2 A, 0, unID, A, 2 : unID=unID+1

!!! *** Length/2

HOTSPOT2 A/2,0,unID : unID=unID+1

!!! *** Chord Extension (Side 2)

HOTSPOT2 0, 0, unID, tcxl, 1+128 : unID=unID+1
HOTSPOT2 1, 0, unID, tcxl, 3 : unID=unID+1
HOTSPOT2 -tcxl, 0, unID, tcxl, 2 : unID=unID+1

!!! *** Chord Extension (Side 1)

HOTSPOT2 A, 0, unID, tcxr, 1+128 : unID=unID+1
HOTSPOT2 A-1, 0, unID, tcxr, 3 : unID=unID+1
HOTSPOT2 A+tcxr, 0, unID, tcxr, 2 : unID=unID+1

if only_axis=0 then
	HOTSPOT2 -tcxl,dist/2+tcw,unID : unID=unID+1
	HOTSPOT2 -tcxl,-dist/2-tcw,unID : unID=unID+1

	HOTSPOT2 A+tcxr,dist/2+tcw,unID : unID=unID+1
	HOTSPOT2 A+tcxr,-dist/2-tcw,unID : unID=unID+1
endif


	if not(only_axis) then
		POLY2_B 4, 1+2+4+64, gs_fill_pen, gs_back_pen,
				-p_tcxl, tcw+dist/2, 1,
				A+p_tcxr,  tcw+dist/2, 1,
				A+p_tcxr, -tcw-dist/2, 1,
				-p_tcxl, -tcw-dist/2, 1


		if gs_detlevel_2D_m = 2  then
			LINE2 	-p_tcxl, -dist/2,	a+p_tcxr,  -dist/2
			LINE2 	-p_tcxl, dist/2,	a+p_tcxr,   dist/2
			if tctype=3 then
				LINE2   A/2-tco, -dist/2, A/2-tco, -dist/2-tcw
				LINE2   A/2-tco,  dist/2, A/2-tco,  dist/2+tcw
			endif
		endif
	endif

	if axis then
		PEN axis_pen
		LINE_TYPE axis_line_type

		HOTLINE2 -p_tcxl, 0, A+p_tcxr, 0, hLineID : hLineID = hLineID + 1
		LINE2 -p_tcxl, 0, A+p_tcxr, 0
	else
		hLineID = hLineID + 1
		HOTLINE2 -p_tcxl, tcw+dist/2, A+p_tcxr, tcw+dist/2, hLineID : hLineID = hLineID + 1
		HOTLINE2 -p_tcxl, -tcw-dist/2, A+p_tcxr, -tcw-dist/2, hLineID : hLineID = hLineID + 1
	endif

END




200:

RETURN


