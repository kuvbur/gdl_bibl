
! =============================================================================
! Tabpage Structure Definition
! =============================================================================

TABID_ROOT = -1
_idxTab = 1
TABID_DIMENSIONS = _idxTab : _idxTab = _idxTab + 1
TABID_REPRES = _idxTab : _idxTab = _idxTab + 1
TABID_DESCRIPTIONS = _idxTab : _idxTab = _idxTab + 1

! =============================================================================
! Display actual tabpages
! =============================================================================

ui_dialog `Параметры Профиля`
ui_current_page gs_ui_current_page

ui_page TABID_DIMENSIONS, TABID_ROOT, `Размеры`, "uiTab_Dimension_flat(1)"
gosub "DimensionsPage"

ui_page TABID_REPRES, TABID_ROOT, `Отображение и Покрытия`, "uiTab_2DRepr_flat(1)"
gosub "AppearancePage"

ui_page TABID_DESCRIPTIONS, TABID_ROOT, `Характеристики`, "uiTab_Descriptions_flat(1)"
gosub "descriptionPage"

! =============================================================================
end
! =============================================================================

! --------------------------------------------------------------------------------
! Subroutines
! --------------------------------------------------------------------------------

"DimensionsPage":

	pageStartY = 5
	rowy = 18
	dy = 20
	add_Y = 30
	
	x1 = 15
	cx = 80
	x2 = x1 + cx
	x3 = x2 + 150
	xEnd = 200
	y = pageStartY + 15
	
	
	xStart = 5				! start Position X Coordinate
	y1 = pageStartY + 55	! start Position Y Coordinate
	Gap = 5
	PsectX1 = 67
	PsectY1 = 62
	PsectX2 = 98
	PsectY2 = 80
	PsectX = PsectX2
	PsectY = PsectY1+PsectY2
	PviewX = 138
	PviewY = 119
	CellX = 70		! width of cell
	CellY = 18		! height of 1.cell
	
	
	ui_pict	1,	xStart+CellX+Gap,	y1,	        PsectX1,	PsectY1, 1
	ui_pict	2,	xStart+CellX+Gap,	y1+PsectY1,	PsectX2,	PsectY2, 1
	
	ui_infield	"h",	xStart+50,	y1-CellY-Gap*2, CellX,	CellY ui_tooltip `Толщина Обрешетки`
	ui_infield	"v",	xStart,		y1+22, CellX,	CellY ui_tooltip `Ширина Обрешетки`
	ui_infield	"dist",	xStart,		y1+75, CellX,	CellY ui_tooltip `Шаг Обрешетки`
	ui_infield	"neig",	xStart+CellX+Gap+45,	y1+PsectY+Gap*2, CellX,	CellY ui_tooltip `Наклон Ската`
	ui_infield	"gs_struc_length",	xStart+CellX+Gap+PsectX1+Gap,	y1+PsectY1-CellY, CellX-18,	CellY ui_tooltip `Длина Элемента`
	
	ui_pict	3,	xStart+CellX*2+PsectX+Gap*4,	y1+PsectY-PviewY,	PviewX,	PviewY, 1
	
	ui_infield	"schneid1",	xStart+CellX*2+PsectX+Gap*3,	y1+PsectY+Gap*2, CellX,	CellY ui_tooltip `1-ый Угол Подрезки`
	ui_infield	"schneid2",	xStart+CellX*2+PsectX+Gap*2+100,y1+PsectY+Gap*2, CellX,	CellY ui_tooltip `2-ой Угол Подрезки`

return


"AppearancePage":
	dim st2DParamNames[13][2]
		st2DParamNames[1][1] = "gs_axis_line" 				: st2DParamNames[1][2] = "ui_list_contLineType_flat(1)"
		st2DParamNames[2][1] = "gs_cont_pen" 				: st2DParamNames[2][2] = "ui_list_contourPen_flat(1)"
		st2DParamNames[3][1] = "kont" 						: st2DParamNames[3][2] = "ui_list_contourPen_flat(1)"
		st2DParamNames[4][1] = "gs_symb_display_option" 	: st2DParamNames[4][2] = "ui_list_detailLevel2D_flat(1)"
		st2DParamNames[5][1] = "gs_use_3D_view_attributes" 	: st2DParamNames[5][2] = ""
		st2DParamNames[6][1] = "gs_symb_show_projection_to" : st2DParamNames[6][2] = ""
		st2DParamNames[7][1] = "gs_fill_type" 				: st2DParamNames[7][2] = "ui_list_fillType_flat(1)"
