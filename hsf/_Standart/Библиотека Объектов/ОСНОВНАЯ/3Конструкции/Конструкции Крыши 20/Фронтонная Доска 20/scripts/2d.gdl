
PEN gs_cont_pen
FILL gs_fill_type

jj = 0


! --- Israft -------------------------------------------------------------------

if bIsraft then

	poly2_b 4, 7+64, gs_fill_pen, gs_back_pen,
			A,                                      -(boardTh + isrOH),        1,
			-isrTh * sinrAng - isrOH * cosrAng, -(boardTh + isrOH),        1,
			-isrTh * sinrAng - isrOH * cosrAng,  isrW - (boardTh + isrOH), 1,
			A,                                       isrW - (boardTh + isrOH), 1

	line_type hiddenLine
	jj = 6

endif


! --- Boards -------------------------------------------------------------------

poly2_b 4, 7 - jj+64, gs_fill_pen, gs_back_pen,
		A, -boardTh,               1,
		0, -boardTh,               1,
		0, (nBoard - 1) * boardTh, 1,
		A, (nBoard - 1) * boardTh, 1

!line2 0, 0, A, 0


! --- Hotspots -----------------------------------------------------------------

if bIsraft then
	hotspot2 A,                                      -(boardTh + isrOH),        1
	hotspot2 -isrTh * sinrAng + isrOH * cosrAng, -(boardTh + isrOH),        2
	hotspot2 -isrTh * sinrAng + isrOH * cosrAng,  isrW - (boardTh + isrOH), 3
	hotspot2 A,                                       isrW - (boardTh + isrOH), 4
endif

hotspot2  A, -boardTh,               5
hotspot2  A, (nBoard - 1) * boardTh, 6
hotspot2  0, -boardTh,               7
hotspot2  0, (nBoard - 1) * boardTh, 8

hotspot2  0, 0, 11, A, 1+256, A
hotspot2  A, 0, 12, A, 2,     A
hotspot2 -1, 0, 13, A, 3,     A



