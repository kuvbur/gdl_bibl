					bShowRailOn1stLanding1	= 1
					bShowRailOn1stLanding2	= 1
					bShowRailOn2ndRun		= 1
					bShowRailOn2ndLanding1	= 1
					bShowRailOn2ndLanding2	= 1
					bShowRailOn3rdRun		= 1
					bBreakRailLine			= 0
