
TABID_ROOT 			= -1
TABID_GENERAL		= 1

ui_current_page gs_ui_current_page

!!!!!!!!!!!!!!!!!!!!!!!!!!! *** Page 1 *** !!!!!!!!!!!!!!!!!!!!
ui_page TABID_GENERAL, TABID_ROOT, `Параметры Лестницы`, "uiTab_Dimension_flat(1)"

pageStartY = 5

pos_x = 15 				! start Position X Coordinate
pos_y = pageStartY     	! start Position Y Coordinate
OutfieldHgt = 16		! height of Outfield

! Ladder Step Types

px = 75
py = 170
cx = 77
cy = 190

UI_STYLE 0,1
UI_OUTFIELD `Тип Ступеней Лестницы`, pos_x,pos_y, 254, OutfieldHgt
UI_STYLE 0,0

UI_INFIELD{3} "iLadderType", pos_x,pos_y+20, 254, 196,
	1, "WallMountedLadder(1)",
	3, 1,
	cx, cy, px, py,
	1, lad_typ_mtr[1], LADDERTYPE_FLATBAR,
	2, lad_typ_mtr[2], LADDERTYPE_LSTEEL,
	3, lad_typ_mtr[3], LADDERTYPE_CONCRETE


CellX1=254		! 1. Column Width
DistCell=20		! Dist. between Columns


OutfieldWidth=140						! general width of Outfield
InfieldHgt=20							! height of Infield
InfieldWidth=60							! general width of Infield
Outfield2X=OutfieldWidth-InfieldWidth	! with2 of Outfield
YY=20									! distance between Outfiled



! --- 2. Column ----------------------------------------------------------------

StartCell3X=pos_x+254+DistCell	!! Start Position of 3. Column
Outfield3X=OutfieldWidth-35		!!width3 of infield


ii=-1
UI_STYLE 0,1
UI_OUTFIELD `Параметры Ступеней`, StartCell3X,pos_y+(ii+1)*YY, OutfieldWidth,OutfieldHgt
UI_STYLE 0,0
ii=ii+1
	UI_OUTFIELD `Толщина`,	StartCell3X,	pos_y+(ii+1)*YY,	Outfield2X,OutfieldHgt
	UI_INFIELD "rw",	StartCell3X+OutfieldWidth+5-InfieldWidth,	pos_y+(ii+1)*YY-2,	InfieldWidth,		20

ii=ii+1
	UI_OUTFIELD `Шаг Ступеней`,	StartCell3X,	pos_y+(ii+1)*YY,	Outfield2X,OutfieldHgt
	UI_INFIELD "RungDist",	StartCell3X+OutfieldWidth+5-InfieldWidth,	pos_y+(ii+1)*YY-2,	InfieldWidth,		20


ii=ii+1
UI_STYLE 0,1
UI_OUTFIELD `2D-отображение`, StartCell3X,pos_y+(ii+1)*YY, OutfieldWidth,OutfieldHgt
UI_STYLE 0,0
ii=ii+1
	UI_OUTFIELD `Перо Контура`,	StartCell3X,	pos_y+(ii+1)*YY,	Outfield3X,OutfieldHgt
	UI_INFIELD "gs_cont_pen",	StartCell3X+OutfieldWidth-30,	pos_y+(ii+1)*YY-2,	35,		19
ii=ii+1
	UI_OUTFIELD `Тип Штриховки`,	StartCell3X,	pos_y+(ii+1)*YY,	Outfield3X,OutfieldHgt
	UI_INFIELD "gs_fill_type",	StartCell3X+OutfieldWidth-30,	pos_y+(ii+1)*YY-2,	35,		19
ii=ii+1
	UI_OUTFIELD `Перо Штриховки`,		StartCell3X,	pos_y+(ii+1)*YY,	Outfield3X,OutfieldHgt
	UI_INFIELD "gs_fill_pen",	StartCell3X+OutfieldWidth-30,	pos_y+(ii+1)*YY-2,	35,		19
ii=ii+1
	UI_OUTFIELD `Перо Фона`,	StartCell3X,	pos_y+(ii+1)*YY,	Outfield3X,OutfieldHgt
	UI_INFIELD "gs_back_pen",	StartCell3X+OutfieldWidth-30,	pos_y+(ii+1)*YY-2,	35,		19

ii=ii+1
UI_STYLE 0,1
UI_OUTFIELD `3D-отображение`, StartCell3X,pos_y+(ii+1)*YY, OutfieldWidth,OutfieldHgt
UI_STYLE 0,0
ii=ii+1
	UI_OUTFIELD `3D`,	StartCell3X,	pos_y+(ii+1)*YY,	Outfield2X,OutfieldHgt
	UI_INFIELD{3} "gs_detlevel_3D_m",	StartCell3X+OutfieldWidth+5-InfieldWidth,	pos_y+(ii+1)*YY-2,	InfieldWidth,		20
ii=ii+1
	UI_OUTFIELD `Аппроксимация`,		StartCell3X,	pos_y+(ii+1)*YY,	Outfield2X,OutfieldHgt
	UI_INFIELD "gs_resol",	StartCell3X+OutfieldWidth+5-InfieldWidth,	pos_y+(ii+1)*YY-2,	InfieldWidth,		20
ii=ii+1
UI_INFIELD{3}	"gs_shadow",	StartCell3X,	pos_y+(ii+1)*YY,	OutfieldWidth,	19,
		7,"",2,1,
		0,0,0,0,
		1, `Отбрасывание Теней`, 0,
		2, `Отбрасывание Теней`, 1


ii=ii+1
UI_STYLE 0,1
	UI_OUTFIELD `Покрытие`,	StartCell3X,	pos_y+(ii+1)*YY,	Outfield3X-42, OutfieldHgt
UI_STYLE 0,0
	UI_INFIELD "mat_ladder",	StartCell3X+OutfieldWidth-72,	pos_y+(ii+1)*YY-1,	77,		20

! Wall Mounted Depth

ii=ii-1
	UI_OUTFIELD `Глубина Монтажа:`,	pos_x+100,	pos_y+(ii+1)*YY,	CellX1-100,OutfieldHgt

ii=ii+1
	UI_INFIELD "st",	pos_x+100,	pos_y+(ii+1)*YY-4,	InfieldWidth,		20

