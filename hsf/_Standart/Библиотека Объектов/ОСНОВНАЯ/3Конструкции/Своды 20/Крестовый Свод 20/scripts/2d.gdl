
pen gs_cont_pen


CALL "Resize_A_B_ZZYZX" Parameters ALL

HOTSPOT2 A/2 - radiusA + offsetX, 0
HOTSPOT2 A - (A/2 - radiusA) + offsetX, 0
HOTSPOT2 A, B/2 - radiusB + offsetY
HOTSPOT2 0, B - (B/2 - radiusB) + offsetY
HOTSPOT2 0, B/2 - radiusB + offsetY
HOTSPOT2 A, B - (B/2 - radiusB) +offsetY
HOTSPOT2 A/2 - radiusA + offsetX, B
HOTSPOT2 A - (A/2 - radiusA) + offsetX, B

HOTSPOT2 A/2,           B/2 + offsetY, 20, offsetX, 1+128
HOTSPOT2 A/2 + offsetX, B/2 + offsetY, 21, offsetX, 2
HOTSPOT2 A/2 - 1,       B/2 + offsetY, 22, offsetX, 3

HOTSPOT2 A/2 + offsetX, B/2,           23, offsetY, 1+128
HOTSPOT2 A/2 + offsetX, B/2 + offsetY, 24, offsetY, 2
HOTSPOT2 A/2 + offsetX, B/2 -1,        25, offsetY, 3


fill gs_fill_type
poly2_b 5, 1+2+4+8+64, gs_fill_pen,gs_back_pen,
		0, 0, 5,
		A, 0, 5,
		A, B, 5,
		0, B, 5,
		0, 0, -1

LINE_TYPE gs_DashedLine
	line2 A/2 - radiusA + offsetX, 0, A/2 - radiusA + offsetX, B/2 - radiusB + offsetY
	line2 0, B/2 - radiusB + offsetY, A/2 - radiusA + offsetX, B/2 - radiusB + offsetY
	line2 A/2 - radiusA + offsetX, B/2 - radiusB + offsetY,A/2 + offsetX, B/2 + offsetY

	line2 A/2 + radiusA + offsetX, 0, A/2 + radiusA + offsetX, B/2 -radiusB + offsetY
	line2 A/2 + radiusA + offsetX, B/2 -radiusB + offsetY, A, B/2 -radiusB + offsetY
	line2 A/2 + radiusA + offsetX, B/2 -radiusB + offsetY, A/2 + offsetX, B/2 + offsetY
ADD2 0, B
MUL2 1, -1
	line2 A/2 - radiusA + offsetX, 0, A/2 - radiusA + offsetX, B/2 - radiusB - offsetY
	line2 0, B/2 - radiusB - offsetY, A/2 - radiusA + offsetX, B/2 - radiusB - offsetY
	line2 A/2 - radiusA + offsetX, B/2 - radiusB - offsetY,A/2 + offsetX, B/2 - offsetY

	line2 A/2 + radiusA + offsetX, 0, A/2 + radiusA + offsetX, B/2 -radiusB - offsetY
	line2 A/2 + radiusA + offsetX, B/2 -radiusB - offsetY, A, B/2 -radiusB - offsetY
	line2 A/2 + radiusA + offsetX, B/2 -radiusB - offsetY, A/2 + offsetX, B/2 - offsetY
DEL 2

RESOL gs_resol*4
ADD2 A/2 + offsetX, 0
radiusAll = radiusA
gosub "arc"
ADD2 0, B
MUL2 1, -1

gosub "arc"
DEL 3

ADD2 0, B/2 + offsetY
ROT2 -90
radiusAll = radiusB
gosub "arc"
ADD2 0, A
MUL2 1, -1
gosub "arc"
DEL 4


end

"arc":
	if gs_arc then
		poly2_ 3, 1,
				radiusAll, 0, 1,
				0, 0, 900,
				0, 180, 4001
	endif
return
