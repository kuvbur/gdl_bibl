if iRoofType = 1 then
	roofHeight = a/2 * tan (roofAngle)
	overhangModifyLeft  = bOverhangLeft  * (a/2 * tan (90 - endAngleLeft /2) - a/2*(tan(90-endAngleLeft)))
	overhangModifyRight = bOverhangRight * (a/2 * tan (90 - endAngleRight/2) - a/2*(tan(90-endAngleRight)))
	hipModifyLeft  = bHipLeft  * (a/2 * tan (endAngleLeft /2) + a/2*(tan(90-endAngleLeft)))
	hipModifyRight = bHipRight * (a/2 * tan (endAngleRight/2) + a/2*(tan(90-endAngleRight)))
endif

if iRoofType = 2 then
	roofHeight = a * tan (roofAngle)
	overhangModifyLeft  = bOverhangLeft  * (a * tan (90 - endAngleLeft /2) - a*(tan(90-endAngleLeft)))
	overhangModifyRight = bOverhangRight * (a * tan (90 - endAngleRight/2) - a*(tan(90-endAngleRight)))
	hipModifyLeft  = bHipLeft  * (a * tan (endAngleLeft /2) + a*(tan(90-endAngleLeft)))
	hipModifyRight = bHipRight * (a * tan (endAngleRight/2) + a*(tan(90-endAngleRight)))
endif

if iRoofType = 3 then
	roofHeight = mansardLowerHeight + (a/2 - (mansardLowerHeight / tan (roofAngle))) * tan (mansardTopAngle)
	mansardDist = mansardLowerHeight / tan (roofAngle)
	hipModifyLeft  = bHipLeft  * (a/2 * tan (endAngleLeft /2) + a/2*(tan(90-endAngleLeft)))
	hipModifyRight = bHipRight * (a/2 * tan (endAngleRight/2) + a/2*(tan(90-endAngleRight)))
endif
