
!! Spiral.gsm

pen gs_cont_pen
hLineID = 1000

if angle_1 > 0 or angle_2 > 0 then

	HOTSPOT2 0,0
	project2{3} 3, 270, 32+3, 15, gs_back_pen, 0, 0, 90,
			parameters	gs_2D_projection = 1

else
	project2{3} 3, 270, 2, 15,
			parameters	gs_2D_projection = 1

	if gs_axis then
		line_type gs_axis_line
		if sang<360 then
		pen gs_axis_pen
		arc2 0,rac,rac,-90,-90+sang
		hotarc2 0,rac,rac,-90,-90+sang, hLineID : hLineID = hLineID + 1
	else
		hLineID = hLineID + 1
		pen gs_cont_pen
		circle2 0,rac,rac
		hotarc2 0,rac,rac,0,180, hLineID : hLineID = hLineID + 1
		hotarc2 0,rac,rac,180,360, hLineID : hLineID = hLineID + 1
		endif
	endif

	hotspot2 0,rac
	hotspot2 0,0

	hotspot2 rac*sin(sang),rac-rac*cos(sang)
	if sang>=90 then
		hotspot2 rac,rac
		if sang>=180 then
			hotspot2 0,2*rac
			if sang>=270 then
				hotspot2 -rac,rac
			endif
		endif
	endif
endif

end
