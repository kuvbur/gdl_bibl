
! -----------------------------------------------------------------------------
! 2D Hotspots
! -----------------------------------------------------------------------------

hotspot2 0, b
hotspot2 a/2, b/2

CALL "Resize_A_B_ZZYZX" Parameters ALL

! -----------------------------------------------------------------------------
! Glass Pane Types
! -----------------------------------------------------------------------------

pen gs_cont_pen
fill gs_fill_type
gosub iPaneStyle


end

! =============================================================================
! SUBRUTINES
!
! =============================================================================


! -----------------------------------------------------------------------------
! Glass Pane Simple
! -----------------------------------------------------------------------------

1:

	add2 0, b
	poly2_b 12, 1+2+4+64, gs_fill_pen, gs_back_pen,
			0, 0, 1,
			wFrame, 0, 1,
			wFrame,  -(tFrame-tGlass)/2, 1,
			a-wFrame,  -(tFrame-tGlass)/2, 1,
			a-wFrame,  0, 1,
			a, 0, 1,
			a, -tFrame, 1,
			a-wFrame, -tFrame, 1,
			a-wFrame, -(tFrame-tGlass)/2-tGlass, 1,
			wFrame, -(tFrame-tGlass)/2-tGlass, 1,
			wFrame, -tFrame, 1,
			0, -tFrame, 1

	rect2 0, 0, wFrame, -tFrame
	rect2 a-wFrame, 0, a, -tFrame
	del 1

return


! -----------------------------------------------------------------------------
! Glass Pane Sliding
! -----------------------------------------------------------------------------

2:

	bm = (a - 4 * wFrame) / 3 + 2 * wFrame

	add2 0, b
	for i=1 to 3
		poly2_b 4, 1+2+4+64, gs_fill_pen, gs_back_pen,
				0, 0, 1,
				bm, 0, 1,
				bm, -tFrame, 1,
				0, -tFrame, 1
		add2 bm - wFrame, -tFrame - tGap
	next i
	del 4

return



