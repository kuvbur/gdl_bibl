
hideparameter all "A", "B", "ZZYZX"

call "FM_types" parameters all

! -----------------------------------------------------------------------------
! Styles
! -----------------------------------------------------------------------------

values{2} "iPaneStyle"	PANESTYLE_SIMPLE,	stStyles[1],
						PANESTYLE_SLIDING,	stStyles[2]

! -----------------------------------------------------------------------------
! 3D detlevel
! -----------------------------------------------------------------------------

values{2} "iDetlevel3D"	DETLEVEL3D_DETAILED,	typRes[1],
						DETLEVEL3D_OFF,			typRes[2]
! -----------------------------------------------------------------------------
! Default Sizes
! -----------------------------------------------------------------------------

if iPaneStyle = PANESTYLE_SIMPLE then
	values "a" range [2*wFrame,)
else
	values "a" range [4*wFrame,)
endif

values "b" range [0.003,)
values "zzyzx" range [2*wFrame,)
values "tGlass" range (0, tFrame]
values "tFrame" range [0.003,)
values "wFrame" range [0.01,)

if GLOB_MODPAR_NAME = "tFrame" then
	b = tFrame
	parameters b= b
else
	tFrame = b
	parameters tFrame = tFrame
endif

if iPaneStyle = 2 then
	if GLOB_MODPAR_NAME = "tFrame" then
		b = 3 * tFrame + 2 * tGap
		parameters b = b
	else
		tFrame = (b - 2 * tGap) / 3
		parameters tFrame = tFrame
	endif
else
	if GLOB_MODPAR_NAME = "tFrame" then
		b = tFrame
		parameters b = b
	else
		tFrame = b
		parameters tFrame = tFrame
	endif
endif

! -----------------------------------------------------------------------------
! Limitations
! -----------------------------------------------------------------------------

if gs_cont_pen = 0 then parameters gs_cont_pen = 7
if gs_fill_pen = 0 then parameters gs_cont_pen = 91

if iDetlevel3D = DETLEVEL3D_OFF then hideparameter "gs_shadow"
