
eps = 0.0001

! const values for parameter: iDetlevel3D
DETLEVEL3D_DETAILED	= 1
DETLEVEL3D_SIMPLE	= 2
DETLEVEL3D_OFF		= 3

dim typRes[3]
	typRes[1] = `Детальный`
	typRes[2] = `Простая`
	typRes[3] = `Откл.`

! const values for parameter: iTowelRackStyle
TOWELRACKSTYLE_SIMPLE	= 1
TOWELRACKSTYLE_MULTIPLE	= 2
TOWELRACKSTYLE_RING		= 3
TOWELRACKSTYLE_HOOK		= 4

dim stStyles[4]
	stStyles[1] = `Одна Штанга`
	stStyles[2] = `Несколько Спиц`
	stStyles[3] = `Кольцо`
	stStyles[4] = `Крючок`

! additional type dependent dimensions
if iTowelRackStyle = TOWELRACKSTYLE_RING then
	ringThk = 0.01
	baseThk = 0.01
	baseWidth = 0.05
	baseHeight = 0.05
	baseRad1 = 0.02
	baseRad2 = 0.01
	baseThk2 = B - baseThk * 2
	ringPosition = B - baseThk
endif

if iTowelRackStyle = TOWELRACKSTYLE_HOOK then
	dentRad = B * 0.3
	if dentRad > A * 0.3 then
		dentRad = A * 0.3
	endif
	frontRingThk = 0.005
	frontGapThk = 0.001
	frontRingRad = A / 2
	frontGapRad = A / 2 * 0.95
	dentPosition = B - dentRad - 0.02
endif

