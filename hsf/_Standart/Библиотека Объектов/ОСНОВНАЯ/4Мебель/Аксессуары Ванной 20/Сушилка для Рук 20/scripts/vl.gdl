
hideparameter all "A", "B", "ZZYZX"

call "FM_types" parameters all

! -----------------------------------------------------------------------------
! 3D detlevel
! -----------------------------------------------------------------------------

values{2} "iDetlevel3D"	DETLEVEL3D_DETAILED,	typRes[1],
						DETLEVEL3D_SIMPLE,		typRes[2],
						DETLEVEL3D_OFF,			typRes[3]

values "gs_resol" RANGE [4,)

if iDetlevel3D = DETLEVEL3D_SIMPLE then
	hideparameter "gs_resol"
	lock "gs_resol"
endif
if iDetlevel3D = DETLEVEL3D_OFF then
	hideparameter "gs_resol", "gs_shadow"
	lock "gs_resol", "gs_shadow"
endif

! -----------------------------------------------------------------------------
! Hand Dryer Types
! -----------------------------------------------------------------------------

values{2} "iDryerType"	DRYERTYPE_AUTOMATIC,	stDryerTypes[1],
						DRYERTYPE_PUSHBUTTON,	stDryerTypes[2],
						DRYERTYPE_HISPEED,		stDryerTypes[3]

! -----------------------------------------------------------------------------
! Bounding box
! -----------------------------------------------------------------------------

A = fullWidth
B = fullDepth
ZZYZX = fullHeight

parameters A = A,
		   B = B,
		   ZZYZX = ZZYZX

lock "A", "B", "ZZYZX"

! --- Bottom, Top Level Calculation  ---
			ac_toplevel		= ac_bottomlevel + ZZYZX
parameters	ac_toplevel		= ac_toplevel

! -----------------------------------------------------------------------------
! Type dependent parameters
! -----------------------------------------------------------------------------

if iDryerType = DRYERTYPE_AUTOMATIC | iDryerType = DRYERTYPE_HISPEED then
	hideparameter "matChrome"
endif

! -----------------------------------------------------------------------------
! Symbol Types
! -----------------------------------------------------------------------------

values{2} "iSymbolType"	SYMBTYPE_DETAILED,		stSymbTypes[2],
						SYMBTYPE_SIMPLE,		stSymbTypes[1]

if gs_cont_pen = 0 then parameters gs_cont_pen = 7
if gs_fill_pen = 0 then parameters gs_fill_pen = 91

if iDetlevel3D = DETLEVEL3D_SIMPLE then hideparameter "gs_resol", "ValveMat", "AccMat"
if iDetlevel3D = DETLEVEL3D_OFF then hideparameter "gs_shadow", "gs_resol", "ValveMat", "AccMat"


