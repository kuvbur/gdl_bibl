
if gs_detlevel_3D_m = DLEV3D_OFF then end

if not(gs_shadow) then SHADOW OFF

muly B/0.05

pen gs_cont_pen

material hemat
add -A*.5, -0.025, zzyzx-0.05
brick a,0.05,0.05
del 1

material cumat

if iOpOrientation = ONE_SIDE then
	addz 0.05
	addx -a*.5
	x=a*(pc*.01)
	k=a/(wc-0.005)
	if fra(k)>0 gosub 10

	for l=1 to k-1
		addx x/k
		gosub 20
	next l
else
	addz 0.05
	addx -a*.5
	x=a*(pc*.01)
	k=a/(wc-0.005)
	if fra(k)>0 gosub 10

	for l=1 to (k*.5)
		addx x/k
		gosub 20
	next l
	del top
	addz 0.05
	addx a*.5
	for l=1 to (k*.5)
		addx -x/k
		gosub 20
	next l
endif

end

10:
	k=int(k)+1
return

