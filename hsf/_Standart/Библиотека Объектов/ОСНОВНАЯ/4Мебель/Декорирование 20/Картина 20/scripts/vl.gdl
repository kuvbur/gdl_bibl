
call "FM_types" parameters all

!Hide all parameters from UI
hideparameter all  "A", "B", "ZZYZX"

values{2} "gs_detlevel_3D_m" 	DLEV3D_DETAILED, `Детальный`,
								DLEV3D_OFF, `Откл.`

values "frame" `Детализированная Рама`, `Простая Рама`, `без Рамы`
values "gs_frame" 1, 2, 0

if GLOB_MODPAR_NAME = "frame" then
	gs_frame = 1
	if frame = `Простая Рама` then gs_frame = 2
	if frame = `без Рамы`	then gs_frame = 0
	parameters gs_frame = gs_frame
else
	frame = `Детализированная Рама`
	if gs_frame = 2	then frame = `Простая Рама`
	if gs_frame = 0 then frame = `без Рамы`
	parameters frame = frame
endif

if gs_cont_pen <= 0 then PARAMETERS gs_cont_pen=4
if gs_fill_pen <= 0 then PARAMETERS gs_fill_pen=19

if gs_detlevel_3D_m = DLEV3D_OFF then hideparameter "gs_shadow"

if gs_frame = 0 then hideparameter "gs_frame_width", "gs_frame_thk"

if not(gs_picture_custom) then hideparameter "gs_picture_name"

if gs_frame = 0 then	! Off
	hideparameter "gs_frame_width", "gs_frame_thk"
	lock "gs_frame_width", "gs_frame_thk"
endif

if not(gs_picture_custom) then
	hideparameter "gs_picture_name"
	lock "gs_picture_name"
endif

