
if gs_detlevel_3D_m = DLEV3D_OFF then end
if gs_shadow=0 then shadow off

pen gs_cont_pen

addz 0.001
if bPict then
	DEFINE MATERIAL "pictmat" 2,
		1,1,1

	MATERIAL "pictmat"

	if not(gs_picture_custom) then
		picture 1,a,b,1
	else
		if gs_picture_name <> "" Then
			if bUseAlphaChannel then
				alphaFlag = 1
			else
				alphaFlag = 0
			endif

			picture gs_picture_name,a,b,alphaFlag
		else
			picture 1,a,b,1
		endif
	endif
else
	material carpet_mat
	plane 4,
		0,0, 0,
		a,0, 0,
		a,b, 0,
		0,b, 0
endif
del 1

hotspot 0,0,0,1
hotspot a,0,0,2
hotspot a,b,0,3
hotspot 0,b,0,4
hotspot a/2,b/2,0,5
