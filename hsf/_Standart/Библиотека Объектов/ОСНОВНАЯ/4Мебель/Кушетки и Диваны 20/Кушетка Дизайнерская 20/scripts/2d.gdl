
! ======================================================================
! SCALE
! ======================================================================

call "2dDetailLevel" parameters gs_detlevel_2D_m = gs_detlevel_2D_m,
				returned_parameters det2D

PEN gs_cont_pen
FILL gs_fill_type

CALL "Resize_A_B_ZZYZX" PARAMETERS ALL
CALL "fa_minimalspace" PARAMETERS ALL 	MSType 	= 2,
										diff2	= MSLengthAdd,
										diff3	= MSSide - MSSideAdd,
										unID 	= 3000
POLY2_B 5, 1+2+4+64, gs_fill_pen, gs_back_pen,
	0, 0, 1,
	a, 0, 1,
	a, b, 1,
	0, b, 1,
	0, 0, -1


IF det2D = 4 THEN
	IF iSymbolType = 1 THEN		! Type 1
		POLY2_ 7, 1,
			0.03, 0.03, 1,
			a-0.03, 0.03, 1,
			a-0.03, b-0.62, 1,
			a-0.21, b-0.62, 1,
			a-0.21, b-0.44, 1,
			0.03, b-0.44, 1,
			0.03, 0.03, -1
		LINE2 a-0.21, b-0.44,  a-0.03, b-0.62

		POLY2_ 5, 1,
			0.06, b-0.44, 1,
			0.06, b-0.06, 1,
			(a-0.06), b-0.06, 1,
			(a-0.06), b-0.48, 1,
			(a-0.17), b-0.48, 1

	ENDIF

	IF iSymbolType = 2 THEN		! Type 2
		POLY2_ 5, 1,
			0.06, b-0.48, 1,
			a-0.06, b-0.48, 1,
			a-0.06, b-0.06, 1,
			0.06, b-0.06, 1,
			0.06, b-0.48, -1
	ENDIF

	IF iSymbolType = 3 THEN		! Type 3
		LINE2 a, 0, 0, b
	ENDIF

ELSE
	IF det2D = 2 THEN
		line2 0, b*11/12 + cushionRadius, a, b*11/12 + cushionRadius
		line2 0, b*11/12 - cushionRadius, a, b*11/12 - cushionRadius
	ENDIF
	IF det2D = 3 THEN
		ADD2 0, b*11/12
		rrr = cushionRadius / 10

		POLY2_B 9, 1+4, gs_fill_pen, gs_back_pen,
			rrr, cushionRadius, 1,
			a-rrr, cushionRadius, 1,
			a, cushionRadius-rrr, 1001,
			a, -cushionRadius+rrr, 1,
			a-rrr, -cushionRadius, 1001,
			rrr, -cushionRadius, 1,
			0, -cushionRadius+rrr, 1001,
			0, cushionRadius-rrr, 1,
			rrr, cushionRadius, 1001

		DEL 1

		rOut = 0.04

		POLY2_B 9, 1+4, gs_fill_pen, gs_back_pen,
			0, rOut, 0,
			0, b-rOut, 1,
			rOut, b, 1000,
			a-rOut, b, 1,
			a, b-rOut, 1000,
			a, rOut, 1,
			a-rOut, 0, 1000,
			rOut, 0, 1,
			0, rOut, 1000

	ENDIF
ENDIF

