! ------------------------------------------------------------------------------
"counterPage":
! ------------------------------------------------------------------------------

	XX=75
	YY=pageStartY + 31 + 6 + 26
	PX=204
	PY=104
	CX=70

	UI_STYLE 0,1
	UI_OUTFIELD	`Свесы Столешницы:`, 24,	pageStartY + 5,	200,13


	UI_OUTFIELD	`Скошенные`, XX,	YY,	67,13,2
	UI_OUTFIELD	`Треугольные`, XX+68,	YY,	67,13,2
	UI_OUTFIELD	`Круглые`, XX+68*2,	YY,	67,13,2
	UI_STYLE 0,0

	UI_STYLE 0,1
	UI_OUTFIELD	`Торец Столешницы:`, 287,	pageStartY + 5,	150,13
	UI_STYLE 0,0

	call "Kitchen Cabinets UI macro" parameters bCounterInfieldOnly = 1,
												counterInfieldXPos	= 307,
												counterInfieldYPos	= pageStartY + 27
	UI_PICT	"ui_CabTopViewShelf(13)",	XX,	YY+22,	PX,	PY,1
	UI_INFIELD	"front_cab",			XX-CX-2,	YY+PY-18+22,	CX,	18 UI_TOOLTIP `Выступ Спереди`

	UI_STYLE 0,1
	UI_OUTFIELD	`Покрытия`, 287+20,	YY,	100,13
	UI_STYLE 0,0


	UI_OUTFIELD	`Столешница`, 		287+20,	YY+22,		86,	13
	UI_INFIELD	"count_mat",	287+20,	YY+22*2-4,	90,	22

	UI_OUTFIELD	`Фартук`, 	287+20,	YY+22*3,	86,	13
	UI_INFIELD	"bs_mat",		287+20,	YY+22*4-4,	90,	22


return

! ------------------------------------------------------------------------------
"minimalspacePage":
! ------------------------------------------------------------------------------

	xPict = 180
	yPict = pageStartY + 35
	dist = 10
	wGap = 60
	hGap = 18

	if end_typ_m = END_CHAMFERED then
		ui_pict	1,	xPict,	yPict, 143, 179,1
	endif
	if end_typ_m = END_TRIANGLE then
		ui_pict	2,	xPict,	yPict, 143, 179,1
	endif
	if end_typ_m = END_ROUND then
		ui_pict	3,	xPict,	yPict, 143, 179,1
	endif

	ui_infield	"A",    	xPict+84/2-dist*3, yPict-dist*2,    wGap,	hGap ui_tooltip `Ширина`
	ui_infield	"B",    	xPict-dist-wGap,   yPict+182/4,	    wGap,	hGap ui_tooltip `Длина`
	ui_infield	"MSFront",	xPict-dist-wGap,   yPict+2*182/3,	wGap,	hGap ui_tooltip `Минимальное Пространство Спереди`


return
