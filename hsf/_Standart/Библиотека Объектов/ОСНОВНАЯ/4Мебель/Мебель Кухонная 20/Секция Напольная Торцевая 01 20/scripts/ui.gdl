
UI_CURRENT_PAGE gs_ui_current_page

dim pageNames[4]
	pageNames[1] = ""
	pageNames[2] = `Столешница`
	pageNames[3] = ""
	pageNames[4] = `Минимальное Пространство`

dim pageIcos[4]
	pageIcos[1] = ""
	pageIcos[2] = "uiTab_FurnitureCounter_flat(1)"
	pageIcos[3] = ""
	pageIcos[4] = "uiTab_MinSpace_flat(1)"

iPageIDRoot 		=-1
iPageIDCounter		= 2
iPageIDMinimalSpace	= 4

pageStartY = 5

CALL "Kitchen Cabinets UI macro" parameters all \
									pageIds = pageIds,
									pageNames = pageNames,
									pageIcos = pageIcos,
									CornCabType = 1,
									bEdgeBevel = 1,
									CabinetType = 0,
									bCounterOverhang = 0,
									bMirror = 0,

									bShelfCab = 1,
									bEndCab = 1,
									CornerEdgeSizes = 3,
									bToe = 1,
									bShelf = 1,
									bShowSurfaces = 1,

									bCabSymbol = 0,
									bPossibleSinknTap = 0,
									bApplianceEdit = 0,
									bSymbLineEdit = 0,
									bMinSpaceEdit = 1,
									bShadowEdit = 1,
									bHotspotEdit = 0,

									bEnableBackSplash	= 1


UI_PAGE iPageIDCounter, iPageIDRoot, `Столешница, Ручка`, "uiTab_FurnitureCounter_flat(1)"
	gosub "counterPage"

UI_PAGE iPageIDMinimalSpace, iPageIDRoot, `Минимальное Пространство`, "uiTab_MinSpace_flat(1)"
	gosub "minimalspacePage"

! ==============================================================================
end
