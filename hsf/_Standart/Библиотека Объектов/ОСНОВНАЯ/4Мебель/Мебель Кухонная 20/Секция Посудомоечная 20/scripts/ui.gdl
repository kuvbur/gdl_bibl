! ------------------------------------------------------------------------------
"doorPage":
! ------------------------------------------------------------------------------

	_dy = 22
	_yOffset = 4
	_infHeight = 19
	_surfHeight = 22
	_outfHeight = 15
	_outfFlag = 0
	x1 = 12
	x2 = x1+111
	x3 = 251
	x4 = 362

	UI_STYLE 0,1
	UI_OUTFIELD	`Панель Управления`, x1,	pageStartY + 5,	140, _outfHeight
	UI_STYLE 0,0

	UI_INFIELD{3}	"iControlPanelType",	x1,	pageStartY + 5 + _dy,	180,	40,
		2, "ui_ControlPanel(13)", 3, 3,
		100, 30, 100, 30,
		1,	`Стиль 1`, 	CONTROLPANEL_STYLE1,
		2,	`Стиль 2`, 	CONTROLPANEL_STYLE2,
		3,	`Нет`, 	CONTROLPANEL_NONE

	_dy = 24
	if iControlPanelType = CONTROLPANEL_NONE then _outfFlag = 4
	_yCurr = pageStartY + 97
	UI_OUTFIELD	`Панель Управления`,	x1,	_yCurr,		x2 - x1 - 2,	_outfHeight, _outfFlag

	if iControlPanelType = CONTROLPANEL_STYLE2 then _outfFlag = 4
	_yCurr = _yCurr + _dy
	UI_OUTFIELD	`Ручка 1`,			x1,	_yCurr,		x2 - x1 - 2,	_outfHeight, _outfFlag

	_yCurr = _yCurr + _dy
	UI_OUTFIELD	`Ручка 2`,			x1,	_yCurr,		x2 - x1 - 2,	_outfHeight, _outfFlag

	_yCurr = _yCurr + _dy
	UI_OUTFIELD	`Переключатели`,			x1,	_yCurr,		x2 - x1 - 2,	_outfHeight, _outfFlag
	_outfFlag = 0

	_yCurr = 	pageStartY + 97
	UI_INFIELD	"ControlPanelMat",	x2,	_yCurr - _yOffset - 3,	90,	_surfHeight

	_yCurr = _yCurr + _dy
	UI_INFIELD	"HandleMat",		x2,	_yCurr - _yOffset - 3,	90,	_surfHeight

	_yCurr = _yCurr + _dy
	UI_INFIELD	"HandleMat2",		x2,	_yCurr - _yOffset - 3,	90,	_surfHeight

	_yCurr = _yCurr + _dy
	UI_INFIELD	"SwitchMat",		x2,	_yCurr - _yOffset - 3,	90,	_surfHeight

	_yCurr = _yCurr + _dy * 2
	if gs_door_type_m <> 10 then
		UI_INFIELD{3}	"gs_bevel",			x1,	pageStartY + 205,	 200,	_infHeight,
			7, "",
			2, 1,
			0, 0, 0, 0,
			"", `Фаска Торца`, 0,
			"", `Фаска Торца`, 1
	endif

	UI_STYLE 0,1
	UI_OUTFIELD	`Дверь`, 444 - 130 - 12 - 24 - 62,	pageStartY + 5,	60, _outfHeight
	UI_STYLE 0,0

	UI_INFIELD{3}	"gs_door_type",	444 - 130 - 12 - 24,	pageStartY + 5,	130,	82,
		2,"ui_CabDoorTypSolid(13)", 12, 3,
		60 * 0.9, 80 * 0.9, 60 * 0.9, 80 * 0.9,
		2,	`Стиль 1`,		`Стиль 1`,
		3,	`Стиль 2`,		`Стиль 2`,
		4,	`Стиль 3`,		`Стиль 3`,
		10,	`Стиль 4`,		`Стиль 4`,
		11,	`Стиль 5`,		`Стиль 5`,
		9,	`Стиль 6`,		`Стиль 6`,
		5,	`Стиль 7`,		`Стиль 7`,
		6,	`Стиль 8`,		`Стиль 8`,
		7,	`Стиль 9`,		`Стиль 9`,
		8,	`Стиль 10`,		`Стиль 10`,
		12,	`Специальная Панель`,	`Специальная Панель`

	_dy = 22	

	_yCurr = pageStartY + 97
	UI_OUTFIELD	`Толщина Двери`,		x3,	_yCurr,		109,_outfHeight

	if gs_door_type_m=1 OR gs_door_type_m=99 then  _outfFlag = 4
	_yCurr = _yCurr + _dy
	UI_OUTFIELD	`Ширина Обвязки`,		x3,	_yCurr,		109,_outfHeight, _outfFlag

	if 	gs_door_type_m = 2 |\
		gs_door_type_m = 4 |\
		gs_door_type_m = 6 |\
		gs_door_type_m = 9 |\
		gs_door_type_m = 11 then _outfFlag = 4

	_yCurr = _yCurr + _dy
	UI_OUTFIELD	`Гориз. Раскладка`,	x3,	_yCurr,		109,_outfHeight, _outfFlag

	_yCurr = _yCurr + _dy
	UI_OUTFIELD	`Верт. Раскладка`,	x3,	_yCurr,		109,_outfHeight, _outfFlag
	_outfFlag = 0

	_yCurr = _yCurr + _dy
	UI_OUTFIELD	`Угол Открывания`,	x3,	_yCurr,		109,_outfHeight

	_dy = 24

	_yCurr = _yCurr + _dy
	UI_OUTFIELD	`Обвязка Двери`,			x3,	_yCurr,		90,	_outfHeight

	if 	gs_door_type_m <> 3 &\
		gs_door_type_m <> 5 &\
		gs_door_type_m <> 7 &\
		gs_door_type_m <> 9 &\
		gs_door_type_m <> 12 then _outfFlag = 4

	_yCurr = _yCurr + _dy
	UI_OUTFIELD	`Филенка Двери`,			x3,	_yCurr,		90,	_outfHeight, _outfFlag
	_outfFlag = 0

	_dy = 22
	_yCurr = pageStartY + 97
	UI_INFIELD	"fr_th1",				x4,	_yCurr  - _yOffset,	70,	_infHeight

	_yCurr = _yCurr + _dy
	UI_INFIELD	"doorframe_w",			x4,	_yCurr - _yOffset,	70,	_infHeight

	_yCurr = _yCurr + _dy
	UI_INFIELD	"hor_gnum",				x4,	_yCurr - _yOffset,	70,	_infHeight

	_yCurr = _yCurr + _dy
	UI_INFIELD	"vert_gnum",			x4,	_yCurr - _yOffset,	70,	_infHeight

	_yCurr = _yCurr + _dy
	UI_INFIELD	"door_ang",				x4,	_yCurr - _yOffset,	70,	_infHeight

	_dy = 24
	_yCurr = _yCurr + _dy
	UI_INFIELD	"doorframe_mat",		x4 - 20,	_yCurr - _yOffset - 3,	90,	_surfHeight

	_yCurr = _yCurr + _dy
	UI_INFIELD	"doorglas_mat",			x4 - 20,	_yCurr - _yOffset - 3,	90,	_surfHeight


return

! ------------------------------------------------------------------------------
"textPage":
! ------------------------------------------------------------------------------

	UI_SEPARATOR 222, pageStartY - 2, 222, pageStartY + 225

	xStart = 15
	xGap = 140
	hRow = 13
	yStart = pageStartY + 35
	hDist = 35
	xStart2 = 222+10
	xGap2 = 222+10+130
	xGapLong = 222+10+130-100

	UI_INFIELD	"dt",				xStart,	yStart,	15,	15

	UI_STYLE 0,1
	UI_OUTFIELD	`Показ Текста`,		xStart+15+5,	yStart,		110,	hRow
	UI_STYLE 0,0

	UI_OUTFIELD	`Текст`,				xStart,	yStart+hDist,		xGap-xStart-1,		hRow
	UI_OUTFIELD	`Перо Текста`,			xStart,	yStart+hDist*2,		xGap-xStart-1,		hRow
	UI_OUTFIELD	`Позиция Текста по X`,	xStart,	yStart+hDist*3,		xGap-xStart-1,		hRow
	UI_OUTFIELD	`Позиция Текста по Y`,	xStart,	yStart+hDist*4,		xGap-xStart-1,		hRow

	UI_INFIELD	"txt",				xGap,	yStart+hDist,		222-xGap-10,		hRow
	UI_INFIELD	"tpen",				xGap+35,yStart+hDist*2,		222-xGap-10-35,		22
	UI_INFIELD	"txtx",				xGap,	yStart+hDist*3,		222-xGap-10,		20
	UI_INFIELD	"txty",				xGap,	yStart+hDist*4,		222-xGap-10,		hRow

	UI_OUTFIELD	`Тип Шрифта`,		xStart2,	yStart,				64,		hRow
	UI_OUTFIELD	`Ориентация Текста`,	xStart2,	yStart+hDist*1.5,	80,		hRow
	UI_OUTFIELD	`Стиль Шрифта`,		xStart2,	yStart+hDist*3,		64,		hRow
	UI_OUTFIELD	`Размер Шрифта`,		xStart2,	yStart+hDist*4,		80,		hRow


	UI_INFIELD	"fontType",				xGapLong,	yStart+hDist*0.5,	444-xGapLong-15,		hRow
	UI_INFIELD	"typeTextRotation",	xGapLong,	yStart+hDist*2,		444-xGapLong-15,		hRow
	ui_infield{3} "gs_text_style_bold", 444-20*3-2*5-15, yStart+hDist*3, 20, 20,
			6, "",
			2,
			1, 16, 16, 16, 16,
			"ui_bold_flat(1)", "", 0,
			"ui_bold_flat(1)", "", 1\
			ui_tooltip `Жирный`

	ui_infield{3} "gs_text_style_italic", 444-20*2-5-15, yStart+hDist*3, 20, 20,
			6, "",
			2,
			1, 16, 16, 16, 16,
			"ui_italic_flat(1)", "", 0,
			"ui_italic_flat(1)", "", 1\
			ui_tooltip `Курсив`

	ui_infield{3} "gs_text_style_underline", 444-20*1+1*5-15, yStart+hDist*3, 20, 20,
			6, "",
			2,
			1, 16, 16, 16, 16,
			"ui_underline_flat(1)", "", 0,
			"ui_underline_flat(1)", "", 1\
			ui_tooltip `Подчеркнутый`


	UI_INFIELD	"fsz",				444-20*3-2*5-15,	yStart+hDist*4,		444-(444-20*3-2*5-15)-15,		13


return

