"minimalspacePage":
! ------------------------------------------------------------------------------

	xPict1 = 161
	yPict1 = 45
	xPict2 = 158
	yPict2 = 22
	wGap = 50
	hGap = 18
	xField = 90
	yField = 18
	fieldToPic = 3
	fieldToField = 5
	
	if dob_face = 0 then
		ui_pict 1, xPict1, yPict1, 121, 163, 1 

		ui_infield "A", xPict1 + 15, yPict1 - yField - fieldToPic, xField, yField ui_tooltip `Ширина`
		ui_infield "MSSide2", xPict1 + 15 - fieldToField - xField, yPict1 - yField - fieldToPic, xField, yField ui_tooltip `Минимальное Пространство Сбоку 2`
		ui_infield "MSSide", xPict1 + 15 + fieldToField + xField, yPict1 - yField - fieldToPic, xField, yField ui_tooltip `Минимальное Пространство Сбоку 1`
		
		ui_infield "B", xPict1 + 121 + fieldToPic, yPict1 + 40, xField, yField ui_tooltip `Длина`
		ui_infield "MSFront", xPict1 + 121 + fieldToPic, yPict1 + 118, xField, yField ui_tooltip `Минимальное Пространство Спереди`
	else
		ui_pict 2, xPict2, yPict2, 129, 221, 1
		
		ui_infield "A", xPict2 + 15, yPict2 - yField - fieldToPic, xField, yField ui_tooltip `Ширина`
		ui_infield "RMSSide", xPict2 + 15 - fieldToField - xField, yPict2 - yField - fieldToPic, xField, yField ui_tooltip `Минимальное Пространство Сзади со Стороны 1`
		ui_infield "RMSSide2", xPict2 + 15 + fieldToField + xField, yPict2 - yField - fieldToPic, xField, yField ui_tooltip `Минимальное Пространство Сзади со Стороны 2`
		
		ui_infield "MSRear", xPict2 + 129 + fieldToPic, yPict2 + 27, xField, yField ui_tooltip `Минимальное Пространство Сзади`
		ui_infield "B", xPict2 + 129 + fieldToPic, yPict2 + 90, xField, yField ui_tooltip `Длина`
		ui_infield "MSFront", xPict2 + 129 + fieldToPic, yPict2 + 165, xField, yField ui_tooltip `Минимальное Пространство Спереди`
		
		ui_infield "MSSide2", xPict2 + 20 - fieldToField - xField / 2, yPict2 + 221 + fieldToPic, xField, yField ui_tooltip `Минимальное Пространство Сбоку 2`
		ui_infield "MSSide", xPict2 + 20 + fieldToField + xField / 2, yPict2 + 221 + fieldToPic, xField, yField ui_tooltip `Минимальное Пространство Сбоку 1`
	endif

return
