"minimalspacePage":
! ------------------------------------------------------------------------------

	xPict1 = 119
	yPict1 = 46
	xPict2 = 119
	yPict2 = 23
	wGap = 50
	hGap = 18
	xField = 90
	xFields = 72
	yField = 18
	fieldToPic = 3
	fieldToField = 5
	
	if dob_face = 0 then
		ui_pict 1, xPict1, yPict1, 206, 173, 1 

		ui_infield "A", xPict1 + 60, yPict1 - yField - fieldToPic, xField, yField ui_tooltip `Ширина`
		ui_infield "B", xPict1 - xField - fieldToPic, yPict1 + 60, xField, yField ui_tooltip `Длина`
		
		ui_infield "depth_cabl", xPict1 + 10, yPict1 + 173 + fieldToPic, xField, yField ui_tooltip `Глубина Левого Шкафа`
		
		ui_infield "depth_cabr", xPict1 + 206 + fieldToPic, yPict1 + 43, xField, yField ui_tooltip `Глубина Правого Шкафа`
		ui_infield "MSFront", xPict1 + 206 + fieldToPic, yPict1 + 117, xFields, yField ui_tooltip `Минимальное Пространство Спереди`
		
	else
		ui_pict 2, xPict2, yPict2, 206, 220, 1
		
		ui_infield "A", xPict2 + 60, yPict2 - yField - fieldToPic, xField, yField ui_tooltip `Ширина`
		ui_infield "B", xPict2 - xField - fieldToPic, yPict2 + 107, xField, yField ui_tooltip `Длина`
		ui_infield "MSRear", xPict2 + 206 + fieldToPic, yPict2 + 25, xFields, yField ui_tooltip `Минимальное Пространство Сзади`
		
		ui_infield "depth_cabl", xPict2 + 10, yPict2 + 220 + fieldToPic, xField, yField ui_tooltip `Глубина Левого Шкафа`
		ui_infield "depth_cabr", xPict2 + 206 + fieldToPic, yPict2 + 90, xField, yField ui_tooltip `Глубина Правого Шкафа`
		
		ui_infield "MSFront", xPict2 + 206 + fieldToPic, yPict2 + 167, xFields, yField ui_tooltip `Минимальное Пространство Спереди`
	endif

return

