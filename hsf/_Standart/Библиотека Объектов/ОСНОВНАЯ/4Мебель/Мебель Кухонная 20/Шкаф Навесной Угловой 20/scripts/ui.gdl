! ------------------------------------------------------------------------------
"knobPage":
! ------------------------------------------------------------------------------

	bLockKnobPlacement = 0
	bLockKnobPosition = 0
	bLockKnobSize = 0

	if iEndCabinetStyle = CABEND_RADIUSED or gs_knob_type_m < 4 or gs_knob_type_m = 9 then
		bLockKnobPlacement = 1
	endif
	if iEndCabinetStyle = CABEND_RADIUSED or gs_knob_type_m = 0 then
		bLockKnobPosition = 1
	endif
	if gs_knob_type_m < 4 | gs_knob_type_m=9 then
		bLockKnobSize = 1
	endif

	ui_style 0,1
	ui_outfield	`Тип Ручки`,	12,	pageStartY + 3 + 4,	100,	13
	ui_style 0,0

	ui_infield{3}	"gs_knob_type",	60,	pageStartY + 53,	100,	70,
	2,"Knob_Types_N_Small(1)",12,4,
		100,70,38,50,
		1,`Стиль 1`,`Стиль 1`,
		2,`Стиль 2`,`Стиль 2`,
		3,`Стиль 3`,`Стиль 3`,
		4,`Стиль 4`,`Стиль 4`,
		5,`Стиль 5`,`Стиль 5`,
		6,`Стиль 6`,`Стиль 6`,
		7,`Стиль 7`,`Стиль 7`,
		8,`Стиль 8`,`Стиль 8`,
		9,`Нет`,`Нет`,
		9,`Спец.`,`Спец.`

	ui_outfield	`Имя Спец. Ручки`,	200,	pageStartY + 20,		110,	13, 4 * (gs_knob_type_m <> 9)
	ui_outfield	`По Горизонт.`,	200,	pageStartY + 50,		110,	13, 4*bLockKnobPosition
	ui_outfield	`По Вертик.`,	200,	pageStartY + 80,		110,	13, 4*(gs_knob_type_m = 0)
	ui_outfield	`Расположение`,			200,	pageStartY + 10,		110,	13, 4*bLockKnobPlacement

	ui_infield{3}	"gs_knob_p_m",  352,	pageStartY + 110 - 4,	80,		18,
			8, "", 3, 1,
			0, 0, 0, 0,
			1, `Вертикальный`, CABINET_KNOB_VER,
			2, `Горизонтальный`, CABINET_KNOB_HOR



	ui_outfield	`Длина Ручки`,		200,	pageStartY + 140,		110,	13, 4*bLockKnobSize
	ui_outfield	`Покрытие`,			200,	pageStartY + 170,		80,		13, 4*(gs_knob_type_m = 0)

	ui_infield	"gs_cust_knob",		312,	pageStartY + 20 - 4,	120,	18
	ui_infield	"knob_pl_x",		352,	pageStartY + 50 - 4,	80,		18
	ui_infield	"knob_pl_y",		352,	pageStartY + 80 - 4,	80,		18
	ui_infield	"knob_size",		352,	pageStartY + 140 - 4,	80,		18
	ui_infield	"gs_knob_mat",		312,	pageStartY + 170 - 4,	120,	22


