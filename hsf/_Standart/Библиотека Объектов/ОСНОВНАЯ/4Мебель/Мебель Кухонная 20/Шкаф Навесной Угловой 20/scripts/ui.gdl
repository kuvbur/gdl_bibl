	XX=58+20
	YY=pageStartY + 13 + 10
	PX=60
	PY=150

	ui_pict	"ui_CabSideViewWallCab(13)",	XX,	YY,	PX,	PY,1
	ui_outfield	`(1)`,		XX+27,		pageStartY + 10,	30,	15

	ui_infield	"ZZYZX",		5+20,	YY+40,	50,	18 UI_TOOLTIP `Высота Корпуса`
	ui_infield	"fr_th1",		XX,		YY+PY+3,	50,	18 UI_TOOLTIP `Толщина Двери`

	ui_style 0,1
	ui_outfield	`Стиль Корпуса`,	243-18,	pageStartY + 3 + 4,		117,	13
	ui_style 0,0
	ui_infield{3}	"iEndCabinetStyle",		342,	pageStartY + 3 + 4,		90,		18

	ui_style 0,1
	ui_outfield	`Размер`,			243-18,	pageStartY + 3 + 22 * 2,		117,13
