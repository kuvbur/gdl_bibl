			UI_INFIELD{3}	"ApplStyle_m",	12+24,	pageStartY + 3 + 4 + 24 * 3,	140,	110,
			2,"ui_MicOvenDoor(13)",10,5,
				72,108,72,108,
				1,st_OvenDoorStyles[1],APPLSTYLE_1,
				2,st_OvenDoorStyles[2],APPLSTYLE_2
		ENDIF
		IF ApplType_m = APPLTYPE_SINGLE_OVEN THEN
			UI_INFIELD{3}	"ApplStyle_m",	12+24,	pageStartY + 3 + 4 + 24 * 3,	140,	110,
			2,"ui_MicOvenDoor(13)",10,5,
				72,108,72,108,
				3,st_OvenDoorStyles[1],APPLSTYLE_1,
				4,st_OvenDoorStyles[2],APPLSTYLE_2
		ENDIF
		IF ApplType_m = APPLTYPE_COMB_OVEN THEN
			UI_INFIELD{3}	"ApplStyle_m",	12+24,	pageStartY + 3 + 4 + 24 * 3,	140,	110,
			2,"ui_MicOvenDoor(13)",10,5,
				72,108,72,108,
				5,st_OvenDoorStyles[1],APPLSTYLE_1,
				6,st_OvenDoorStyles[2],APPLSTYLE_2
		ENDIF
		IF ApplType_m = APPLTYPE_DOUBLE_OVEN THEN
			UI_INFIELD{3}	"ApplStyle_m",	12+24,	pageStartY + 3 + 4 + 24 * 3,	140,	110,
			2,"ui_MicOvenDoor(13)",10,5,
				72,108,72,108,
				7,st_OvenDoorStyles[1],APPLSTYLE_1,
				8,st_OvenDoorStyles[2],APPLSTYLE_2
		ENDIF

