
pen gs_cont_pen
fill gs_fill_type

! -----------------------------------------------------------------------------
! 2D Hotspots
! -----------------------------------------------------------------------------

unID = 1
hotspot2 -a/2,    0, unID : unID = unID + 1
hotspot2 -a/2,   -b, unID : unID = unID + 1
hotspot2  a/2,   -b, unID : unID = unID + 1
hotspot2  a/2,    0, unID : unID = unID + 1


! -----------------------------------------------------------------------------
! Styles
! -----------------------------------------------------------------------------

gosub iStyle

end

! =============================================================================
! SUBRUTINES
!
! =============================================================================

! -----------------------------------------------------------------------------
! Style 1
! -----------------------------------------------------------------------------

1:
	poly2_b 4, 1+2+4+64, gs_fill_pen, gs_back_pen,
			-a/2, 0, 1,
			 a/2, 0, 1,
			 a/2, -b, 1,
			-a/2, -b, 1

	add2 -a/2, -b
	for s = 1 to iHookNum
	   add2 (a+0.02) / (iHookNum+1), 0
	   gosub "hook1"
	next s
	del iHookNum + 1
return

! -----------------------------------------------------------------------------
! Style 1
! -----------------------------------------------------------------------------

2:
	poly2_b 4, 1+2+4+64, gs_fill_pen, gs_back_pen,
			-a/2, 0, 1,
			 a/2, 0, 1,
			 a/2, -b, 1,
			-a/2, -b, 1

	add2 a/2, -b
	rot2 180
	add2 -(a/iHookNum)*0.5, 0
	for Cnt = 1 to iHookNum
		add2 a/iHookNum,0
		gosub "hook2"
	next Cnt
	del iHookNum + 3
return

! -----------------------------------------------------------------------------
!		Hooks
! -----------------------------------------------------------------------------

"hook1":
	add2 -0.02, 0
	poly2_b 4, 1+2+4+64, gs_fill_pen, gs_back_pen,
			0, -0.05, 1,
			0, 0, 1,
			0.02, 0, 1,
			0.02, -0.05, 1
	del 1
return


"hook2":
	poly2_b 4, 1+2+4+64, gs_fill_pen, gs_back_pen,
		   -0.01, 0, 1,
			0.01, 0, 1,
			0.01, 0.13, 1,
		   -0.01, 0.13, 1
return

