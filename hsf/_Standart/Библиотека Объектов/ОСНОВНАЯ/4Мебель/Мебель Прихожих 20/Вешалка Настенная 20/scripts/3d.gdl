
if iDetlevel3D = 0 then end
if not(gs_shadow) then SHADOW OFF
if iDetlevel3D = 1 then  gs_resol = 3

! -----------------------------------------------------------------------------
! 3D Hotspots
! -----------------------------------------------------------------------------

unID = 1

! -----------------------------------------------------------------------------
! Styles
! -----------------------------------------------------------------------------

pen gs_cont_pen
resol gs_resol
gosub iStyle

end

! =============================================================================
! SUBRUTINES
!
! =============================================================================

! -----------------------------------------------------------------------------
! Style 1
! -----------------------------------------------------------------------------

1:
	material gs_frame_mat
	add a/2, 0, 0
	rotz -180
	block a, b, zzyzx

	material gs_hook_mat
	add 0, b, zzyzx/2
	for s = 1 to iHookNum
	   addx (a+0.02) / (iHookNum+1)
	   gosub "hook1"
	next s
	del iHookNum + 3
return

! -----------------------------------------------------------------------------
! Style 2
! -----------------------------------------------------------------------------

2:
	material gs_frame_mat
	addx a/2
	rotz -180
	brick a, b, zzyzx

	material gs_hook_mat
	addx -(a/iHookNum)*0.5
	for Cnt = 1 to iHookNum
		addx a / iHookNum
		gosub "hook2"
	next Cnt
	del iHookNum + 3
return


! -----------------------------------------------------------------------------
!		Hooks
! -----------------------------------------------------------------------------

"hook1":
	addz -0.065
	roty -90
	prism 10, 0.02,
		   0, 0.04,
		   0.04, 0,
		   0.09, 0,
		   0.13, 0.04,

		   0.125, 0.04,
		   0.085, 0.005,
		   0.045, 0.005,
		   0.005, 0.04,

		   0.015, 0.0475,
		   0.015, 0.05
	del 2
return

"hook2":
	addz zzyzx * 0.5
	rotx -90
	addz b
	rotz 90
	roty -15
	cone 0.13, 0.01, 0.01, 105, 90
	del 5
return



