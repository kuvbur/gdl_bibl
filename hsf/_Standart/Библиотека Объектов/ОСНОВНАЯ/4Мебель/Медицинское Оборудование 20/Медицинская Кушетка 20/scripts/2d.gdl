
CALL "Resize_A_B_ZZYZX" Parameters ALL

! === Minimal Space ====================================== [
reqBMinSpace = 0
drawindex 10

success = LIBRARYGLOBAL ("LibraryGlobals13", "showBMinSpace", reqBMinSpace)
if success > 0 and reqBMinSpace then
	call "fa_minimalspace" parameters all 	MSType 	= 2,
											diff2	= MSLengthAdd,
											diff3	= MSSide - MSSideAdd,
											unID 	= 3000
endif

! === Minimal Space ====================================== ]

unID = 1
pen gs_cont_pen

hotspot2 a/2, b, unID : unID = unID + 1
hotspot2 a/2, b/2, unID : unID = unID + 1


!!! ******************************** Different fills
if bUniformFill then
	fillTypeBed			= fillTypeUniform
	fillPenBed			= fillPenUniform
	backPenBed			= backPenUniform
	fillTypePillow		= fillTypeUniform
	fillPenPillow		= fillPenUniform
	backPenPillow		= backPenUniform
	fillTypeBlanket		= fillTypeUniform
	fillPenBlanket		= fillPenUniform
	backPenBlanket		= backPenUniform
	fillTypeStep		= fillTypeUniform
	fillPenStep			= fillPenUniform
	backPenStep			= backPenUniform
else
	fillTypeBed			= gs_fill_type
	fillPenBed			= gs_fill_pen
	backPenBed			= gs_back_pen
endif

fill fillTypeBed
drawindex 20
poly2_b 5, 1+2+4+64, fillPenBed,backPenBed,
	0, 0, 1,
	a, 0, 1,
	a, b, 1,
	0, b, 1,
	0, 0, -1

if iSymbolType = 1 then
	fill fillTypePillow
	drawindex 30
	poly2_b 7, 1+2+4+64, fillPenPillow, backPenPillow,
		0.06, b-0.44, 1,
		0.06, b-0.06, 1,
		a-0.06, b-0.06, 1,
		a-0.06, b-0.48, 1,
		a-0.17, b-0.48, 1,
		a-0.21, b-0.44, 1,
		0.06, b-0.44, -1

	drawindex 40
	fill fillTypeBlanket
	poly2_b 6, 1+2+4+64, fillPenBlanket, backPenBlanket,
		0.03, 0.03, 1,
		a-0.03, 0.03, 1,
		a-0.03, b-0.62, 1,
		a-0.21, b-0.44, 1,
		0.03, b-0.44, 1,
		0.03, 0.03, -1
	line2 a-0.03, b-0.62,  a-0.21, b-0.62
	line2 a-0.21, b-0.44,  a-0.21, b-0.62
endif

if iSymbolType = 2 then
	fill fillTypePillow
	drawindex 30
	poly2_b 5, 1+2+4+64, fillPenPillow, backPenPillow,
		0.06,	b-0.48, 1,
		a-0.06, b-0.48, 1,
		a-0.06, b-0.06, 1,
		0.06,	b-0.06, 1,
		0.06,	b-0.48, -1
endif

if iSymbolType = 3 then line2 a, 0,  0, b

if bStep then
	fill fillTypeStep
	poly2_b 5, 1+2+4+64, fillPenStep, backPenStep,
		0,	stepOffset, 1,
		-stepWidth, stepOffset, 1,
		-stepWidth, stepOffset+stepLenght, 1,
		0,	stepOffset+stepLenght, 1,
		0,	stepOffset, -1

	hotspot2 0,	stepOffset, unID : unID = unID + 1
	hotspot2 -stepWidth, stepOffset, unID : unID = unID + 1
	hotspot2 -stepWidth, stepOffset+stepLenght, unID : unID = unID + 1
	hotspot2 0,	stepOffset+stepLenght, unID : unID = unID + 1
endif

