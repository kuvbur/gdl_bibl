
actualGUID = FROM_GUID

! ==============================================================================
! Subroutines
! ==============================================================================

	_startID	= "6CE99B5C-CF43-49DE-BAE1-A97F3F28D683"
	_endID		= "A2A8D348-1ABA-45B9-A8CE-23673C76F715"
gosub "New_ScreenSizeHandling_FWM"

! ==============================================================================
! Set migration GUID
! ==============================================================================

setmigrationguid actualGUID

! ==============================================================================
end ! end ! end ! end ! end ! end ! end ! end ! end ! end ! end ! end ! end ! en
! ==============================================================================


! ==============================================================================
! New screen size handling: adding and deleting parameters
! ==============================================================================
"New_ScreenSizeHandling_FWM":
    if actualGuid = _startID then
        
        bHas =  STORED_PAR_VALUE("iMonitorType", _iMonitorType)     |\
                DELETED_PAR_VALUE("iScreenRatio", _iScreenRatio)    |\
                DELETED_PAR_VALUE("bUnitSizing", _bUnitSizing)
      
        if _iMonitorType = 1 then
            if _iScreenRatio = 4 then                           ! Custom Screen Ratio
                actualGuid = ""     
            else
                if _bUnitSizing = 0 then
                    iScreenRatio    = 4
                    screenWidth     = A - 0.03                  ! Frame thickness * 2
                    screenHeight    = ZZYZX - ZZYZX / 7 - 0.03  ! Frame thickness * 2, Supporter Height
                    
                    parameters  iScreenRatio    = iScreenRatio,
                                screenHeight    = screenHeight,
                                screenWidth     = screenWidth
                else
                    iScreenSize = 8                             ! Custom Screen Diagonal Size
                    parameters iScreenSize = iScreenSize
                endif
                actualGuid = _endID
            endif
        else
            actualGuid = _endID
        endif
    endif
return

