
call "FM_types" parameters all

hideparameter all "A", "B", "ZZYZX"

values{2} "iLaptopType" 	1, stLaptopType[1],
							2, stLaptopType[2],
							3, stLaptopType[3],
							4, stLaptopType[4],
							5, stLaptopType[5],
							6, stLaptopType[6]

if iLaptopType = 6 then		! Old Type

	lock "roofOpAng", "bodyBlkMat", "bodyMetMat", "screenMat", "butMat", "gs_resol"
	hideparameter "roofOpAng", "bodyBlkMat", "bodyMetMat", "screenMat", "butMat", "gs_resol"

	VALUES{2} "gs_detlevel_3D_m" 	2, `Детальный`,
									0, `Откл.`

	IF gs_detlevel_3D_m = 0 THEN HIDEPARAMETER "gs_shadow", "tol"

	IF gs_cont_pen=0 THEN PARAMETERS gs_cont_pen=10
	IF gs_fill_pen=0 THEN PARAMETERS gs_fill_pen=91

	if not(opd) then
		parameters a=0.31,b=0.26,ZZYZX=0.042
		hideparameter "pic", "dispmat", "gs_picture_custom", "gs_picture_name"
		lock "pic", "dispmat", "gs_picture_custom", "gs_picture_name"
	else
		parameters a=0.31,b=0.3257,ZZYZX=0.277
	endif
	lock "a","b", "ZZYZX"

	values "tol" RANGE (0,)
else						! Not Old Type

	lock "opd", "box_mat", "butdmat", "butlmat", "ledmat", "dispmat", "spmat", "sgmat", "tol"
	hideparameter "opd", "box_mat", "butdmat", "butlmat", "ledmat", "dispmat", "spmat", "sgmat", "tol"

	values "gs_resol" range [3,)

	values{2} "gs_detlevel_3D_m" 	2, `Детальный`,
									1, `Простой`,
									0, `Откл.`

	if gs_detlevel_3D_m = 1 then hideparameter "gs_resol"
	if gs_detlevel_3D_m = 0 then hideparameter "gs_resol", "gs_shadow"

	lock "a", "b", "zzyzx"

	values "roofOpAng" range[0,180]
endif

if pic then
	lock "screenMat", "dispmat"
	hideparameter "screenMat", "dispmat"
else
	lock "gs_picture_custom", "gs_picture_name"
	hideparameter "gs_picture_custom", "gs_picture_name"
endif
if not(gs_picture_custom) then
	lock "gs_picture_name"
	hideparameter "gs_picture_name"
endif

