
! Projector screen

pen gs_cont_pen
fill gs_fill_type

if iScreenType = SCREEN_FLOORMOUNT then
	poly2_b 4, 1+2+4+64, gs_fill_pen, gs_back_pen,
		-A/2, -r03, 1,
		A/2, -r03, 1,
		A/2, r01/2, 1,
		-A/2, r01/2, 1

	for hi = 1 to 2
		poly2_b 4, 1+2+4+64, gs_fill_pen, gs_back_pen,
			-A/4, -r03, 1,
			-A/4, -r08/2, 1,
			-A/4+2*r02, -r08/2, 1,
			-A/4+2*r02, -r03, 1

		poly2_b 4, 1+2+4+64, gs_fill_pen, gs_back_pen,
			-A/4+2*r02, -r08/2+2*r02-0.002, 1,
			-A/4+2*r02, -r08/2+0.002, 1,
			-3*r02, -r08/2+0.002, 1,
			-3*r02, -r08/2+2*r02-0.002, 1
	mul2 -1, 1
	next hi
	del 2

	poly2_b 4, 1+2+4+64, gs_fill_pen, gs_back_pen,
		-3*r02, -r03, 1,
		-3*r02, -1.5*r08, 1,
		3*r02, -1.5*r08, 1,
		3*r02, -r03, 1

	line2 -A/2, -r02, A/2, -r02
	line2 -A/2, r02, A/2, r02

	hotspot2 0, 0
	hotspot2 -A/2, -1.5*r08
	hotspot2 A/2, -1.5*r08
	hotspot2 -A/2, r01/2
	hotspot2 A/2, r01/2
endif

