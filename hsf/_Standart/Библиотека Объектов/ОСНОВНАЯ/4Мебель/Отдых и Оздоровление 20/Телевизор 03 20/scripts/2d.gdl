

bDetailed = (iDet2D = DETLEVEL_2D_DETAILED)

pen gs_cont_pen
fill gs_fill_type

unID = 1

hotspot2  0,   0,  unID, A, 1+256   : unID = unID + 1
hotspot2  a,   0,  unID, A, 2       : unID = unID + 1
hotspot2 -1,   0,  unID, A, 3       : unID = unID + 1

hotspot2  a*5/8,   0,  unID, B, 1   : unID = unID + 1
hotspot2  a*5/8,   b,  unID, B, 2   : unID = unID + 1
hotspot2  a*5/8,  -1,  unID, B, 3   : unID = unID + 1

hotspot2  a-a*5/8,   0,  unID, B, 1   : unID = unID + 1
hotspot2  a-a*5/8,   b,  unID, B, 2   : unID = unID + 1
hotspot2  a-a*5/8,  -1,  unID, B, 3   : unID = unID + 1

if not(bDetailed) then
	poly2_b 6, 1+2+4+64,gs_fill_pen, gs_back_pen,
			0,0,1,
			a,0,1,
			a,(b/3),1,
			(a*5/8),b,1,
			(a*3/8),b,1,
			0,(b/3),1
endif

if bDetailed then
	poly2_b 10, 1+2+4+64,gs_fill_pen, gs_back_pen,
			0,-(b/5),15,
			(a/5),-(b/5),15,
			(a/2.1),(b/4),15,
			a-(a/2.1),(b/4),15,
			a-(a/5),-(b/5),15,
			a,-(b/5),15,
			a,(b/3),15,
			(a*5/8),b,15,
			(a*3/8),b,15,
			0,(b/3),15

	poly2_b 6, 1+2+4+64,gs_fill_pen, gs_back_pen,
			0,0,1,
			a,0,1,
			a,(b/3),1,
			(a*5/8),b,1,
			(a*3/8),b,1,
			0,(b/3),1
endif
