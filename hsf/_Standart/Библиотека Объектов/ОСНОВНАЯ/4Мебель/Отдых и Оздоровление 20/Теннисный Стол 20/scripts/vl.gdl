
call "FM_types" parameters all

!Hide all parameters from UI
hideparameter all  "A", "B", "ZZYZX"

values{2} "gs_detlevel_3D_m" 	DLEV3D_DETAILED, `Детальный`,
								DLEV3D_SIMPLE, `Простой`,
								DLEV3D_OFF, `Откл.`
values{2} "iDet2D" 	DETLEVEL_2D_SIMPLE, `Простой`,
					DETLEVEL_2D_DETAILED, `Детальный`
VALUES "gs_resol" RANGE [3,)

if gs_cont_pen=0 then parameters gs_cont_pen=7
if gs_fill_pen=0 then parameters gs_fill_pen=91
if area_fill_pen=0 then parameters area_fill_pen=91

if area=0 then
	parameters a=2.754
	parameters b=1.525
	parameters ZZYZX=0.79
else
	parameters a=12.2
	parameters b=6.1
	parameters ZZYZX=1
ENDIF

lock "a"
lock "b"
lock "ZZYZX"

if gs_detlevel_3D_m = DLEV3D_SIMPLE then
	lock "net","netmat"
endif

if net=0 then
	lock "netmat"
	hideparameter "netmat"
endif

if area=0 then
	lock "wall","wallmat","areamat","area_cont_pen","area_fill_pen"
	hideparameter "wall","wallmat","areamat","area_cont_pen","area_fill_pen"
endif

if wall=0 then
	lock "wallmat"
	hideparameter "wallmat"
endif

IF gs_detlevel_3D_m = DLEV3D_SIMPLE THEN HIDEPARAMETER "gs_resol"
IF gs_detlevel_3D_m = DLEV3D_OFF THEN HIDEPARAMETER "gs_resol", "gs_shadow"
