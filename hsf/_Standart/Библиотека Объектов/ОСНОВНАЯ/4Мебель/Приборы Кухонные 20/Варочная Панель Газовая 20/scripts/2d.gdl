
PEN gs_cont_pen
FILL gs_fill_type

ADD2 a/2,b/2

HOTSPOT2 0,b/2
HOTSPOT2 0,0

if iCookTopType = COOKTOPTYPE_2 and iShapeType = SHAPETYPE_OVAL then
	r = (b^2 / 4)*(1000/(66*a))
	POLY2_B 7, 1+2+64, gs_fill_pen, gs_back_pen,
		-a/2,-b/2, 1,
		-a/2+(r-33*a/1000), 0, 900,
		-a/2, b/2, 3000+1,
		a/2,  b/2, 1,
		a/2-(r-33*a/1000), 0, 900,
		a/2, -b/2, 3000+1,
		-a/2,-b/2,1

else
	POLY2_B 5, 1+2+64,gs_fill_pen,gs_back_pen,
		-a/2,-b/2,1,
		a/2,-b/2,1,
		a/2,b/2,1,
		-a/2,b/2,1,
		-a/2,-b/2,-1

endif

ADD2 -a/2+a/6,0

temp_R=min(A/6,B/6)

if iCookTopType = COOKTOPTYPE_1 then
	for I=1 to 3
		ADD2 0,b/4
		CIRCLE2 0,0,temp_R
		del 1
		ADD2 0,-b/4
		CIRCLE2 0,0,temp_R
		del 1
		ADD2 a/3,0
	next I
	del 3
endif

if iCookTopType = COOKTOPTYPE_3 then
	for I=1 to 3
		ADD2 0,b/4
		CIRCLE2 0,0,temp_R
		del 1
		ADD2 a/3,0
	next I
	del 2
	for j=1 to 2
		ADD2 -a/3,-b/4
		CIRCLE2 0,0,temp_R
		del 1
		ADD2 a*2/3,0
	next j
	del 2

endif

del 1

ADD2 -a/2+a/4,0

if iCookTopType = COOKTOPTYPE_2 then
	for I=1 to 2
		ADD2 0,b/4
		CIRCLE2 0,0,temp_R
		del 1
		ADD2 0,-b/4
		CIRCLE2 0,0,temp_R
		del 1
		ADD2 a/3,0
	next I
	del 2

endif

del top

CALL "Resize_A_B_ZZYZX" Parameters ALL
