
targetGUID = TO_GUID

! ==============================================================================
! Subroutines
! ==============================================================================

gosub "FontSizeParamType_BWM"

gosub "newBooleansToeHandle_BWM"

! ==============================================================================
! Set migration GUID
! ==============================================================================

setmigrationguid targetGuid

! ==============================================================================
end ! end ! end ! end ! end ! end ! end ! end ! end ! end ! end ! end ! end ! en
! ==============================================================================


! ==============================================================================
! FontSizeParamType
! ==============================================================================
"FontSizeParamType_BWM":
	if targetGUID # "" then
		newparameter "fsz", "RealNum"
		newparameter "fsz_point", "RealNum"
		
		fsz = fontSize * 100
		fsz_point = fontSize * 7200 / 25.4
		
		parameters 	fsz = fsz,
					fsz_point = fsz_point
	endif
return

! ==============================================================================
! newBooleansToeHandle
! ==============================================================================
"newBooleansToeHandle_BWM":
	if targetGUID # "" then
		if not(bToe) then ! If toe_h was 0, that equals with bToe being off, otherwise it is on.
			toe_h = 0
			parameters toe_h = toe_h
		endif
		
		! The integer setting the handle style was renamed from gs_handle_st to iHandleType
		newparameter "gs_handle_st", "Integer"
		parameters 	gs_handle_st = iHandleType
		
		
		! Handle can now be switched off with bHandle boolean. If it's off, we still migrate and set the handle to its default style.	
		if not(bHandle) then
			gs_handle_st = 1
			handle_h	 = 1.2
			parameters 	gs_handle_st = gs_handle_st,
						handle_h	 = handle_h
		endif

	endif
return

