
! Bed Bunk

CALL "Resize_A_B_ZZYZX" Parameters ALL

pen gs_cont_pen

call "fa_minimalspace" parameters all	MSType 	= 2,
										diff2	= MSLengthAdd,
										diff3	= MSSide - MSSideAdd,
										unID 	= 3000

ADD2 a/2,b

mul2 a/1.00,b/2.08
hotspot2 0,   -1.04
hotspot2 0,    0
line2   0.5, -2.03, 0.45, -2.03
line2  0.45, -2.03, 0.45, -1.68
line2  0.45, -1.68,  0.5, -1.68
line2  -0.5, 0,     -0.5, -2.08
line2  -0.5, -2.08,  0.5, -2.08
line2  -0.5, 0,      0.5, 0
line2   0.5, 0,      0.5, -2.08
del 1


!!! ******************************** Different fills
if bUniformFill then
	fillTypeBed			= fillTypeUniform
	fillPenBed			= fillPenUniform
	backPenBed			= backPenUniform
	fillTypePillow		= fillTypeUniform
	fillPenPillow		= fillPenUniform
	backPenPillow		= backPenUniform
	fillTypeBlanket		= fillTypeUniform
	fillPenBlanket		= fillPenUniform
	backPenBlanket		= backPenUniform
	iContour		= 1
else
	fillTypeBed			= gs_fill_type
	fillPenBed			= gs_fill_pen
	backPenBed			= gs_back_pen
	iContour		= 7+64
endif


fill fillTypeBed
drawindex 10
poly2_b 5, 2+64,fillPenBed,backPenBed,
	-a/2,0,1,
	-a/2,-b,1,
	a/2,-b,1,
	a/2,0,1,
	-a/2,0,-1

del 1

IF iSymbolType = 3 THEN		! Type 3
	LINE2 a, 0,  0, b
endif

IF iSymbolType = 2 THEN		! Type 2
	fill fillTypePillow
	drawindex 20
	POLY2_B 5, iContour, fillPenPillow, backPenPillow,
		0.06, b-0.48, 1,
		a-0.06, b-0.48, 1,
		a-0.06, b-0.06, 1,
		0.06, b-0.06, 1,
		0.06, b-0.48, -1
ENDIF

IF iSymbolType = 1 THEN		! Type 1
	mm = 1
	tempA = a
	a = 2 * a
	gosub 110
	a = tempA
ENDIF


END

!---------------->!!! RETURN !!!<----------------

110:
	fill fillTypePillow
	drawindex 20

	POLY2_B 6, iContour, fillPenPillow, backPenPillow,
		mm*0.06, b-0.44, 1,
		mm*0.06, b-0.06, 1,
		mm*(a/2-0.06), b-0.06, 1,
		mm*(a/2-0.06), b-0.48, 1,
		mm*(a/2-0.17), b-0.48, 1,
		mm*(a/2-0.21), b-0.44, 1

	drawindex 30
	fill fillTypeBlanket

	POLY2_B 6, iContour, fillPenBlanket, backPenBlanket,
		0.03, 0.03, 1,
		a/2-0.03, 0.03, 1,
		a/2-0.03, b-0.62, 1,
		!a/2-0.21, b-0.62, 1,
		a/2-0.21, b-0.44, 1,
		0.03, b-0.44, 1,
		0.03, 0.03, -1
	LINE2 a/2-0.03, b-0.62,  a/2-0.21, b-0.62
	LINE2 a/2-0.21, b-0.44,  a/2-0.21, b-0.62
RETURN
