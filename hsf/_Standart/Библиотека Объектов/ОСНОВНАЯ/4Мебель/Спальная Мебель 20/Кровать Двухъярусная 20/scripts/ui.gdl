
dim stUIStings[]
	stUIStings[1]	= `Параметры Кровати`
	stUIStings[2]	= `Подушка`

! ======================================================================
ui_dialog stUIStings[1],444,266		! Bed Settings

ui_current_page gs_ui_current_page

iPageIDRoot 			=-1
iPageID2DRep			= 1
iPageID3DRep			= 2
iPageIDMinimalSpace		= 3
iPageIDDescriptions		= 4

dim stTabTitles[4]
	stTabTitles[1]	= `Подушки и 2D-отображение`
	stTabTitles[2]	= `3D-отображение и Покрытия`
	stTabTitles[3]	= `Минимальное Пространство`
	stTabTitles[4]	= `Характеристики`

dim tabIcons[4]
	tabIcons[1] = "uiTab_2DRepr_flat(1)"
	tabIcons[2] = "uiTab_3DRepr_flat(1)"
	tabIcons[3] = "uiTab_MinSpace_flat(1)"
	tabIcons[4] = "uiTab_Descriptions_flat(1)"

FILE_DEPENDENCE "uiTab_2DRepr_flat(1)"
FILE_DEPENDENCE "uiTab_3DRepr_flat(1)"
FILE_DEPENDENCE "uiTab_MinSpace_flat(1)"
FILE_DEPENDENCE "uiTab_Descriptions_flat(1)"

pageStartY = 5

! ==============================================================================
!UI_PAGES
! ==============================================================================

UI_PAGE iPageID2DRep, iPageIDRoot, stTabTitles[1], tabIcons[1]
	gosub "2DRepPage"

UI_PAGE iPageID3DRep, iPageIDRoot, stTabTitles[2], tabIcons[2]
	gosub "3DRepPage"

UI_PAGE iPageIDMinimalSpace, iPageIDRoot, stTabTitles[3], tabIcons[3]
	gosub "minimalSpacePage"

UI_PAGE iPageIDDescriptions, iPageIDRoot, stTabTitles[4], tabIcons[4]
	gosub "descriptionPage"


! ==============================================================================
end
! ==============================================================================


! ==============================================================================
!Subroutines
! ==============================================================================

! ------------------------------------------------------------------------------
"2DRepPage":
! ------------------------------------------------------------------------------

	x1 = 0
	x2 = 171
	x3 = 261
	x4 = x2 + 100
	x5 = x2 + 200	!200 (Style Guide => fillTypeInfLenght)
	xEnd = 444
	
	outfieldHeight		= 15
	infieldHeight 		= 19
	penInfieldHeight 	= 25
	penInfieldLenght 	= 33
	fillTypeInfLenght 	= 200
	fillTypeInfHeight	= 25
	
	pageStartY			= 5
	dy 					= 24
	yEnd 				= 266
	yCurrent 			= pageStartY + 1

! ------------------------------------------------------------------------------


	ui_infield{3} "pw", x1, yCurrent-2, x3 - 2 - x1, outfieldHeight,
		7, "",
		2,
		1, 0, 0, 0, 0,
		0, stUIStings[2], 0,
		1, stUIStings[2], 1

	yCurrent = yCurrent + 17

	ui_separator 0, yCurrent, xEnd, yCurrent

	pageStartY = yCurrent + 5

	SYMBOLCLAS_BED	= 2
	call "ui_object_2DRepresentation" parameters all	iSymbolClass	= SYMBOLCLAS_BED,
														stSymbolTypes	= stSymbolTypes,
														pageStartY		= pageStartY,
														bUniformFill	= bUniformFill,
														iFillFor		= iFillFor,
														bShowDashedLine		= 0,
														bShowSeatsIn2D		= 0,
														bShowOpenSofaBed	= 0,
														iFillListID		= iPageID2DRep

return

! ------------------------------------------------------------------------------
"3DRepPage":
! ------------------------------------------------------------------------------
	dim surfacesArray[]
		surfacesArray[1]	= "frmat"
		surfacesArray[2]	= "hbmat"
		surfacesArray[3]	= "mmat"
	if pw then
			surfacesArray[4]	= "pillow_mat"
	endif

	dim childFlagArray[]
	 	childFlagArray[1]	= 0
		childFlagArray[2]	= 0
		childFlagArray[3]	= 0
	if pw then
		childFlagArray[4]	= 0
	endif

	call "ui_object_3DRepresentation" parameters all	surfacesArray		= surfacesArray,
														childFlagArray		= childFlagArray,
														iSurfaceListID		= iPageID3DRep
return


! ------------------------------------------------------------------------------
"minimalSpacePage":
! ------------------------------------------------------------------------------

	call "fa_minimalspace" parameters MSType = 2 ! MINSPACE_SIMPLE_BED

return


! ------------------------------------------------------------------------------
"descriptionPage":
! ------------------------------------------------------------------------------
	dim stParamNames[16]
		stParamNames[1] = "gs_list_cost"
		stParamNames[2] = "gs_list_manufacturer"
		stParamNames[3] = "gs_list_note"
		stParamNames[4] = "gs_list_location"
		stParamNames[5] = "gs_list_accessories"
		stParamNames[6] = "FM_Type"
		stParamNames[7] = "FM_InventoryNumber"
		stParamNames[8] = "FM_SerialNumber"
		stParamNames[9] = "FM_ProductionYear"
		stParamNames[10] = "FM_ObjectWeight"
		stParamNames[11] = "FM_ObjectWeightUnit"
		stParamNames[12] = "gs_list_custom1"
		stParamNames[13] = "gs_list_custom2"
		stParamNames[14] = "gs_list_custom3"
		stParamNames[15] = "gs_list_custom4"
		stParamNames[16] = "gs_list_custom5"

	call "ui_object_listing" parameters all listfieldID = iPageIDDescriptions,
										listFieldPosY = 0,
										listFieldHeight = 265,
										stDescHeader = "",
										stValueHeader = "",
										stParamNames = stParamNames
return
