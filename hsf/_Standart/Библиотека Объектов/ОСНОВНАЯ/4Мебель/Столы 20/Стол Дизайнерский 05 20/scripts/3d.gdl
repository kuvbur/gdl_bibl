
! Design Table 05.gsm

IF gs_shadow=0 THEN SHADOW OFF
IF gs_shadow=1 THEN SHADOW ON

IF gs_detlevel_3D_m = DLEV3D_OFF THEN END
IF gs_detlevel_3D_m = DLEV3D_SIMPLE THEN gs_resol = 4

mag=zzyzx
kmag=mag/24

PEN gs_cont_pen

!****Tabletop
MATERIAL gs_topedge_mat
ADDZ mag-kmag

RESOL 3*gs_resol
CUTPOLYA 2,1,0,
	0,0,979,
	a/2-kmag/2,360,4079

CYLIND kmag,a/2

CUTEND

MATERIAL gs_top_mat
CYLIND kmag,a/2-kmag/2

ADDZ -kmag
CYLIND kmag,a/2-kmag

ADDZ -kmag
CYLIND kmag,a/2-2*kmag
DEL 3


RESOL gs_resol
!****Legs
ADDZ kmag*2
FOR z=1 TO 4
   ADDX A/2-4*kmag
   MATERIAL gs_topedge_mat
   ELLIPS kmag/2, kmag/2

   MATERIAL gs_leg_mat
   ADDY kmag
   CYLIND 18*kmag, kmag/2
gosub 11
   ADDZ 18*kmag

   MATERIAL gs_topedge_mat
   CYLIND kmag, kmag/2
   DEL 1

   MATERIAL gs_leg_mat
   ADDY -kmag*2
   CYLIND 18*kmag, kmag/2
gosub 11
   ADDZ 18*kmag
   MATERIAL gs_topedge_mat
   CYLIND kmag, kmag/2
   DEL 4
   MATERIAL gs_top_mat

   ROTZ 90
NEXT z
DEL 5
RESOL 3*gs_resol
CYLIND kmag,a/2

ADDZ kmag
CYLIND kmag/2,a/2-kmag/2

ADDZ kmag/2
CYLIND kmag/2,a/2-kmag
DEL 2

End

11:
roty 90
gosub 20
del 1
return

20:


vert 0, 0, 0
vert 1, 0, 0
vert 0, 1, 0
vert 0, 0, 1

coor 2, -1, -2, -3, -4

base

body -1
return
