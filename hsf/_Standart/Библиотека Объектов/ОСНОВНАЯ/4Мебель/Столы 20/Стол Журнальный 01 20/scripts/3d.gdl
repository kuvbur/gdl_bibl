
! Coffee Table 01

IF gs_shadow=0 THEN SHADOW OFF


if gs_detlevel_3D_m = DLEV3D_OFF then end
if gs_detlevel_3D_m = DLEV3D_SIMPLE then gs_resol = 4

mulz zzyzx/0.5
mul a/0.6,b/0.6,1
add -0.215,-0.215,0

pen gs_cont_pen
SET MATERIAL gs_leg_mat
RESOL gs_resol

! main bit

ADDZ 0.500
ROTZ 45
ROTX 180
GOSUB 1
DEL TOP

mul a/0.6,b/0.6,1
mulz zzyzx/0.5
add -0.215,-0.215,0
ADD 0.430, 0, 0.500
ROTZ 135
ROTX 180
GOSUB 1
DEL TOP

mul a/0.6,b/0.6,1
mulz zzyzx/0.5
add -0.215,-0.215,0
ADD 0, 0.430, 0.500
ROTZ -45
ROTX 180
GOSUB 1
DEL TOP

mul a/0.6,b/0.6,1
mulz zzyzx/0.5
add -0.215,-0.215,0
ADD 0.430, 0.430, 0.500
ROTZ -135
ROTX 180
GOSUB 1

! horizontal bars

DEL TOP

mul a/0.6,b/0.6,1
mulz zzyzx/0.5
add -0.215,-0.215,0
ADD 0, -0.0125, 0.468
FOR T=1 TO 4
	 BLOCK 0.430, 0.0125, 0.020
	 ADD 0.4425, 0.0125, 0
	 ROTZ 90
NEXT T

! glass top

pen gs_cont_pen
body -1
SET MATERIAL gs_top_mat
DEL TOP

mul a/0.6,b/0.6,1
mulz zzyzx/0.5
add -0.215,-0.215,0
ADD 0.215, 0.215, 0.488
RESOL 2.5*gs_resol
CYLIND 0.010, 0.300

DEL 4
END

1: ! quarter chrome bit

CYLIND 0.450, 0.0125
ADDZ 0.450
ELBOW 0.0375, 90, 0.0125
ADD 0.0375, 0, 0.0375
ROTY 90
CYLIND 0.266, 0.0125

RETURN
