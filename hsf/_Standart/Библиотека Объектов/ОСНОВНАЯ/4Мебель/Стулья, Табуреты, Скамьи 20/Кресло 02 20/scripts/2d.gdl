
! ======================================================================
! SCALE
! ======================================================================

call "2dDetailLevel" parameters gs_detlevel_2D_m = gs_detlevel_2D_m,
				returned_parameters det2D

PEN gs_cont_pen

! === Hotspots ===

unID=1

HOTSPOT2 a/2,0, unID: unID=unID+1
HOTSPOT2 a/2,b/2, unID: unID=unID+1
if det2D <> 4 then
	CALL "Resize_A_B_ZZYZX" Parameters ALL
endif

! === Minimal Space ===
if det2D = 3 or det2D = 2 then
	call "fa_minimalspace" parameters all MSType = 3, unID = 3000
endif
if det2D = 1 then
	call "fa_minimalspace" parameters all MSType = 4, unID = 3000
endif

! === 1/50 ===
if det2D = 3 then

	! --- Background Fill and Symbol

	add2 a/2,0
	rot2 -90

	rr=0.015
	zz=(zzyzx-0.03)/(0.80-0.03)
	bb=(b-0.045)/(0.60-0.045)

	az=zzyzx-0.25*zz-0.04*SIN(10): ax=az*TAN(10)
	xxx=(zz*0.51+0.045-zz*0.25)*TAN(10)
	aza=0.8-0.25-0.04*SIN(10): axa=aza*TAN(10)
	xxxa=(0.51+0.045-0.25)*TAN(10)


	! --- 2D Symbol

	mm=-1
	FOR i=1 TO 2

		POLY2_ 11, 1,
				0, 0, 1,
				0, mm*(a/2-2*rr-0.03), 1,
				-0.03, mm*(a/2-2*rr), 1001,
				-0.02, mm*(a/2-2*rr), 1,
				-0.02, 1, 901,
				-0.02, mm*(a/2), 1001,
				-(b-axa)-xxxa+(zzyzx-gs_seat_height-0.4)*TAN(10), mm*(a/2), 1,
				-(b-axa)-xxxa+(zzyzx-gs_seat_height-0.4)*TAN(10), mm*(a/2-2*rr), 1,
				-(b-0.03), mm*(a/2-2*rr), 1,
				-b, mm*(a/2-2*rr-0.03), 1001,
				-b, 0, 1

		LINE2 -0.03, mm*(a/2-2*rr), -(b-ax)-xxx, mm*(a/2-2*rr)

		POLY2_ 3, 1,
				-(b-xxxa-0.06)+(zzyzx-gs_seat_height-0.4)*TAN(10), 0, 1,
				-(b-xxxa-0.06)+(zzyzx-gs_seat_height-0.4)*TAN(10), mm*(a/2-2*rr-0.03), 1,
				-(b-xxxa-0.06+0.03)+(zzyzx-gs_seat_height-0.4)*TAN(10), mm*(a/2-2*rr), 1001
		mm=1
	NEXT i


	! --- Background Fill

	FILL gs_fill_type
	mm=-1
	FOR i=1 TO 2
		POLY2_B 11, 2+4+64, gs_fill_pen, gs_back_pen,
				0, 0, 0,
				0, mm*(a/2-2*rr-0.03), 0,
				-0.03, mm*(a/2-2*rr), 1000,
				-0.02, mm*(a/2-2*rr), 0,
				-0.02, mm*(a/2-rr), 900,
				-0.02, mm*(a/2), 1000,
				-(b-axa)-xxxa+(zzyzx-gs_seat_height-0.4)*TAN(10), mm*(a/2), 0,
				-(b-axa)-xxxa+(zzyzx-gs_seat_height-0.4)*TAN(10), mm*(a/2-2*rr), 0,
				-(b-0.03), mm*(a/2-2*rr), 0,
				-b, mm*(a/2-2*rr-0.03), 1000,
				-b, 0, 0
		mm=1
	NEXT i


	DEL 1
	del top
endif


! === 1/100 ===
if det2D = 2 then

	add2 a/2, 0
	rot2 -90

	rr=0.015
	zz=(zzyzx-0.03)/(0.80-0.03)
	bb=(b-0.045)/(0.60-0.045)

	az=zzyzx-0.25*zz-0.04*SIN(10): ax=az*TAN(10)
	xxx=(zz*0.51+0.045-zz*0.25)*TAN(10)
	aza=0.8-0.25-0.04*SIN(10): axa=aza*TAN(10)
	xxxa=(0.51+0.045-0.25)*TAN(10)


	! --- 2D Symbol

	mm=-1
	FOR i=1 TO 2

		POLY2_ 6, 1,
			0, 0, 1,
			0, mm*(a/2), 1,
			-(b-axa)-xxxa+(zzyzx-gs_seat_height-0.4)*TAN(10), mm*(a/2), 1,
			-(b-axa)-xxxa+(zzyzx-gs_seat_height-0.4)*TAN(10), mm*(a/2-2*rr), 1,
			-(b), mm*(a/2-2*rr), 1,
			-b, 0, 1

		LINE2 0, mm*(a/2-2*rr), -(b-ax)-xxx, mm*(a/2-2*rr)

		LINE2 -(b-xxxa-0.06)+(zzyzx-gs_seat_height-0.4)*TAN(10), 0,-(b-xxxa-0.06)+(zzyzx-gs_seat_height-0.4)*TAN(10), mm*(a/2-2*rr)
	mm=1
	NEXT i


	! --- Background Fill
	FILL gs_fill_type
	mm=-1
	FOR i=1 TO 2

		POLY2_B 6, 2+4+64, gs_fill_pen, gs_back_pen,
			0, 0, 0,
			0, mm*(a/2), 0,
			-(b-axa)-xxxa+(zzyzx-gs_seat_height-0.4)*TAN(10), mm*(a/2), 0,
			-(b-axa)-xxxa+(zzyzx-gs_seat_height-0.4)*TAN(10), mm*(a/2-2*rr), 0,
			-(b), mm*(a/2-2*rr), 0,
			-b, 0, 0


	mm=1
	NEXT i


	DEL 1
	del top
endif

! === 1/200 ===

if det2D = 1 then
	rect2 0,0,a,b
	GOSUB 10
endif

IF det2D = 4 THEN 	CALL "fa_ChairSymbol" PARAMETERS ALL 						!! Symbolic

end


10:

	FILL gs_fill_type
	POLY2_B 5, 2+64,gs_fill_pen,gs_back_pen,
		0,0,0,
		a,0,0,
		a,b,0,
		0,b,0,
		0,0,0
RETURN

