
! ======================================================================
! SCALE
! ======================================================================

call "2dDetailLevel" parameters gs_detlevel_2D_m = gs_detlevel_2D_m,
				returned_parameters det2D

PEN gs_cont_pen

! === Hotspots ===

unID=1

HOTSPOT2 a/2,0, unID: unID=unID+1
HOTSPOT2 a/2,b/2, unID: unID=unID+1
if det2D <> 4 then
	CALL "Resize_A_B_ZZYZX" Parameters ALL
endif


! === Minimal Space ===
if det2D = 3 then
	call "fa_minimalspace" parameters all MSType = 3, unID = 3000
endif
if det2D = 2 or det2D = 1 then
	call "fa_minimalspace" parameters all MSType = 4, unID = 3000
endif
! === 1/50 ===

if det2D = 3 then

	add2 a/2, 0
	mul2 a/0.5774, b/(0.678+(zzyzx-0.79870707-gs_seat_height+0.34737)*TAN(15))

	ADD2 -0.26, -0.013
	ROT2 90

	POLY2_ 12,5,
		0.013,0,1,
		0.095,0,1,
		0.095,0.02,1,
		0.654869, 0.02, 1,
		0.654869, 0, 1,
		0.691+(zzyzx-0.79870707-gs_seat_height+0.34737)*TAN(15),0,1,
		0.691+(zzyzx-0.79870707-gs_seat_height+0.34737)*TAN(15),-0.52,1,
		0.654869,-0.52,1,
		0.654869,-0.54,1,
		0.095,-0.54,1,
		0.095,-0.52,1,
		0.013,-0.52,1


	LINE2 0.095,0,0.654869,0
	LINE2 0.095,-0.52,0.654869,-0.52
	LINE2 0.488,0,0.488,-0.52


	FILL gs_fill_type
	POLY2_B 12, 2+4+64, gs_fill_pen, gs_back_pen,
		0.013,0,1,
		0.095,0,1,
		0.095,0.02,1,
		0.654869, 0.02, 1,
		0.654869, 0, 1,
		0.691+(zzyzx-0.79870707-gs_seat_height+0.34737)*TAN(15),0,1,
		0.691+(zzyzx-0.79870707-gs_seat_height+0.34737)*TAN(15),-0.52,1,
		0.654869,-0.52,1,
		0.654869,-0.54,1,
		0.095,-0.54,1,
		0.095,-0.52,1,
		0.013,-0.52,1

	DEL 3
	del top

	end
endif


! === 1/100 & 1/200 ===

if det2D = 1 or det2D = 2 then
	fill gs_fill_type
	poly2_b 5, 1+2+64, gs_fill_pen, gs_back_pen,
		0,0,1,
		a,0,1,
		a,b,1,
		0,b,1,
		0,0,-1
endif

if det2D = 2 then		! 1/100
	line2 0,b-(b*0.298), a,b-(b*0.298)
endif


IF det2D = 4 THEN 	CALL "fa_ChairSymbol" PARAMETERS ALL

