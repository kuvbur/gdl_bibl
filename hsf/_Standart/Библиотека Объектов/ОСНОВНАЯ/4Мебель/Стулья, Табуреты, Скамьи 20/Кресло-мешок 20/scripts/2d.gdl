call "2dDetailLevel" parameters gs_detlevel_2D_m = gs_detlevel_2D_m,
				returned_parameters det2D

!!! ******************************** 2D

pen gs_cont_pen
fill gs_fill_type

unID = 1
hotspot2 a/2, b/2, unID : unID = unID + 1
hotspot2 a/2, 0, unID : unID = unID + 1
hotspot2 a/2, b, unID : unID = unID + 1

call "fa_minimalspace" parameters all MSType = 3,unID = 3000

!!! ******************************** 1/50
unID = 10
IF det2D = 3 THEN
	mul2 1, b/kx
	hotspot2 0, 3*x+7*x*sqr(2)/2, unID : unID = unID + 1
	hotspot2 a, 3*x+7*x*sqr(2)/2, unID : unID = unID + 1
	poly2_b 3, 1+2+4+64, gs_fill_pen, gs_back_pen,
			a, 3*x+7*x*sqr(2)/2, 1,
			a/2, 3*x+7*x*sqr(2)/2, 901,
			a/2, 180, 4000
	del 1

	k1=b/kx
	k2=(3*x+7*x*sqr(2)/2)*k1/(a/2)
	mul2 1, k2
	poly2_b 3, 1+2+4+64, gs_fill_pen, gs_back_pen,
			0, (3*x+7*x*sqr(2)/2)*k1/k2, 1,
			a/2, (3*x+7*x*sqr(2)/2)*k1/k2, 901,
			0, 180, 4000
	del 1

	arc2 a/2, b/2-x, 3*x, 70, 110
else
	hotspot2 0, b/2,unID : unID = unID + 1
	hotspot2 a, b/2,unID : unID = unID + 1
	k=b/a
	mul2 1, k
	poly2_b 2, 1+2+4+64, gs_fill_pen, gs_back_pen,
			a/2, b/2/k, 901,
			a/2, 360, 4001
	del 1

endif


