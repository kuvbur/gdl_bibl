
! ======================================================================
! SCALE
! ======================================================================

call "2dDetailLevel" parameters gs_detlevel_2D_m = gs_detlevel_2D_m,
				returned_parameters det2D

! --- 2D SYMBOL ---

if det2D = 1 then			! 1/100
	if iChairModelStyle = 5 then
		CALL "fa_ChairSymbol" PARAMETERS ALL gs_SymbolType_m=3
	else
		CALL "fa_ChairSymbol" PARAMETERS ALL gs_SymbolType_m=1
	endif
endif

if det2D = 2 then			! 1/200
	if iChairModelStyle = 5 then
		CALL "fa_ChairSymbol" PARAMETERS ALL gs_SymbolType_m=3
	else
		CALL "fa_ChairSymbol" PARAMETERS ALL gs_SymbolType_m=1
	endif
endif

if det2D = 3 then			! 1/50

	if iChairModelStyle = 1 or iChairModelStyle = 2 or iChairModelStyle = 3 then
		CALL "fa_ChairSymbol" PARAMETERS ALL gs_SymbolType_m=1
	endif

	if iChairModelStyle = 4 or iChairModelStyle = 5 then
		! minimal space
		CALL "fa_ChairSymbol" PARAMETERS ALL gs_SymbolType_m=0

		! 2D Symbol
		pen gs_cont_pen

		if iChairModelStyle = 4 then
			IF det2D <>1 THEN
				ARC2 0,0,A/2-A/15,0,360
			endif

			IF det2D = 3 THEN
				ROT2 45
				FOR I=1 TO 4
					RECT2 -A/2,-A/20,-A/2+A/15,A/20
					ROT2 90
				NEXT I
				DEL 5
			endif

			! Background fill
			FILL gs_fill_type

			POLY2_B 2, 1+2+4+64, gs_fill_pen, gs_back_pen,
					0,0,901,
					A/2,360,4001
		endif
		if iChairModelStyle = 5 then
			IF det2D = 3 THEN
				RECT2 -A/2-MIN(A,B)/60,-B/2-MIN(A,B)/60,A/2+MIN(A,B)/60,B/2+MIN(A,B)/60
				FILL gs_fill_type
				POLY2_B 5, 1+2+4+64, gs_fill_pen, gs_back_pen,
						-A/2-MIN(A,B)/60,-B/2-MIN(A,B)/60,1,
						-A/2-MIN(A,B)/60,B/2+MIN(A,B)/60,1,
						A/2+MIN(A,B)/60,B/2+MIN(A,B)/60,1,
						A/2+MIN(A,B)/60,-B/2-MIN(A,B)/60,1,
						-A/2-MIN(A,B)/60,-B/2-MIN(A,B)/60,-1
			else
				FILL gs_fill_type
				POLY2_B 5, 1+2+4+64, gs_fill_pen, gs_back_pen,
						-A/2,-B/2,1,
						-A/2,B/2,1,
						A/2,B/2,1,
						A/2,-B/2,1,
						-A/2,-B/2,-1
			endif
			rect2 -A/2,-B/2,A/2,B/2
			hotspot2 0,-B/2
		endif
	endif

endif

if det2D = 4 then			! Symbolic
	CALL "fa_ChairSymbol" PARAMETERS ALL
endif
