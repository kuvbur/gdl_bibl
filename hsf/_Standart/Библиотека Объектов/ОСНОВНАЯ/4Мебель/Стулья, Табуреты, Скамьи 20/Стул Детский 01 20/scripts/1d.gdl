! ------------------------------------------------------------------------------
! Variables and coordinates for 3D geometry
! ------------------------------------------------------------------------------

_armHeight = 0.25
_lidHeight = 0.02
_seatThick 	= 0.05
_seatRad	= 0.05
_seatHeight = gs_seat_height-_seatThick
_Mul1 = 0.7

_armWidthBot	= 0.160
_armWidthTop	= _armWidthBot * _Mul1 	
_armThickBot	= 0.100
_armThickTop	= _armThickBot * _Mul1	
_Ang1			= atn (_armHeight/(_armThickBot-_armThickTop))
_Ang2			= atn(_armHeight/ (_armWidthBot-_armWidthTop))
_Rad			= _armThickBot/2

_backHeight		= ZZYZX -_lidHeight- _seatHeight	
_backThickBot	= 0.10

_backWidth2			= (_seatHeight+_backHeight)/tan(_Ang1)
_backWidth1			= _backHeight/tan(_Ang1)
_backWidthTopFix	= 0.10
_backWidthBotFix	= _backWidthTopFix + _backWidth1
_Mul2				= _backWidthTopFix / _backWidthBotFix
_backWidthDelta 	= A-_armThickBot- 2*_backWidth2 - 2*_backWidthTopFix
_backWidthTop		= _backWidthDelta + 2*_backWidthTopFix

_backWidthBot		= _backWidthTop+ 2* _backWidth1
_backThickTop		= _backThickBot*_Mul2
_Ang3				= atn(_backHeight/ (_backThickBot-_backThickTop))


_length1			= _seatHeight/tan(_Ang2)
_length2			= _backThickBot +  tan(90-_Ang3)*_seatHeight
_armWidthDelta		= (B-_length2-_length1-_armWidthBot*2)/2
_seatWidth			= _backWidthBot - _armThickBot
_seatDepth			= _armWidthBot*2+ _armWidthDelta*2



_trayDepth			= _armWidthDelta+_armWidthTop+0.24
_trayEdge			= 0.02	
_trayRad			= (_armThickBot-_armThickTop) /2

_RodWidth			= _armWidthTop*0.45
_RodRad				= _RodWidth/2 - 0.001



