
hideparameter all "A", "B", "zzyzx"

call "FM_types" parameters all

values{2} "iChairModelStyle" 	CHAIRMODEL_STYLE1, `Стиль 1`,
								CHAIRMODEL_STYLE2, `Стиль 2`,
								CHAIRMODEL_STYLE3, `Стиль 3`,
								CHAIRMODEL_STYLE4, `Стиль 4`,
								CHAIRMODEL_STYLE5, `Стиль 5`,
								CHAIRMODEL_STYLE6, `Стиль 6`,
								CHAIRMODEL_STYLE7, `Стиль 7`
values{2} "gs_detlevel_3D_m" 	DLEV3D_DETAILED, `Детальный`,
								DLEV3D_SIMPLE, `Простой`,
								DLEV3D_OFF, `Откл.`

call "2dDetailLevel" parameters gs_detlevel_2D = gs_detlevel_2D,
								gs_detlevel_2D_m = gs_detlevel_2D_m,
				returned_parameters det2D

if gs_detlevel_2D_m <> 4 then
	HIDEPARAMETER "gs_SymbolType"
	lock "gs_SymbolType", "gs_SymbolType_m"
endif

call "fa_ChairSymbol" parameters all stSymbolTypes = stSymbolTypes

if iChairModelStyle <> CHAIRMODEL_STYLE3 then
	lock "gs_armrest"
	hideparameter "gs_armrest"
endif

IF gs_cont_pen=0 THEN parameters gs_cont_pen=4
IF gs_fill_pen=0 THEN PARAMETERS gs_fill_pen=19

values "gs_resol" range [3,)

if gs_detlevel_3D_m = DLEV3D_SIMPLE then
	lock "gs_resol"
	hideparameter "gs_resol"
endif

if gs_detlevel_3D_m = DLEV3D_OFF then
	lock "gs_resol", "gs_shadow", "gs_full_edit"
	hideparameter "gs_resol", "gs_shadow", "gs_full_edit"
endif


! --- Setting range for ZZYZX and seat height

_minSeatHeight 		= 0.1
if iChairModelStyle = CHAIRMODEL_STYLE7 then _minSeatHeight		= 0.25
_minBackrestHeight	= 0
if iChairModelStyle = CHAIRMODEL_STYLE1 then _minBackrestHeight = 0.32
if iChairModelStyle = CHAIRMODEL_STYLE2 then _minBackrestHeight = 0.15
if iChairModelStyle = CHAIRMODEL_STYLE3 then _minBackrestHeight = 0.25
if iChairModelStyle = CHAIRMODEL_STYLE4 then _minBackrestHeight = 0.15
if iChairModelStyle = CHAIRMODEL_STYLE5 then _minBackrestHeight = 0.15
if iChairModelStyle = CHAIRMODEL_STYLE6 then _minBackrestHeight = 0.15
if iChairModelStyle = CHAIRMODEL_STYLE7 then _minBackrestHeight = 0.25

values "ZZYZX" range [_minSeatHeight + _minBackrestHeight, )

if iChairModelStyle = CHAIRMODEL_STYLE1 then
	!gs_seat_height is a locked parameter in Style 1, always set by ZZYZX
	gs_seat_height = ZZYZX - _minBackrestHeight
	parameters gs_seat_height = gs_seat_height
	lock "gs_seat_height"
else
	values "gs_seat_height" range [_minSeatHeight, ZZYZX - _minBackrestHeight]
endif


!!! *** Default Symbolic Value

IF GLOB_MODPAR_NAME = "iChairModelStyle"  THEN
	IF iChairModelStyle = CHAIRMODEL_STYLE1 AND gs_detlevel_2D_m = 4 THEN PARAMETERS gs_SymbolType = `Круглый со Спинкой`
	IF iChairModelStyle = CHAIRMODEL_STYLE4 AND gs_detlevel_2D_m = 4 THEN PARAMETERS gs_SymbolType = `Круглый со Спинкой`
	IF iChairModelStyle = CHAIRMODEL_STYLE7 AND gs_detlevel_2D_m = 4 THEN PARAMETERS gs_SymbolType = `Круглый со Спинкой`

	IF iChairModelStyle = CHAIRMODEL_STYLE2 AND gs_detlevel_2D_m = 4 THEN PARAMETERS gs_SymbolType = `Прямоугольный со Спинкой 1`
	IF iChairModelStyle = CHAIRMODEL_STYLE3 AND gs_detlevel_2D_m = 4 THEN PARAMETERS gs_SymbolType = `Прямоугольный со Спинкой 1`
	IF iChairModelStyle = CHAIRMODEL_STYLE5 AND gs_detlevel_2D_m = 4 THEN PARAMETERS gs_SymbolType = `Прямоугольный со Спинкой 1`
	IF iChairModelStyle = CHAIRMODEL_STYLE6 AND gs_detlevel_2D_m = 4 THEN PARAMETERS gs_SymbolType = `Прямоугольный со Спинкой 1`
ENDIF

!!! ******************************** Minimal Space

VALUES "MSFront" RANGE [0,)
VALUES "MSSide" RANGE [0,)
VALUES "MSRear" RANGE [0,)

