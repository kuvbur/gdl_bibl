
! ======================================================================
! SCALE
! ======================================================================

call "2dDetailLevel" parameters gs_detlevel_2D_m = gs_detlevel_2D_m,
				returned_parameters det2D


! --- 2D SYMBOL ---

if det2D = 1 then 	CALL "fa_ChairSymbol" PARAMETERS ALL gs_SymbolType_m=3		! --- 1/200
if det2D = 2 then 	CALL "fa_ChairSymbol" PARAMETERS ALL gs_SymbolType_m=4		! --- 1/100
if det2D = 4 then 	CALL "fa_ChairSymbol" PARAMETERS ALL 						! --- Symbolic

if gs_SymbolType_m=1 OR gs_SymbolType_m=2 then
	if ABS(A-B) > EPS then
		unID = 1
		HOTSPOT2 0,0, unID : unID = unID + 1
		HOTSPOT2 A,0, unID : unID = unID + 1
		HOTSPOT2 A,B, unID : unID = unID + 1
		HOTSPOT2 0,B, unID : unID = unID + 1
	endif
endif

! --- 1/50 ---
IF det2D = 3 THEN

	PEN gs_cont_pen
	! --- Minimal Space and Hotspots ---

	CALL "fa_ChairSymbol" PARAMETERS ALL gs_SymbolType_m=0

	ADD2 a/2, b/2
	MUL2 1, bm
	ADD2 -A/2, -b/2+wh/SIN(Alfa)/2-wh/COS(Beta)/2
	H=MIN(A/40,B/40)

	! --- Background Fill and Symbol ---

	FILL gs_fill_type
	POLY2_B 4, 1+2+4+64, gs_fill_pen, gs_back_pen,
		0,0,1,
		A,0,1,
		A,B,1,
		0,B,1

	POLY2_B 4, 1+4,gs_fill_pen, gs_back_pen,
		2*th,0,1,
		A-2*th,0,1,
		A-2*th,B-gs_seat_height/TAN(90-Beta),1,
		2*th,B-gs_seat_height/TAN(90-Beta),1

	POLY2_B 4, 1+2+4+64, gs_fill_pen, gs_back_pen,
		0,-wh/SIN(Alfa),1,
		th,-wh/SIN(Alfa),1,
		th,B+wh*SIN(Alfa),1,
		0,B+wh*SIN(Alfa),1

	POLY2_B 4, 1+2+4+64, gs_fill_pen, gs_back_pen,
		A,-wh/SIN(Alfa),1,
		A-th,-wh/SIN(Alfa),1,
		A-th,B+wh*SIN(Alfa),1,
		A,B+wh*SIN(Alfa),1

	POLY2_B 4, 1+2+4+64, gs_fill_pen, gs_back_pen,
		th,B+wh/COS(Beta),1,
		2*th,B+wh/COS(Beta),1,
		2*th,X4-wh*COS(Beta),1,
		th,X4-wh*COS(Beta),1

	POLY2_B 4, 1+2+4+64, gs_fill_pen, gs_back_pen,
		A-th,B+wh/COS(Beta),1,
		A-2*th,B+wh/COS(Beta),1,
		A-2*th,X4-wh*COS(Beta),1,
		A-th,X4-wh*COS(Beta),1

	!!LINE2 th,(B+wh*SIN(Alfa))*0.8,A-th,(B+wh*SIN(Alfa))*0.8
	!!LINE2 th,(B+wh*SIN(Alfa))*0.92,A-th,(B+wh*SIN(Alfa))*0.92
	!!LINE2 th,(B+wh*SIN(Alfa))*0.85,A-th,(B+wh*SIN(Alfa))*0.85
	!!LINE2 th,(B+wh*SIN(Alfa))*0.73,A-th,(B+wh*SIN(Alfa))*0.73

	DEL 3

endif
