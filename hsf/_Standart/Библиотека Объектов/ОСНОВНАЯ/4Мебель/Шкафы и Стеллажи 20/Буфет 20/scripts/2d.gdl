
!! Cupboard.gsm

![#COMPATIBILITY] - START

if iFunctions = -1 then
	gosub "CupboardCompatibility"
endif

![#COMPATIBILITY] - END
PEN gs_cont_pen

CALL "Resize_A_B_ZZYZX" Parameters ALL

unID = 1
HOTSPOT2 0,b,		unID : unID = unID + 1
HOTSPOT2 a/2,b,		unID : unID = unID + 1
HOTSPOT2 a/2,b/2,	unID : unID = unID + 1


!!!!!!!!!!!!!!!!!! *** Minimal space *** !!!!!!!!!!!!!!!!!!!!
call "fa_minimalspace" parameters all MSType = 1, unID = 3000

!!!Functions

if bHangers then
	if iFunctions = HANGERS then
		LINE2 0,b/2,a,b/2
		tempA = a
		gosub "hangers"
	endif
	
	if iFunctions = COMBINED then
		if dn >= 3 then
			insideA = (A/dn)*(dn-2)
		else
			insideA = A/2
			LINE2 a/2,0,a/2,b
		endif
	
		LINE2 insideA,b/2,A,b/2
		ADD2 insideA,0
		LINE2 0,0,0,b
		tempA = a-insideA
		gosub "hangers"
		DEL 1
	endif
endif

!!! 2D Symbol

call "cabSymbolType" parameters all 	bSeparateCabinets 	= 1,
										nDoor 				= dn,
										doorThickness		= fr_th1,
										openingAngle2D		= opa2


END

"hangers":
	ADD2 0.2, (b-0.025)/2
	hn = tempA - 2*0.1
	cn=INT(hn/0.15)
	FOR ii=1 TO cn
		ff=rnd(.2)
		ROT2 ff*100
		line2 -0.025, -0.2, 0.025, 0.2
		DEL 1
		ADD2 0.15, 0
	NEXT ii
	DEL cn
	del 1
return
