			stSymbolTypes[6] = `Стиль 4`
	endif
	
	call "ui_object_2DRepresentation" parameters	iSymbolClass		= 13,
													stSymbolTypes 		= stSymbolTypes,
													iSymbolStyle 		= iSymbolStyle,
													bOpeningAngle		= 1,
													iFillListID			= TABID_2DRepresentation
return

! ------------------------------------------------------------------------------
"3DRepresentationpage":
! ------------------------------------------------------------------------------

	dim surfacesArray[] 
 	SurfItemID = 1   
		surfacesArray[SurfItemID]	= "gs_cabinet_mat"
		SurfItemID = SurfItemID + 1
		if iStyle = 1 then
			if gs_door_type <> `Спец. панель` then
				surfacesArray[SurfItemID]	= "doorframe_mat"
				SurfItemID = SurfItemID + 1
			endif
			if gs_door_type = `Стиль 3` or gs_door_type = `Стиль 5` or gs_door_type = `Стиль 6` or gs_door_type = `Стиль 8` then 
				surfacesArray[SurfItemID]	= "doorglas_mat"
				SurfItemID = SurfItemID + 1
			endif
		endif
		if dwh > EPS then
			surfacesArray[SurfItemID]	= "DrawerFrameMat"
			SurfItemID = SurfItemID + 1
		endif
		if gs_drawer_type = `Стиль 2` then 
			surfacesArray[SurfItemID]	= "DrawerGlasMat"
			SurfItemID = SurfItemID + 1
		endif
		if bCornice then
			surfacesArray[SurfItemID]	= "gs_cornice_mat"
			SurfItemID = SurfItemID + 1
		endif
		if bDrawerKnob and gs_drawer_type <> `Стиль 2` then
			surfacesArray[SurfItemID]	= "matDrawerKnob"
			SurfItemID = SurfItemID + 1
		endif
		if bDoorKnob then
			surfacesArray[SurfItemID]	= "gs_knob_mat"
			SurfItemID = SurfItemID + 1
		endif

	dim childFlagArray[]
	for k = 1 to vardim1(surfacesArray)
		childFlagArray[k]	= 0
	next k
	
	call "ui_object_3DRepresentation" parameters 	bShowAnimation		= 0,
													surfacesArray		= surfacesArray,
													childFlagArray		= childFlagArray,
													gs_detlevel_3D_m	= gs_detlevel_3D_m,
													gs_resol			= gs_resol,
													gs_shadow			= gs_shadow,
													iSurfaceListID		= TABID_3DRepresentation
return

