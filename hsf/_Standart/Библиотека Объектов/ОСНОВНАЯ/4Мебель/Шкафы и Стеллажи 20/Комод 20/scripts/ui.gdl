! ------------------------------------------------------------------------------
"StyleAndDimensionpage":
! ------------------------------------------------------------------------------

	pageStartY = 0
	_infHeight = 19
	_outfHeight = 15
	_yOffset = 4
	widthInf2	= 37
	xPict = 126
	yPict = 127
	PictWidth = 222 
	PictHeight = 117
	x1 = 0
	x2 = 17
	x3 = xPict - 90 - 3
	x4 = xPict - 3
	x5 = 178
	x6 = xPict + 105
	x7 = xPict + PictWidth + 3
	dy1 = 24
	dy2 = 40

	_yCurr = pageStartY
	ui_infield "dnum", x7, _yCurr, 54, _infHeight ui_tooltip `Верхних Ящиков`

	ui_pict_button ui_function, "", "uiFunctionDrawer_flat(1)", 444 - widthInf2, _yCurr-1, widthInf2, 22, -TABID_Drawer ! Set GLOB_UI_BUTTON_ID

	_yCurr = _yCurr + _yOffset
	ui_outfield `Стиль Корпуса`, x1, _yCurr, x6 - 2, _outfHeight
	ui_outfield `Верхних Ящиков`, x6, _yCurr, 119, _outfHeight

	_yCurr = _yCurr - _yOffset + dy1
	ui_infield{3} "iStyle", x2, _yCurr, 195, _infHeight,
			8, "",
			0, 0,
			0, 0, 0, 0,
			"", stStyles[1], 1,
			"", stStyles[2], 2 ui_tooltip `Стиль`
	ui_pict_button ui_function, "", "uiFunctionDrawerKnob_flat(1)", 444 - widthInf2, _yCurr-1, widthInf2, 22, -TABID_Knob ! Set GLOB_UI_BUTTON_ID

	_yCurr = _yCurr + _yOffset
	ui_outfield `Ручки`, x6, _yCurr, 210 - widthInf2, _outfHeight

	_yCurr = _yCurr - _yOffset + dy1
	ui_infield "dn", x4, _yCurr, 54, _infHeight ui_tooltip `Кол-во Дверей`
	
	ui_infield{3} "bCornice", x6, _yCurr, 210, _infHeight,
					7, "",
					2, 0,
					0, 0, 0, 0,
					"", `Карниз`, 0,
					"", `Карниз`, 1
	ui_pict_button ui_function, "", "uiFunctionDoor_flat(1)", x5, _yCurr-1, widthInf2, 22, -TABID_Door ! Set GLOB_UI_BUTTON_ID

	_yCurr = _yCurr + _yOffset
	ui_outfield `Кол-во Дверей`, x1, _yCurr, 120, _outfHeight, 4 * (iStyle = 2)

	_yCurr = _yCurr - _yOffset + dy1
	ui_infield{3} "bShelves", x1, _yCurr, 120, _infHeight,
				7, "",
				2, 0,
				0, 0, 0, 0,
				"", `Полки`, 0,
				"", `Полки`, 1
	ui_infield "iNumShelves", x4, _yCurr, 54, _infHeight ui_tooltip `Количество Полок (Внизу)`
	ui_infield{3} "bBase", x6, _yCurr, 210 - widthInf2, _infHeight,
					7, "",
					2, 0,
					0, 0, 0, 0,
					"", `Основание`, 0,
					"", `Основание`, 1
	ui_pict_button ui_function, "", "uiFunctionLeg_flat(1)", 444 - widthInf2, _yCurr-1, widthInf2, 22, -TABID_CorniceAndBase ! Set GLOB_UI_BUTTON_ID

	_yCurr = _yCurr + dy1
	ui_separator x1, _yCurr, 444, _yCurr

	if iStyle = 1 then
		ui_pict 3, xPict, yPict, PictWidth, PictHeight, 1
	else
		ui_pict 2, xPict, yPict, PictWidth, PictHeight, 1
	endif

	_yCurr = yPict - _infHeight - 3
	ui_infield "A", x6, _yCurr, 90, _infHeight ui_tooltip `Размер 1`
	ui_infield "B", x4, _yCurr, 90, _infHeight ui_tooltip `Размер 2`

	_yCurr = yPict + 16
	ui_infield "dwh", x3, _yCurr, 90, _infHeight ui_tooltip `Высота Верхних Ящиков (0-Нет)`
	
	_yCurr = yPict + 50
	ui_infield "zzyzx", x7, _yCurr, 90, _infHeight ui_tooltip `Общая Высота`

return

