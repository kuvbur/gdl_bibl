! ------------------------------------------------------------------------------
"StyleAndDimensionpage":
! ------------------------------------------------------------------------------
	pageStartY = 0
	_infHeight = 19
	_outfHeight = 15
	_yOffset = 4
	widthInf2	= 37
	xPict = 126
	yPict = 80
	PictWidth = 222 
	PictHeight = 164
	_outfFlag = 0
	x1 = 0
	x2 = 160
	x3 = 231
	x4 = xPict - 93
	x5 = xPict - 3
	x6 = xPict + 105
	x7 = xPict + PictWidth +3
	dy1 = 24
	dy2 = 40

	_yCurr = pageStartY
	ui_infield{3} "bShelves", x1, _yCurr, x2 - 3, _infHeight,
					7, "",
					0, 0,
					0, 0, 0, 0,
					"", `Полки`, 0,
					"", `Полки`, 1
	ui_infield "iNumShelves", x2, _yCurr, 54, _infHeight  ui_tooltip `Кол-во Полок`
	ui_infield{3} "bCornice", x3, _yCurr, 210, _infHeight,
					7, "",
					0, 0,
					0, 0, 0, 0,
					"", `Карниз`, 0,
					"", `Карниз`, 1

	_yCurr = _yCurr + dy1
	ui_infield{3} "bVerticalPanels", x1, _yCurr, x2 - 3, _infHeight,
					7, "",
					0, 0,
					0, 0, 0, 0,
					"", `Вертикальные Панели`, 0,
					"", `Вертикальные Панели`, 1
	ui_infield "iNumVertPanels", x2, _yCurr, 54, _infHeight ui_tooltip `Количество Вертикальных Панелей`
	ui_infield{3} "bBase", x3, _yCurr, 210 - widthInf2, _infHeight,
					7, "",
					0, 0,
					0, 0, 0, 0,
					"", `Основание`, 0,
					"", `Основание`, 1

	ui_pict_button ui_function, "", "uiFunctionLeg_flat(1)", 444 - widthInf2, _yCurr-1, widthInf2, 22, -TABID_CorniceAndBase ! Set GLOB_UI_BUTTON_ID

	_yCurr = _yCurr + dy1
	ui_separator x1, _yCurr, 444, _yCurr

	ui_pict 1, xPict, yPict, PictWidth, PictHeight, 1

	_yCurr = yPict - _infHeight - 3
	ui_infield "B", x5, _yCurr, 90, _infHeight ui_tooltip `Размер 2`
	ui_infield "A", x6, _yCurr, 90, _infHeight ui_tooltip `Размер 1`

	_yCurr = yPict + 11
	ui_infield "cot", x4, _yCurr, 90, _infHeight ui_tooltip `Толщина Карниза`

	_yCurr = _yCurr + dy2
	ui_infield "shelfThk", x4, _yCurr, 90, _infHeight ui_tooltip `Толщина Полок`

	_yCurr = _yCurr + dy2

	dimensionForm = ""
	 qq= REQUEST ("Working_length_unit", "", dimensionForm)

	if not(bShelves) then _outfFlag = 4
	ui_outfield str(dimensionForm, shelfThk), x4, _yCurr, 90, _outfHeight, _outfFlag + 1 ui_tooltip `Толщина Полок`

	_yCurr = _yCurr + dy2
	ui_outfield str(dimensionForm, shelfThk), x4, _yCurr, 90, _outfHeight, _outfFlag + 1 ui_tooltip `Толщина Полок`

	_outfFlag = 4
	_yCurr = _yCurr + dy1 - 3
	ui_infield "bpt", x4, _yCurr, 90, _infHeight ui_tooltip `Толщина Задней Панели`

	_yCurr = yPict + 70
	ui_infield "zzyzx", x7, _yCurr, 90, _infHeight ui_tooltip `Общая Высота`

	_yCurr = _yCurr + dy2 * 2
	ui_infield "spt", x7, _yCurr, 90, _infHeight ui_tooltip `Толщина Боковых Стенок`

	_yCurr = yPict + PictHeight + 4
	ui_infield "vpt", x6, _yCurr - 4, 90, _infHeight ui_tooltip `Толщина Внутренних Перегородок`

	ui_outfield str(dimensionForm, spt), x6 - 100, _yCurr, 90, _outfHeight, 1 ui_tooltip `Толщина Боковых Стенок`


return

