
! =============================================================================
! Tabpage Structure Definition
! =============================================================================
TABID_Root 					=-1
_idxTab = 1
TABID_StyleAndDimensions	= _idxTab  : _idxTab = _idxTab + 1
TABID_Base					= _idxTab  : _idxTab = _idxTab + 1
TABID_2DRepresentation		= _idxTab  : _idxTab = _idxTab + 1
TABID_3DRepresentation		= _idxTab  : _idxTab = _idxTab + 1
TABID_MinimalSpace			= _idxTab  : _idxTab = _idxTab + 1
TABID_Descriptions			= _idxTab  : _idxTab = _idxTab + 1

! =============================================================================
! Display actual tabpages
! =============================================================================
ui_dialog `Параметры Шкафов`
ui_current_page gs_ui_current_page

ui_page TABID_StyleAndDimensions, TABID_Root, `Стиль и Размеры`, "uiTab_Dimension_flat(1)"
	gosub "StyleAndDimensionpage"

ui_page TABID_Base, TABID_StyleAndDimensions, `Основание`, "uiTab_Leg_flat(1)"
	gosub "Basepage"

ui_page TABID_2DRepresentation, TABID_Root, `2D-отображение`, "uiTab_2DRepr_flat(1)"
	gosub "2DRepresentationpage"

ui_page TABID_3DRepresentation, TABID_Root, `3D-отображение и Покрытия`, "uiTab_3DRepr_flat(1)"
	gosub "3DRepresentationpage"

ui_page TABID_MinimalSpace, TABID_Root, `Минимальное Пространство`, "uiTab_MinSpace_flat(1)"
	gosub "MinimalSpacepage"

ui_page TABID_Descriptions, TABID_Root, `Характеристики`, "uiTab_Descriptions_flat(1)"
	gosub "Descriptionspage"

! --------------------------------------------------------------------------------
! Image links for archive
! --------------------------------------------------------------------------------
file_dependence "uiTab_Dimension_flat(1)"
file_dependence "uiTab_Leg_flat(1)"
file_dependence "uiTab_2DRepr_flat(1)"
file_dependence "uiTab_3DRepr_flat(1)"
file_dependence "uiTab_MinSpace_flat(1)"
file_dependence "uiTab_Descriptions_flat(1)"

! ==============================================================================
end
! ==============================================================================


! ==============================================================================
!Subroutines
! ==============================================================================

! ------------------------------------------------------------------------------
"StyleAndDimensionpage":
! ------------------------------------------------------------------------------
	pageStartY = 0
	_infHeight = 19
	_outfHeight = 15
	_yOffset = 4
	widthInf2	= 37
	xPict = 126
	yPict = 127
	PictWidth = 222 
	PictHeight = 117
	x1 = 0
	x2 = 17
	x3 = 123
	x4 = 158
	x5 = 231
	x6 = 389
	x7 = xPict - 90 - 3
	x8 = xPict - 3
	x9 = xPict + 57
	x10 = xPict + 105
	x11 = xPict + PictWidth + 3
	dy = 24
	_outflag = 0

	_yCurr = pageStartY	
	ui_infield "n", x6, _yCurr, 54, _infHeight ui_tooltip `Шкафов по Горизонтали`

	_yCurr = _yCurr + _yOffset
	ui_outfield `Стиль Дверей`, x1, _yCurr, x5 - 2, _outfHeight	
	ui_outfield `Шкафов по Горизонтали`, x5, _yCurr, 155, _outfHeight

	_yCurr = _yCurr - _yOffset + dy
	ui_infield{3} "iDoorType", x2, _yCurr, 195, _infHeight,
			8, "",
			0, 0,
			0, 0, 0, 0,
			"", stDoorType[1], 1,
			"", stDoorType[2], 2,
			"", stDoorType[3], 3,
			"", stDoorType[4], 4,
			"", stDoorType[5], 5 ui_tooltip `Стиль Двери`
	ui_infield "m", x6, _yCurr, 54, _infHeight ui_tooltip `Шкафов по Вертикали`

	_yCurr = _yCurr + _yOffset
	ui_outfield `Шкафов по Вертикали`, x5, _yCurr, 155, _outfHeight

	_yCurr = _yCurr - _yOffset + dy
	ui_infield "frameWidth", x3, _yCurr, 90, _infHeight ui_tooltip `Ширина Обвязки`
	ui_infield{3} "bBase", x5, _yCurr, 210 - widthInf2, _infHeight,
					7, "",
					2, 0,
					0, 0, 0, 0,
					"", `Основание`, 0,
					"", `Основание`, 1
	ui_pict_button ui_function, "", "uiFunctionLeg_flat(1)", 444 - widthInf2, _yCurr-1, widthInf2, 22, -TABID_Base ! Set GLOB_UI_BUTTON_ID

	_yCurr = _yCurr + _yOffset
	if iDoorType <> 5 or gs_detlevel_3D_m = 1 then _outflag = 4
	ui_outfield `Толщина Стенок`, x1, _yCurr, 120, _outfHeight, _outflag

	_yCurr = _yCurr - _yOffset + dy
	ui_infield{3} "NumPlate", x5, _yCurr, 210, _infHeight,
					7, "",
					2, 0,
					0, 0, 0, 0,
					"", `Показать Номера`, 0,
					"", `Показать Номера`, 1
	_yCurr = _yCurr + dy
	ui_separator x1, _yCurr, 444, _yCurr

	ui_pict 1, xPict, yPict, PictWidth, PictHeight, 1

	_yCurr = yPict - _infHeight - 3
	ui_infield "B", x8, _yCurr, 90, _infHeight ui_tooltip `Длина`
	ui_infield "A", x10, _yCurr, 90, _infHeight ui_tooltip `Ширина`

	_yCurr = yPict + 37
	ui_infield "zzyzx", x11, _yCurr, 90, _infHeight ui_tooltip `Высота`

	_yCurr = yPict + 60
	ui_infield "height", x7, _yCurr, 90, _infHeight ui_tooltip `Высота Шкафа`

	_yCurr = yPict + PictHeight + 3
	ui_infield "width", x9, _yCurr, 90, _infHeight ui_tooltip `Ширина Шкафа`
return

