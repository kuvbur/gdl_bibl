
pen gs_cont_pen
fill gs_fill_type

! ==============================================================================
! 		Hotspot Editing
! ==============================================================================

unID = 1
hotspot2 A/2, 0, unID :		unID = unID + 1
hotspot2 A/2, B, unID :		unID = unID + 1
hotspot2 A, B/2, unID :		unID = unID + 1
hotspot2 0, B/2, unID :		unID = unID + 1
hotspot2 A/2, B/2, unID :	unID = unID + 1

call "Resize_A_B_ZZYZX" parameters all


! ==============================================================================
! 		Tabletop Rect.
! ==============================================================================

drawindex 20
poly2_b 4, 1+2+4+64,
	gs_fill_pen, gs_back_pen,
	0,	0,	1,
	A,	0,	1,
	A,	B,	1,
	0,	B,	1


! ==============================================================================
! 		Minimal Space
! ==============================================================================

add2 A/2 - MSLength/2, B
mul2 1, -1

drawindex 10
call "fa_minimalspace" parameters all A = 0, MSType = 12, unID = 3000,
			returned_parameters reqBMinSpace

if reqBMinSpace then
	hotspot2 0, 0, 30000
endif

del 2

