DETLEV_3D_OFF      = 0
DETLEV_3D_SIMPLE   = 1
DETLEV_3D_DETAILED = 2
DETLEV_3D_DRAFT    = 3

if gs_tap_type_m > 25 then
	if gs_tap_type_m = 26 then
		widthTap	= 0.3
		limit_X		= widthTap/2
		limit_Y1	= 0.35
		limit_Y2	= 1.04
	endif
	if gs_tap_type_m = 27 then
		widthTap	= 0.16
		limit_X		= widthTap/2
		limit_Y1	= 0.13
		limit_Y2	= 0.13
	endif
else
	widthTap = 0.068
	posTap = 0.041
endif

! Show MEP Connections -------------------------------------------------------------[

isavailable = 0
isInArchiCAD = APPLICATION_QUERY ("MEPMODELER", "IsAvailable()", isavailable)
isMEPEnabled = (isavailable OR isInArchiCAD = 0)
if isMEPEnabled then
	bShowMEP = 1
	reqBMep = 0
	success = LIBRARYGLOBAL ("LibraryGlobals13", "showMepConnect", reqBMep)
	if success > 0 then
		bShowMEP = reqBMep
	endif
else
	bShowMEP = 0
endif

