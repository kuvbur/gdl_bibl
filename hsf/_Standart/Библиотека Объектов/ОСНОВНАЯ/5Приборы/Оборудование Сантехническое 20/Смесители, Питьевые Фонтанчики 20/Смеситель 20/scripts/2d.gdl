call "tapType_m" parameters all	bEnableTapEdit		= 0,
								bSinkTap			= 0,
								useOldSimpleTaps	= 1,
								returned_parameters xShowerPos

IF TapSymbol_m=2 THEN	!  2D Detailed

	IF gs_tap_type_m=1 then
	HOTSPOT2 0,-0.1141964857131
	!!HOTSPOT2 0, 0.025
	ENDIF

	IF gs_tap_type_m=2 then
	HOTSPOT2 0, -0.226744
	ENDIF

	IF gs_tap_type_m=3 then
	HOTSPOT2 0, -0.2129492160763
	ENDIF

	IF gs_tap_type_m=4 then
	HOTSPOT2 0.0,    -0.1608
	ENDIF

	IF gs_tap_type_m=5 then
	HOTSPOT2 0, -0.2495926594658
	ENDIF

	IF gs_tap_type_m=6 then
	MUL2 0.75,0.75
	HOTSPOT2 0, -0.1719852461219
	del 1
	ENDIF

	IF gs_tap_type_m=7 then
	HOTSPOT2 0, -0.1768619227487
	ENDIF

	IF gs_tap_type_m=8 then
	HOTSPOT2  -0.05, -0.08935091890625
	HOTSPOT2  0.05, -0.08929508041844
	ENDIF

	IF gs_tap_type_m=9 then
	HOTSPOT2 0, -0.1794389031817
	ENDIF

	IF gs_tap_type_m=10 then
	Add2 0,0.02
	HOTSPOT2 0.0,    -0.1295138948753
	del 1
	ENDIF

	IF gs_tap_type_m=11 then
	MUL2 0.75,0.75
	HOTSPOT2 0, -0.1719852461219
	del 1
	ENDIF

	IF gs_tap_type_m=12 then
	HOTSPOT2 0.0,     -0.1608
	ENDIF

	IF gs_tap_type_m=13 then
	HOTSPOT2 0.0,     -0.044
	ENDIF

	IF gs_tap_type_m > 13 then
	HOTSPOT2 0, 0
	ENDIF
ENDIF

if bShower then
	unID = 1
	hotspot2 xShowerPos, 0, 		unID, yWallPos, 1+128 : unID=unID+1
	hotspot2 xShowerPos, yWallPos, 	unID, yWallPos, 2 : unID=unID+1
	hotspot2 xShowerPos, -1, 		unID, yWallPos, 3 : unID=unID+1
endif
