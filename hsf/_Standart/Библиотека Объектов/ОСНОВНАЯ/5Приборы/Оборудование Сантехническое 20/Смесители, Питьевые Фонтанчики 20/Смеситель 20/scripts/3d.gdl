
! ==============================================================================
! Tap
! ==============================================================================

addz mountingHeight

unID = 1
if gs_detlevel_3D_m <> 0 then 
  hotspot 0,0,0, unID : unID = unID + 1
endif

call "tapType_m" parameters all	bEnableTapEdit		= 0,
								bSinkTap			= 0,
								useOldSimpleTaps	= 1,
								returned_parameters xShowerPos

if bShower then
	hotspot xShowerPos, 0, 			0,	unID, yWallPos, 1+128 : unID=unID+1
	hotspot xShowerPos, yWallPos, 	0,	unID, yWallPos, 2 : unID=unID+1
	hotspot xShowerPos, -1, 		0,	unID, yWallPos, 3 : unID=unID+1
endif
