! Minimal Space
! -----------------------------------------------------------------------------
drawindex 10
gosub "minimalspace"

! -----------------------------------------------------------------------------
! MEP Connections
! -----------------------------------------------------------------------------
if bShowMEP then
	gosub "mepconnection"
endif


end

