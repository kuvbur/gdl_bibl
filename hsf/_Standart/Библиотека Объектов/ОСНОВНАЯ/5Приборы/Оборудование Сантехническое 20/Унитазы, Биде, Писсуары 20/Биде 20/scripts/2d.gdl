		line2       -0.185017, -8.4496992577E-017,    -0.185017,        -0.33
		arc2     0.0224999967701,        -0.33, 0.16250000149, 306.869897646,            0
		arc2     -0.0225000008937, -0.329999999142, 0.16250000149,          180, 233.1301023541
		arc2     3.52242540691E-013, -0.29999999795, 0.200000001192, 233.1301023541, 306.8698965533
		arc2     -0.0225000008937, -0.329999999142, 0.16250000149,          180, 233.1301023541
		arc2     1.28670886966E-009, -0.299999998379, 0.200000001621, 233.1301019857, 269.9999999997

