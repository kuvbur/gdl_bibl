
! Fiber Insulation

pen gs_cont_pen

if abs(B) < 0.0001 then ! B is near zero
	text2 0,B, `Нулевая высота!`
	end
endif

if abs(A) < 0.0001 then ! too narrow to be displayed
	A = 0.0001
endif

x = 1.2719          ! one period of the meander
y = 2.9902          ! to keep the shape undistorted
nFullPeriods = round_int((A/x)/(B/y))

if nFullPeriods = 0 then
	! the drawing will be distorted bu t visible
	nFullPeriods = 1
endif

hotspot2 0,b
hotspot2 0,b/2
hotspot2 a,b/2


mul2 A/x/nFullPeriods, B/y

for i=1 to nFullPeriods
	line2    0.689352273941, 0.891054272652, 1.21845602989,  2.099173069
	line2    0.0534162521362,  2.099173069, 0.58251953125, 0.891054272652
	arc2     0.635936498642, 2.35429143906, 0.635936200619, 336.3486495263, 203.6513108595
	arc2     1.27187228203, 0.635936379433, 0.635936200619, 156.3487128192, 270.0000006833
	arc2     0, 0.635936141014, 0.635936200619, 270.0000006833, 23.65132121829
	add2 x,0
next i


end
