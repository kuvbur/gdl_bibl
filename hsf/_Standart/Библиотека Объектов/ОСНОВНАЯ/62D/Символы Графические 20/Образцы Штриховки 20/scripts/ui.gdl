
ui_current_page gs_ui_current_page

TABID_ROOT			= -1
TABID_GENERAL			=  1

if TABID_GENERAL > 0 then
	ui_page TABID_GENERAL, TABID_ROOT, `Общие Параметры`, "uiTab_Dimension_flat(1)"
	gosub "generalPage"
endif

! =============================================================================
end
! =============================================================================

"generalPage":
	pageStartY = 5	

	UI_STYLE 0,0
	UI_PICT 1, 10, pageStartY + 10, 150, pageStartY + 95
	
	UI_OUTFIELD `Этот объект предназначен для отображения наименований и индексов штриховки.`, 190,20,230,45
	UI_OUTFIELD `Выведите таблицу на принтер/плоттер, чтобы проверить правильность вывода на печать.`, 190,60,230,55
	
	
	xDescript1 = 20
	xDescript2 = 220
	
	y = pageStartY + 135
	widthDescript = 110
	xBox1 = 150
	xBox2 = 380
	
	widthBox1 = 50
	
	heightRow = 18
	dy = 25
	
	UI_OUTFIELD `Кол-во Образцов`, 	xDescript1,	y,	widthDescript,	heightRow
	UI_INFIELD "nFills",			xBox1,		y,	widthBox1,		heightRow
	y = y + dy
	
	UI_OUTFIELD `Образцов в Строке`,	xDescript1,	y,	widthDescript,	heightRow
	UI_INFIELD "nFillsInARow", 		xBox1,		y,	widthBox1,		heightRow
	y = y + dy
	
	UI_OUTFIELD `Перо Штриховки`,			xDescript1,	y,	widthDescript,	heightRow
	UI_INFIELD "fillPen",			xBox1,		y,	widthBox1,		heightRow
	y = y + dy
	
	UI_OUTFIELD `Перо Фона Штриховки`,	xDescript1,	y,	widthDescript,	heightRow
	UI_INFIELD "fillBkgPen"	,			xBox1,		y,	widthBox1,		heightRow
	
	y = pageStartY + 135
	
	
	UI_OUTFIELD `Шаг по Горизонтали`,	xDescript2 ,y,	widthDescript,	heightRow
	UI_INFIELD "horizDistance", 		xBox2,		y,	widthBox1,		heightRow
	y = y + dy
	
	UI_OUTFIELD `Шаг по Вертикали`,	xDescript2,	y,	widthDescript,	heightRow
	UI_INFIELD "vertDistance",			xBox2,		y,	widthBox1,		heightRow
	y = y + dy
	
	UI_OUTFIELD `Перо Текста`,				xDescript2,	y,	widthDescript,	heightRow
	UI_INFIELD "textPen",				xBox2,		y,	widthBox1,		heightRow
	y = y + dy
	
	ui_infield{3} "bLockSymbol",	xDescript2,		y,		widthDescript,	heightRow ,
			4,"",2,1,
			0,0,0,0,
			1,`Символ Блокировки`, 0,
			2,`Символ Блокировки`, 1
return
