
if GLOB_MODPAR_NAME = "gs_marker_half_width" then
	parameters	gs_marker_width			= 2 * gs_marker_half_width
else
	parameters	gs_marker_half_width  = gs_marker_width / 2
endif

values "gs_marker_width"		range [0,]
values "gs_marker_half_width"	range [0,]


! ==============================================================================
! Marker Style
! ==============================================================================

values "gs_marker_style" 1, 2, 3, 4

for i=1 to 255
	put i
next i
values "gs_backfill_pen_fg" get(nsp)

if not(gs_backfill) then
	lock "gs_backfill_type", "gs_backfill_pen_fg", "gs_backfill_pen_bg"
	hideparameter "gs_backfill_type", "gs_backfill_pen_fg", "gs_backfill_pen_bg"
endif


! ==============================================================================
! Inner Text Settings
! ==============================================================================

values "gs_inner_text" stInnerText

if gs_inner_text_int = 1 then
	! Automatic
	lock "gs_custom_inner_text"
	hideparameter "gs_custom_inner_text"
else
	! Custom
	lock "gs_inner_text_layout_id"
	hideparameter "gs_inner_text_layout_id"
endif

if not(AC_ReferToDrawing) then
	lock "gs_inner_text_layout_id"
	hideparameter "gs_inner_text_layout_id"
endif

if GLOB_MODPAR_NAME = "AC_ReferToDrawing" then	! Init defaults
	if AC_ReferToDrawing then
		gs_inner_text_ie_id		= 0
		gs_inner_text_ie_name	= 0
		gs_inner_text_layout_id	= 1
	else
		gs_inner_text_ie_id		= 1
		gs_inner_text_ie_name	= 1
		gs_inner_text_layout_id	= 0
	endif
	parameters	gs_inner_text_ie_id		= gs_inner_text_ie_id,
				gs_inner_text_ie_name	= gs_inner_text_ie_name,
				gs_inner_text_layout_id	= gs_inner_text_layout_id
endif


! ==============================================================================

if gs_TextPen_1_int < 1 then
	gs_TextPen_1_int = 1
	parameters gs_TextPen_1_int = 1
endif
if gs_TextPen_1_int > 255 then
	gs_TextPen_1_int = 255
	parameters gs_TextPen_1_int = 255
endif

if GLOB_MODPAR_NAME = "gs_TextPen_1_int" then
	parameters AC_TextPen_1 = gs_TextPen_1_int
else
	if AC_TextPen_1 < 1 then
		AC_TextPen_1 = 1
		parameters AC_TextPen_1 = 1
	endif
	parameters gs_TextPen_1_int = AC_TextPen_1
endif


