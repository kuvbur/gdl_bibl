
! Signal Thermostat

call "Switch_symbol" parameters all \
		bHotspotsOnCircle = 0,
		bText = 1,
		iSwitchType = 0


! --- Hotspots ----------
unID=1

unID=unID+1

HOTSPOT2 0, 0, unID, circleRadius, 1+128, circleDiameter            : unID=unID+1
HOTSPOT2 -1, 0, unID, circleRadius, 3+128, circleDiameter           : unID=unID+1
HOTSPOT2 circleDiameter/2, 0, unID, circleRadius, 2, circleDiameter  : unID=unID+1

ROT2 90
	HOTSPOT2 0, 0, unID, circleRadius, 1+128, circleDiameter            : unID=unID+1
	HOTSPOT2 -1, 0, unID, circleRadius, 3+128, circleDiameter           : unID=unID+1
	HOTSPOT2 circleDiameter/2, 0, unID, circleRadius, 2, circleDiameter  : unID=unID+1
DEL 1

ROT2 180
	HOTSPOT2 0, 0, unID, circleRadius, 1+128, circleDiameter           :	unID=unID+1
	HOTSPOT2 -1, 0, unID, circleRadius, 3+128, circleDiameter          : unID=unID+1
	HOTSPOT2 circleDiameter/2, 0, unID, circleRadius, 2, circleDiameter : unID=unID+1
DEL 1

ROT2 270
	HOTSPOT2 0, 0, unID, circleRadius, 1+128, circleDiameter            : unID=unID+1
	HOTSPOT2 -1, 0, unID, circleRadius, 3+128, circleDiameter           : unID=unID+1
	HOTSPOT2 circleDiameter/2, 0, unID, circleRadius, 2, circleDiameter  : unID=unID+1
DEL 1
