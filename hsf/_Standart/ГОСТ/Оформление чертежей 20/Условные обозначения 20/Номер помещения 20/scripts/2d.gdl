DEFINE STYLE "текст" C ,D, 5,1
SET STYLE "текст"
pen E

if H=1 then txt=f else txt=GLOB_ID
paper_scale = GLOB_SCALE/1000



if vartype(txt)=1 then txt = str("%.0",txt)
TEXTBLOCK "txt" 0, 5, 0, width_factor, charspace_factor, 1,txt
REQUEST("TEXTBLOCK_INFO", "txt", width, height)
twidth = width * paper_scale
theight = height * paper_scale

DRAWINDEX 50
RICHTEXT2 0, -theight/5, "txt"
DRAWINDEX 30
IF I=1 THEN 
	Rcir = G/2
	CIRCLE2 0, 0, paper_scale * Rcir
	set fill ff
	POLY2_ 2,1+2+4,0,0,900,paper_scale*Rcir,360,4000+1
endif